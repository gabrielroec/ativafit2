{% doc %}
  @prompt
    generate a new arrival section, The new arrival is a single product not a collection
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-new-arrival-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-new-arrival__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-new-arrival__content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.content_gap }}px;
    align-items: center;
  }

  .ai-new-arrival__content-{{ ai_gen_id }}.reverse {
    direction: rtl;
  }

  .ai-new-arrival__content-{{ ai_gen_id }}.reverse > * {
    direction: ltr;
  }

  .ai-new-arrival__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-new-arrival__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-new-arrival__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-new-arrival__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-new-arrival__badge-{{ ai_gen_id }} {
    position: absolute;
    top: 20px;
    left: 20px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 8px 16px;
    font-size: 14px;
    font-weight: 600;
    border-radius: 4px;
    text-transform: uppercase;
    z-index: 1;
  }

  .ai-new-arrival__text-content-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-new-arrival__label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_size }}px;
    color: {{ block.settings.accent_color }};
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 0 0 12px;
  }

  .ai-new-arrival__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-new-arrival__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 20px;
    line-height: 1.6;
  }

  .ai-new-arrival__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.heading_color }};
    font-weight: 600;
    margin: 0 0 24px;
  }

  .ai-new-arrival__compare-price-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    margin-right: 12px;
    font-size: calc({{ block.settings.price_size }}px * 0.9);
  }

  .ai-new-arrival__sale-price-{{ ai_gen_id }} {
    color: {{ block.settings.sale_price_color }};
  }

  .ai-new-arrival__buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .ai-new-arrival__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    text-align: center;
  }

  .ai-new-arrival__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-new-arrival__button-secondary-{{ ai_gen_id }} {
    background-color: transparent;
    color: {{ block.settings.heading_color }};
    border: 2px solid {{ block.settings.heading_color }};
  }

  .ai-new-arrival__button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.heading_color }};
    color: {{ block.settings.background_color }};
  }

  .ai-new-arrival__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  @media screen and (max-width: 989px) {
    .ai-new-arrival__content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.content_gap | times: 0.7 }}px;
    }

    .ai-new-arrival__content-{{ ai_gen_id }}.reverse {
      direction: ltr;
    }

    .ai-new-arrival__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-new-arrival-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.6 }}px 16px {{ block.settings.section_padding_bottom | times: 0.6 }}px;
    }

    .ai-new-arrival__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
    }

    .ai-new-arrival__text-content-{{ ai_gen_id }} {
      padding: 0;
    }

    .ai-new-arrival__buttons-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-new-arrival__button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<new-arrival-{{ ai_gen_id }} class="ai-new-arrival-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-new-arrival__container-{{ ai_gen_id }}">
    {% if block.settings.product != blank %}
      {% assign product = block.settings.product %}
      
      <div class="ai-new-arrival__content-{{ ai_gen_id }} {% if block.settings.image_position == 'right' %}reverse{% endif %}">
        <div class="ai-new-arrival__image-column-{{ ai_gen_id }}">
          <div class="ai-new-arrival__image-wrapper-{{ ai_gen_id }}">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 1000 }}"
                alt="{{ product.featured_image.alt | escape }}"
                class="ai-new-arrival__image-{{ ai_gen_id }}"
                loading="lazy"
                width="1000"
                height="1000"
              >
            {% else %}
              <div class="ai-new-arrival__image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
            
            {% if block.settings.show_badge %}
              <span class="ai-new-arrival__badge-{{ ai_gen_id }}">{{ block.settings.badge_text }}</span>
            {% endif %}
          </div>
        </div>

        <div class="ai-new-arrival__text-content-{{ ai_gen_id }}">
          {% if block.settings.label != blank %}
            <p class="ai-new-arrival__label-{{ ai_gen_id }}">{{ block.settings.label }}</p>
          {% endif %}

          <h2 class="ai-new-arrival__title-{{ ai_gen_id }}">{{ product.title }}</h2>

          {% if block.settings.show_description and product.description != blank %}
            <div class="ai-new-arrival__description-{{ ai_gen_id }}">
              {{ product.description | strip_html | truncate: 200 }}
            </div>
          {% endif %}

          {% if block.settings.show_price %}
            <div class="ai-new-arrival__price-{{ ai_gen_id }}">
              {% if product.compare_at_price > product.price %}
                <span class="ai-new-arrival__compare-price-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                <span class="ai-new-arrival__sale-price-{{ ai_gen_id }}">{{ product.price | money }}</span>
              {% else %}
                {{ product.price | money }}
              {% endif %}
            </div>
          {% endif %}

          <div class="ai-new-arrival__buttons-{{ ai_gen_id }}">
            <a href="{{ product.url }}" class="ai-new-arrival__button-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </a>
            
            {% if block.settings.show_secondary_button and block.settings.secondary_button_link != blank %}
              <a href="{{ block.settings.secondary_button_link }}" class="ai-new-arrival__button-{{ ai_gen_id }} ai-new-arrival__button-secondary-{{ ai_gen_id }}">
                {{ block.settings.secondary_button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    {% else %}
      <div class="ai-new-arrival__empty-state-{{ ai_gen_id }}">
        <p>Next, select a product to feature as your new arrival</p>
      </div>
    {% endif %}
  </div>
</new-arrival-{{ ai_gen_id }}>

<script>
  (function() {
    class NewArrival{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupAccessibility();
      }

      setupAccessibility() {
        const buttons = this.querySelectorAll('.ai-new-arrival__button-{{ ai_gen_id }}');
        buttons.forEach((button) => {
          button.setAttribute('role', 'link');
        });
      }
    }

    customElements.define('new-arrival-{{ ai_gen_id }}', NewArrival{{ ai_gen_id }});
  })();
</script>

