{% doc %}
  @prompt
    generate a new arrival section
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-new-arrivals-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-new-arrivals__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-new-arrivals__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-new-arrivals__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px;
    font-weight: 600;
  }

  .ai-new-arrivals__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-new-arrivals__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.products_per_row }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: {{ block.settings.button_spacing }}px;
  }

  .ai-new-arrivals__product-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }

  .ai-new-arrivals__product-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-new-arrivals__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    margin-bottom: 12px;
  }

  .ai-new-arrivals__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-new-arrivals__badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    left: 12px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 12px;
    font-size: 12px;
    font-weight: 600;
    border-radius: 4px;
    text-transform: uppercase;
    z-index: 1;
  }

  .ai-new-arrivals__product-info-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .ai-new-arrivals__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-weight: 500;
    line-height: 1.3;
  }

  .ai-new-arrivals__product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 600;
  }

  .ai-new-arrivals__compare-price-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    margin-right: 8px;
  }

  .ai-new-arrivals__sale-price-{{ ai_gen_id }} {
    color: {{ block.settings.sale_price_color }};
  }

  .ai-new-arrivals__button-wrapper-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-new-arrivals__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .ai-new-arrivals__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-new-arrivals__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  @media screen and (max-width: 989px) {
    .ai-new-arrivals__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.products_per_row_tablet }}, 1fr);
    }

    .ai-new-arrivals__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-new-arrivals-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.6 }}px 16px {{ block.settings.section_padding_bottom | times: 0.6 }}px;
    }

    .ai-new-arrivals__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.products_per_row_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.7 }}px;
    }

    .ai-new-arrivals__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
    }

    .ai-new-arrivals__product-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.product_title_size }}px * 0.9);
    }
  }
{% endstyle %}

<new-arrivals-{{ ai_gen_id }} class="ai-new-arrivals-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-new-arrivals__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-new-arrivals__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-new-arrivals__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-new-arrivals__subtitle-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      {% assign products = block.settings.collection.products | limit: block.settings.products_to_show %}
      
      {% if products.size > 0 %}
        <div class="ai-new-arrivals__grid-{{ ai_gen_id }}">
          {% for product in products %}
            <a href="{{ product.url }}" class="ai-new-arrivals__product-{{ ai_gen_id }}">
              <div class="ai-new-arrivals__image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-new-arrivals__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="ai-new-arrivals__image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
                
                {% if block.settings.show_badge %}
                  <span class="ai-new-arrivals__badge-{{ ai_gen_id }}">{{ block.settings.badge_text }}</span>
                {% endif %}
              </div>

              <div class="ai-new-arrivals__product-info-{{ ai_gen_id }}">
                <h3 class="ai-new-arrivals__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                
                {% if block.settings.show_price %}
                  <div class="ai-new-arrivals__product-price-{{ ai_gen_id }}">
                    {% if product.compare_at_price > product.price %}
                      <span class="ai-new-arrivals__compare-price-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                      <span class="ai-new-arrivals__sale-price-{{ ai_gen_id }}">{{ product.price | money }}</span>
                    {% else %}
                      {{ product.price | money }}
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            </a>
          {% endfor %}
        </div>

        {% if block.settings.show_button and block.settings.button_link != blank %}
          <div class="ai-new-arrivals__button-wrapper-{{ ai_gen_id }}">
            <a href="{{ block.settings.button_link }}" class="ai-new-arrivals__button-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </a>
          </div>
        {% endif %}
      {% else %}
        <div class="ai-new-arrivals__empty-state-{{ ai_gen_id }}">
          <p>No products found in this collection.</p>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-new-arrivals__empty-state-{{ ai_gen_id }}">
        <p>Next, select a collection to display new arrivals</p>
      </div>
    {% endif %}
  </div>
</new-arrivals-{{ ai_gen_id }}>

<script>
  (function() {
    class NewArrivals{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupAccessibility();
      }

      setupAccessibility() {
        const products = this.querySelectorAll('.ai-new-arrivals__product-{{ ai_gen_id }}');
        products.forEach((product) => {
          product.setAttribute('role', 'link');
        });
      }
    }

    customElements.define('new-arrivals-{{ ai_gen_id }}', NewArrivals{{ ai_gen_id }});
  })();
</script>

