{% doc %}
  @prompt
    Please build a premium, responsive web section for "Ativafit" based on the provided layout style.
    
    Dimensions & Typography:
    
    Desktop Size: Exactly 2000px width x 1100px height.
    
    Font: Use "Barlow" (Sans-serif) for all text.
    
    Background: Variable color set to #363434.
    
    Interactive Dual Tab System:
    
    Place two centered tabs above the media area: "Exclusive Training" and "Member Rewards".
    
    An active underline (Ativafit Red #E31E24) should switch between them.
    
    Media Container (Crucial):
    
    The video/image container should NOT be full width.
    
    Scale: It should occupy about 60% of the section width, similar to the proportion in the reference image.
    
    Shape: Centered with 20px rounded corners.
    
    Tab 1 Content: A looping 16:9 workout video placeholder.
    
    Tab 2 Content: A high-quality static image showing the "Rewards" program (points, gift cards, equipment).
    
    Text Content:
    
    Main Headline (Top): "Membership is the move" (Bold white Barlow).
    
    Sub-headline (Bottom): >    - For Tab 1: "Stay motivated for the long term."
    
    For Tab 2: "Turn your sweat into rewards."
    
    Description: A short paragraph (2 lines max) centered below the sub-headline.
    
    CTA: A "Learn More" text link with an arrow at the very bottom.
    
    Technical Requirements: > - Use HTML and Tailwind CSS.
    
    Define colors (Background, Accent) as CSS variables at the top for easy adjustment.
    
    Ensure mobile responsiveness (stacked layout).
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-membership-section-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: 60px 20px;
    min-height: 1100px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .ai-membership-container-{{ ai_gen_id }} {
    max-width: 2000px;
    width: 100%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
  }

  .ai-membership-headline-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
    font-size: {{ block.settings.headline_size }}px;
    color: {{ block.settings.headline_color }};
    text-align: center;
    margin: 0;
    line-height: 1.2;
  }

  .ai-membership-tabs-{{ ai_gen_id }} {
    display: flex;
    gap: 40px;
    justify-content: center;
    align-items: center;
    margin-bottom: 20px;
  }

  .ai-membership-tab-{{ ai_gen_id }} {
    background: none;
    border: none;
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.tab_size }}px;
    color: {{ block.settings.tab_color }};
    cursor: pointer;
    padding: 10px 0;
    position: relative;
    transition: color 0.3s ease;
  }

  .ai-membership-tab-{{ ai_gen_id }}:hover {
    color: {{ block.settings.tab_active_color }};
  }

  .ai-membership-tab-{{ ai_gen_id }}.active {
    color: {{ block.settings.tab_active_color }};
  }

  .ai-membership-tab-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background-color: {{ block.settings.tab_active_color }};
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .ai-membership-tab-{{ ai_gen_id }}.active::after {
    transform: scaleX(1);
  }

  .ai-membership-media-container-{{ ai_gen_id }} {
    width: {{ block.settings.media_width }}%;
    max-width: 100%;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    position: relative;
    aspect-ratio: 16 / 9;
    background-color: #000000;
  }

  .ai-membership-tab-content-{{ ai_gen_id }} {
    display: none;
    width: 100%;
    height: 100%;
  }

  .ai-membership-tab-content-{{ ai_gen_id }}.active {
    display: block;
  }

  .ai-membership-video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-membership-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-membership-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #2a2a2a;
  }

  .ai-membership-placeholder-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    opacity: 0.3;
  }

  .ai-membership-text-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    text-align: center;
    max-width: 800px;
  }

  .ai-membership-subheadline-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.subheadline_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.3;
  }

  .ai-membership-description-{{ ai_gen_id }} {
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0;
    max-width: 600px;
  }

  .ai-membership-cta-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-size: {{ block.settings.cta_size }}px;
    color: {{ block.settings.cta_color }};
    text-decoration: none;
    margin-top: 8px;
    transition: gap 0.3s ease;
  }

  .ai-membership-cta-{{ ai_gen_id }}:hover {
    gap: 12px;
  }

  .ai-membership-cta-arrow-{{ ai_gen_id }} {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }

  .ai-membership-cta-{{ ai_gen_id }}:hover .ai-membership-cta-arrow-{{ ai_gen_id }} {
    transform: translateX(4px);
  }

  @media screen and (max-width: 749px) {
    .ai-membership-section-{{ ai_gen_id }} {
      padding: 40px 16px;
      min-height: auto;
    }

    .ai-membership-container-{{ ai_gen_id }} {
      gap: 24px;
    }

    .ai-membership-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.6 }}px;
    }

    .ai-membership-tabs-{{ ai_gen_id }} {
      gap: 20px;
      margin-bottom: 16px;
    }

    .ai-membership-tab-{{ ai_gen_id }} {
      font-size: {{ block.settings.tab_size | times: 0.7 }}px;
    }

    .ai-membership-media-container-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-membership-subheadline-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheadline_size | times: 0.7 }}px;
    }

    .ai-membership-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }

    .ai-membership-cta-{{ ai_gen_id }} {
      font-size: {{ block.settings.cta_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<membership-tabs-{{ ai_gen_id }} class="ai-membership-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-membership-container-{{ ai_gen_id }}">
    {% if block.settings.main_headline != blank %}
      <h2 class="ai-membership-headline-{{ ai_gen_id }}">{{ block.settings.main_headline }}</h2>
    {% endif %}

    <div class="ai-membership-tabs-{{ ai_gen_id }}">
      <button
        class="ai-membership-tab-{{ ai_gen_id }} active"
        data-tab="training"
        aria-label="Switch to Exclusive Training tab"
      >
        {{ block.settings.tab_1_label }}
      </button>
      <button
        class="ai-membership-tab-{{ ai_gen_id }}"
        data-tab="rewards"
        aria-label="Switch to Member Rewards tab"
      >
        {{ block.settings.tab_2_label }}
      </button>
    </div>

    <div class="ai-membership-media-container-{{ ai_gen_id }}">
      <div class="ai-membership-tab-content-{{ ai_gen_id }} active" data-content="training">
        {% if block.settings.training_video != blank %}
          <video
            class="ai-membership-video-{{ ai_gen_id }}"
            autoplay
            loop
            muted
            playsinline
            aria-label="Exclusive training video"
          >
            <source src="{{ block.settings.training_video }}" type="video/mp4">
          </video>
        {% else %}
          <div class="ai-membership-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>

      <div class="ai-membership-tab-content-{{ ai_gen_id }}" data-content="rewards">
        {% if block.settings.rewards_image != blank %}
          <img
            src="{{ block.settings.rewards_image | image_url: width: 2000 }}"
            alt="{{ block.settings.rewards_image.alt | escape }}"
            class="ai-membership-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.rewards_image.width }}"
            height="{{ block.settings.rewards_image.height }}"
          >
        {% else %}
          <div class="ai-membership-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>

    <div class="ai-membership-text-content-{{ ai_gen_id }}">
      <div class="ai-membership-tab-content-{{ ai_gen_id }} active" data-content="training">
        {% if block.settings.training_subheadline != blank %}
          <h3 class="ai-membership-subheadline-{{ ai_gen_id }}">{{ block.settings.training_subheadline }}</h3>
        {% endif %}
        {% if block.settings.training_description != blank %}
          <p class="ai-membership-description-{{ ai_gen_id }}">{{ block.settings.training_description }}</p>
        {% endif %}
      </div>

      <div class="ai-membership-tab-content-{{ ai_gen_id }}" data-content="rewards">
        {% if block.settings.rewards_subheadline != blank %}
          <h3 class="ai-membership-subheadline-{{ ai_gen_id }}">{{ block.settings.rewards_subheadline }}</h3>
        {% endif %}
        {% if block.settings.rewards_description != blank %}
          <p class="ai-membership-description-{{ ai_gen_id }}">{{ block.settings.rewards_description }}</p>
        {% endif %}
      </div>

      {% if block.settings.cta_link != blank %}
        <a href="{{ block.settings.cta_link }}" class="ai-membership-cta-{{ ai_gen_id }}">
          {{ block.settings.cta_text }}
          <svg class="ai-membership-cta-arrow-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      {% endif %}
    </div>
  </div>
</membership-tabs-{{ ai_gen_id }}>

<script>
  (function() {
    class MembershipTabs{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-membership-tab-{{ ai_gen_id }}');
        this.contents = this.querySelectorAll('.ai-membership-tab-content-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', () => {
            const tabName = tab.getAttribute('data-tab');
            this.switchTab(tabName);
          });
        });
      }

      switchTab(tabName) {
        this.tabs.forEach((tab) => {
          if (tab.getAttribute('data-tab') === tabName) {
            tab.classList.add('active');
          } else {
            tab.classList.remove('active');
          }
        });

        this.contents.forEach((content) => {
          if (content.getAttribute('data-content') === tabName) {
            content.classList.add('active');
          } else {
            content.classList.remove('active');
          }
        });
      }
    }

    customElements.define('membership-tabs-{{ ai_gen_id }}', MembershipTabs{{ ai_gen_id }});
  })();
</script>

