<ativafit-membership-{{ ai_gen_id }} class="ai-membership-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-membership-container-{{ ai_gen_id }}">
    <h1 class="ai-membership-headline-{{ ai_gen_id }}">{{ block.settings.main_headline }}</h1>

    <div class="ai-membership-tabs-{{ ai_gen_id }}">
      <button class="ai-membership-tab-{{ ai_gen_id }} active" data-tab="training">
        {{ block.settings.tab_1_label }}
      </button>
      <button class="ai-membership-tab-{{ ai_gen_id }}" data-tab="rewards">
        {{ block.settings.tab_2_label }}
      </button>
    </div>

    <div class="ai-membership-media-container-{{ ai_gen_id }}">
      <div class="ai-membership-media-{{ ai_gen_id }} active" data-content="training">
        {% if block.settings.tab_1_video %}
          <video autoplay loop muted playsinline>
            <source src="{{ block.settings.tab_1_video }}" type="video/mp4">
          </video>
        {% else %}
          <div class="ai-membership-placeholder-{{ ai_gen_id }}">
            <svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="rgba(255,255,255,0.3)" stroke-width="1.5">
              <polygon points="5 3 19 12 5 21 5 3"></polygon>
            </svg>
          </div>
        {% endif %}
      </div>

      <div class="ai-membership-media-{{ ai_gen_id }}" data-content="rewards">
        {% if block.settings.tab_2_image %}
          <img src="{{ block.settings.tab_2_image | image_url: width: 2000 }}" alt="{{ block.settings.tab_2_image.alt | escape }}" loading="lazy">
        {% else %}
          <div class="ai-membership-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>

    <div class="ai-membership-content-{{ ai_gen_id }}">
      <h2 class="ai-membership-subheadline-{{ ai_gen_id }}">{{ block.settings.subheadline }}</h2>
      <p class="ai-membership-description-{{ ai_gen_id }}">{{ block.settings.description }}</p>
      <a href="{{ block.settings.tab_1_cta_link }}" class="ai-membership-cta-{{ ai_gen_id }}" data-cta-link>
        <span data-cta-text>{{ block.settings.tab_1_cta_text }}</span>
        <span>‚Üí</span>
      </a>
    </div>
  </div>
</ativafit-membership-{{ ai_gen_id }}>

<script>
  (function() {
    class AtivafitMembership{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-membership-tab-{{ ai_gen_id }}');
        this.mediaContents = this.querySelectorAll('.ai-membership-media-{{ ai_gen_id }}');
        this.ctaLink = this.querySelector('[data-cta-link]');
        this.ctaText = this.querySelector('[data-cta-text]');

        this.tabData = {
          training: {
            text: '{{ block.settings.tab_1_cta_text }}',
            link: '{{ block.settings.tab_1_cta_link }}'
          },
          rewards: {
            text: '{{ block.settings.tab_2_cta_text }}',
            link: '{{ block.settings.tab_2_cta_link }}'
          }
        };

        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach(tab => {
          tab.addEventListener('click', () => {
            const tabType = tab.getAttribute('data-tab');
            this.switchTab(tabType);
          });
        });
      }

      switchTab(tabType) {
        this.tabs.forEach(tab => {
          if (tab.getAttribute('data-tab') === tabType) {
            tab.classList.add('active');
          } else {
            tab.classList.remove('active');
          }
        });

        this.mediaContents.forEach(media => {
          if (media.getAttribute('data-content') === tabType) {
            media.classList.add('active');
          } else {
            media.classList.remove('active');
          }
        });

        if (this.tabData[tabType]) {
          this.ctaText.textContent = this.tabData[tabType].text;
          this.ctaLink.setAttribute('href', this.tabData[tabType].link);
        }
      }
    }

    customElements.define('ativafit-membership-{{ ai_gen_id }}', AtivafitMembership{{ ai_gen_id }});
  })();
</script>

