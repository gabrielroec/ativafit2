{% style %}
  .ai-membership-section-{{ ai_gen_id }} {
    --bg-color: {{ block.settings.bg_color }};
    --accent-color: {{ block.settings.accent_color }};
    --headline-spacing: {{ block.settings.headline_spacing }}px;
    
    display: block;
    width: 100%;
    max-width: 2000px;
    height: 1100px;
    margin: 0 auto;
    background-color: var(--bg-color);
    font-family: 'Barlow', sans-serif;
    position: relative;
    overflow: hidden;
  }

  .ai-membership-container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    height: 100%;
    padding: 60px 40px;
    box-sizing: border-box;
  }

  .ai-membership-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_font_size }}px;
    font-weight: 700;
    color: #ffffff;
    text-align: center;
    margin: 0 0 var(--headline-spacing) 0;
    letter-spacing: -0.5px;
  }

  .ai-membership-tabs-{{ ai_gen_id }} {
    display: flex;
    gap: 60px;
    margin-bottom: 50px;
    position: relative;
  }

  .ai-membership-tab-{{ ai_gen_id }} {
    font-size: {{ block.settings.tab_font_size }}px;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.6);
    background: none;
    border: none;
    cursor: pointer;
    padding: 0 0 12px 0;
    position: relative;
    transition: color 0.3s ease;
  }

  .ai-membership-tab-{{ ai_gen_id }}:hover {
    color: rgba(255, 255, 255, 0.9);
  }

  .ai-membership-tab-{{ ai_gen_id }}.active {
    color: #ffffff;
  }

  .ai-membership-tab-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background-color: var(--accent-color);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .ai-membership-tab-{{ ai_gen_id }}.active::after {
    transform: scaleX(1);
  }

  .ai-membership-media-container-{{ ai_gen_id }} {
    width: {{ block.settings.media_width }}%;
    height: {{ block.settings.media_height }}px;
    margin-bottom: 40px;
    border-radius: {{ block.settings.media_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-membership-media-{{ ai_gen_id }} {
    display: none;
    width: 100%;
    height: 100%;
  }

  .ai-membership-media-{{ ai_gen_id }}.active {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-membership-media-{{ ai_gen_id }} video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-membership-media-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-membership-placeholder-{{ ai_gen_id }} {
    background: #2a2828;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-membership-content-{{ ai_gen_id }} {
    text-align: center;
    max-width: 800px;
  }

  .ai-membership-subheadline-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheadline_font_size }}px;
    font-weight: 600;
    color: #ffffff;
    margin: 0 0 20px 0;
  }

  .ai-membership-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_font_size }}px;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.6;
    margin: 0 0 30px 0;
  }

  .ai-membership-cta-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: {{ block.settings.cta_padding_vertical }}px {{ block.settings.cta_padding_horizontal }}px;
    background-color: var(--accent-color);
    color: #ffffff;
    font-size: {{ block.settings.cta_font_size }}px;
    font-weight: 600;
    text-decoration: none;
    border-radius: {{ block.settings.cta_border_radius }}px;
    transition: all 0.3s ease;
  }

  .ai-membership-cta-{{ ai_gen_id }}:hover {
    background-color: #c91a1f;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(227, 30, 36, 0.3);
  }

