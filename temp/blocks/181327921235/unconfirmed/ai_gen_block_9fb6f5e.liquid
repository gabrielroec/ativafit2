{% doc %}
  @prompt
    在这个页面生成一个new arrival板块，产品图尺寸是4:3
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-new-arrivals-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-new-arrivals-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-new-arrivals-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
  }

  .ai-new-arrivals-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.subheading_spacing }}px;
    font-weight: 600;
  }

  .ai-new-arrivals-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
  }

  .ai-new-arrivals-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.products_per_row }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: {{ block.settings.button_spacing }}px;
  }

  .ai-new-arrivals-product-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .ai-new-arrivals-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 75%;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    background-color: #f4f4f4;
    margin-bottom: 12px;
  }

  .ai-new-arrivals-product-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-new-arrivals-product-{{ ai_gen_id }}:hover .ai-new-arrivals-product-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-new-arrivals-product-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    left: 12px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 12px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    z-index: 1;
  }

  .ai-new-arrivals-product-info-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .ai-new-arrivals-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0;
    font-weight: 500;
    line-height: 1.3;
  }

  .ai-new-arrivals-product-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-new-arrivals-product-title-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.accent_color }};
  }

  .ai-new-arrivals-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    font-weight: 600;
  }

  .ai-new-arrivals-product-price-compare-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    margin-left: 8px;
    font-weight: 400;
  }

  .ai-new-arrivals-button-wrapper-{{ ai_gen_id }} {
    text-align: {{ block.settings.button_alignment }};
  }

  .ai-new-arrivals-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .ai-new-arrivals-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-new-arrivals-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #999;
    font-size: 16px;
  }

  @media screen and (max-width: 989px) {
    .ai-new-arrivals-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.products_per_row_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-new-arrivals-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(1, 1fr);
    }

    .ai-new-arrivals-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-new-arrivals-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<new-arrivals-{{ ai_gen_id }} class="ai-new-arrivals-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-new-arrivals-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-new-arrivals-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-new-arrivals-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <div class="ai-new-arrivals-subtitle-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      <div class="ai-new-arrivals-grid-{{ ai_gen_id }}">
        {% for product in block.settings.collection.products limit: block.settings.products_to_show %}
          <div class="ai-new-arrivals-product-{{ ai_gen_id }}">
            <a href="{{ product.url }}" class="ai-new-arrivals-product-image-wrapper-{{ ai_gen_id }}">
              {% if block.settings.show_badge %}
                <span class="ai-new-arrivals-product-badge-{{ ai_gen_id }}">{{ block.settings.badge_text }}</span>
              {% endif %}
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-new-arrivals-product-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="800"
                  height="600"
                >
              {% else %}
                <div class="ai-new-arrivals-product-image-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </a>
            <div class="ai-new-arrivals-product-info-{{ ai_gen_id }}">
              <h3 class="ai-new-arrivals-product-title-{{ ai_gen_id }}">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>
              <div class="ai-new-arrivals-product-price-{{ ai_gen_id }}">
                {{ product.price | money }}
                {% if product.compare_at_price > product.price %}
                  <span class="ai-new-arrivals-product-price-compare-{{ ai_gen_id }}">
                    {{ product.compare_at_price | money }}
                  </span>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      {% if block.settings.show_view_all and block.settings.collection.url %}
        <div class="ai-new-arrivals-button-wrapper-{{ ai_gen_id }}">
          <a href="{{ block.settings.collection.url }}" class="ai-new-arrivals-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-new-arrivals-empty-{{ ai_gen_id }}">
        请选择一个产品系列以显示新品
      </div>
    {% endif %}
  </div>
</new-arrivals-{{ ai_gen_id }}>

<script>
  (function() {
    class NewArrivals{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.style.display = 'block';
      }
    }

    customElements.define('new-arrivals-{{ ai_gen_id }}', NewArrivals{{ ai_gen_id }});
  })();
</script>

