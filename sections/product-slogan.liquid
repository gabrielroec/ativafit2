{% comment %} SLOGAN SECTION {% endcomment %}
<div class="product-slogan-section">
  <div class="slogan-container">
    <div class="slogan-subtitle">{{ section.settings.slogan_subtitle }}</div>
    <div class="slogan-main">
      <span class="slogan-save">{{ section.settings.slogan_start }}</span>
      <span class="slogan-space" id="slogan-space">{{ section.settings.slogan_middle }}</span>
      <span class="slogan-comma">,</span>
      <span class="slogan-lift">{{ section.settings.slogan_end_first }}</span>
      <span class="slogan-more" id="slogan-more">{{ section.settings.slogan_end_highlight }}</span>
    </div>
  </div>
</div>

{% comment %} Seção de Pontos Importantes do Produto {% endcomment %}
<div class="product-key-features">
  <div class="key-features-container">
    <div class="slogan-text-block">
      <div class="slogan-feature-title">{{ section.settings.feature_title_1 }}</div>
      <div class="slogan-feature-description">
        {{ section.settings.feature_description_1 }}
      </div>
    </div>

    <div class="slogan-feature-image">
      {% if section.settings.product_image != blank %}
        <img
          src="{{ section.settings.product_image | img_url: '800x' }}"
          alt="{{ section.settings.product_image_alt }}"
          loading="lazy"
          width="500"
          height="500">
      {% else %}
        <img
          src="{{ 'pieces.png' | asset_url }}"
          alt="{{ section.settings.product_image_alt }}"
          loading="lazy"
          width="500"
          height="500">
      {% endif %}
    </div>

    <div class="slogan-text-block">
      <div class="slogan-feature-title">{{ section.settings.feature_title_2 }}</div>
      <div class="slogan-feature-description">
        {{ section.settings.feature_description_2 }}
      </div>
    </div>
  </div>
</div>

<style>
  .product-slogan-section {
    width: 100%;
    max-width: 1370px;
    margin: 80px auto;
    padding: 0 20px;
    position: relative;
  }
  .slogan-container {
    text-align: center;
    margin-bottom: 40px;
  }
  .slogan-subtitle {
    font-size: 16px;
    color: {{ section.settings.subtitle_color }};
  }
  .slogan-main {
    display: flex;
    align-items: end;
    justify-content: center;
    flex-wrap: wrap;
    gap: 20px;
    font-size: 80px;
    font-weight: bold;
    line-height: 1.1;
    letter-spacing: -0.02em;
    position: relative;
    top: -10px;
  }
  .slogan-save {
    color: {{ section.settings.save_color }};
    position: relative;
    font-size: 48px;
  }
  .slogan-space {
    color: {{ section.settings.space_color }};

    position: relative;
    top: -4px;
    transition: font-size 0.5s ease-out;
  }
  .slogan-comma {
    color: {{ section.settings.comma_color }};
    position: relative;
    font-size: 48px;
  }
  .slogan-lift {
    color: {{ section.settings.lift_color }};
    font-size: 48px;
  }
  .slogan-more {
    color: {{ section.settings.more_color }};

    position: relative;
    top: 6px;
    transition: font-size 0.5s ease-out;
  }
  @media screen and (max-width: 1024px) {
    .product-slogan-section {
      margin: 40px auto 30px;
    }
    .slogan-container {
      margin-bottom: 30px;
    }
    .slogan-comma {
      top: -6px;
      margin-left: -10px;
    }
  }
  @media screen and (max-width: 767px) {
    .product-slogan-section {
      margin: 30px auto 20px;
    }
    .slogan-container {
      margin-bottom: 25px;
    }
    .slogan-main {
      font-size: 45px;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 10px;
      top: 10px;
    }
    .slogan-comma {
      top: -5px;
      margin-left: -8px;
      display: none;
    }
  }
  @media screen and (max-width: 480px) {
    .slogan-container {
      margin-bottom: 20px;
    }
    .slogan-space {
      margin-left: -5px;
      top: -2px;
    }
    .slogan-comma {
      top: -4px;
      margin-left: -6px;
      margin-right: -3px;
    }
    .slogan-lift {
      margin-left: -3px;
    }
  }

  /* Estilos para a seção de recursos importantes do produto */
  .product-key-features {
    width: 100%;
    max-width: 1370px;
    margin: 40px auto 60px;
    padding: 0 20px;
  }

  .key-features-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 30px;
  }

  .slogan-text-block {
    flex: 1;
    max-width: 350px;
    text-align: center;
  }

  .slogan-feature-image {
    flex: 1.5;
    max-width: 500px;
    display: flex;
    justify-content: center;
  }

  .slogan-feature-image img {
    max-width: 100%;
    height: auto;
    object-fit: contain;
  }

  .slogan-feature-title {
    font-size: 32px;
    font-weight: bold;
    margin-bottom: 10px;
    color: #000;
  }

  .slogan-feature-description {
    font-size: 16px;
    color: #333;
    line-height: 1.4;
    text-align: center;
  }

  .left-text {
    text-align: right;
  }

  .right-text {
    text-align: left;
  }

  /* Media queries para responsividade */
  @media screen and (max-width: 767px) {
    .key-features-container {
      flex-direction: column;
      text-align: center;
      gap: 20px;
    }


    .slogan-feature-title {
      font-size: 24px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Referência aos elementos
    const sloganSpace = document.getElementById('slogan-space');
    const sloganMore = document.getElementById('slogan-more');
    const sloganSection = document.querySelector('.product-slogan-section');
    
    // Define os tamanhos iniciais e finais
    const spaceStartSize = '60px';
    const spaceEndSize = '20px';  
    const moreStartSize = '20px';
    const moreEndSize = '90px';
    
    // Define os tamanhos iniciais antes da animação
    sloganSpace.style.fontSize = spaceStartSize;
    sloganMore.style.fontSize = moreStartSize;
    
    // Configuração para animação mais estilo iOS
    sloganSpace.style.transition = 'font-size 0.8s cubic-bezier(0.34, 1.56, 0.64, 1)';
    sloganMore.style.transition = 'font-size 0.8s cubic-bezier(0.34, 1.56, 0.64, 1)';
    
    // Usando IntersectionObserver para detectar quando o elemento entra na viewport
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Adiciona um pequeno atraso para que a animação seja mais perceptível
          setTimeout(() => {
            sloganSpace.style.fontSize = spaceEndSize;
            sloganMore.style.fontSize = moreEndSize;
          }, 100);
          
          // Desconecta o observer após acionar a animação
          observer.disconnect();
        }
      });
    }, {
      // Define o threshold para acionar a animação quando pelo menos 30% do elemento estiver visível
      threshold: 0.3,
      // Aciona um pouco antes do elemento entrar completamente na tela
      rootMargin: '-10% 0px'
    });
    
    // Inicia a observação do elemento
    observer.observe(sloganSection);
  });
</script>

