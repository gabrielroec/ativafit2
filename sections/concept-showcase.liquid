{% comment %} 
                                                                                                  Concept Showcase Section - Estilo Peloton
                                                                                                  Seção com conceito/texto + imagem lado a lado 
{% endcomment %}

<section class="concept-showcase" data-section-id="{{ section.id }}">
  <div class="concept-showcase__container">
    <div class="concept-showcase__grid{% if section.settings.layout == 'content_right' %} concept-showcase__grid--content-right{% endif %}">
      <!-- Content Column -->
      <div class="concept-showcase__content-column">
        <div class="concept-showcase__content">
          <!-- Section Label -->
          {% if section.settings.section_label != blank %}
            <div class="concept-showcase__section-label">
              <p class="concept-showcase__label condensed-bold">{{ section.settings.section_label }}</p>
            </div>
          {% endif %}

          {% if section.settings.heading != blank %}
            <h2 class="concept-showcase__heading black">{{ section.settings.heading }}</h2>
          {% endif %}

          {% if section.settings.text != blank %}
            <div class="concept-showcase__text regular">
              {{ section.settings.text }}
            </div>
          {% endif %}

          {% if section.settings.button_text != blank and section.settings.button_link != blank %}
            <div class="concept-showcase__button-wrapper">
              <a href="{{ section.settings.button_link }}" class="concept-showcase__button condensed-bold">
                {{ section.settings.button_text }}
              </a>
            </div>
          {% endif %}
        </div>
      </div>

      <!-- Image Column -->
      <div class="concept-showcase__image-column">
        {% if section.settings.image != blank %}
          {{ section.settings.image | image_url: width: 800 | image_tag: class: 'concept-showcase__image', loading: 'lazy', alt: section.settings.image.alt | escape
          }}
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'concept-showcase__image placeholder' }}
        {% endif %}

        <!-- Optional overlay content on image -->
        {% if section.settings.overlay_text != blank %}
          <div class="concept-showcase__image-overlay">
            <p class="concept-showcase__overlay-text regular">{{ section.settings.overlay_text }}</p>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% style %}
  .concept-showcase {
    background: #ffffff;
    margin: 0;
  }

  .concept-showcase__container {
    max-width: 1750px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .concept-showcase__section-label {
    margin-bottom: 10px;
  }

  .concept-showcase__label {
    font-size: 14px;
    color: #EB701F;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 600;
    margin: 0;
  }

  .concept-showcase__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    min-height: 600px;
    gap: 20px;
  }

  /* Content Right Layout */
  .concept-showcase__grid--content-right .concept-showcase__content-column {
    order: 2;
  }

  .concept-showcase__grid--content-right .concept-showcase__image-column {
    order: 1;
  }

  /* Content Column */
  .concept-showcase__content-column {
    padding: 60px 0;
  }

  .concept-showcase__content {
  ;
  /* max-width: 500px; */
}

/* Content alignment based on layout */
.concept-showcase__grid:not(.concept-showcase__grid--content-right) .concept-showcase__content {
  margin: 0 auto;
}

.concept-showcase__grid--content-right .concept-showcase__content {
  margin-left: auto;
}

.concept-showcase__heading {
  font-size: 48px;
  font-weight: 700 !important;
  color: #000000;
  margin-bottom: 10px;
  line-height: 1.2;
  letter-spacing: -0.5px;
}

.concept-showcase__text {
  font-size: 18px;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 40px;
}

.concept-showcase__text p {
  margin-bottom: 20px;
  font-family: 'Barlow'
}

.concept-showcase__text p:last-child {
  margin-bottom: 0;
}

.concept-showcase__button {
  display: inline-block;
  padding: 15px 30px;
  background: transparent;
  color: #000000;
  border: 2px solid #000000;
  text-decoration: none;
  border-radius: 4px;
  transition: all 0.3s ease;
  font-size: 14px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.concept-showcase__button:hover {
  background: #000000;
  color: #ffffff;
  transform: translateY(-2px);
}

/* Image Column */
.concept-showcase__image-column {
  position: relative;
  height: 100%;
  min-height: 600px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.concept-showcase__image {
  max-width: 100%;
  max-height: 100%;
  width: auto;
  height: auto;
  object-fit: contain;
  display: block;
  border-radius: 8px;
}

.concept-showcase__image.placeholder {
  height: 600px;
}

/* Image Overlay */
.concept-showcase__image-overlay {
  position: absolute;
  bottom: 30px;
  left: 30px;
  right: 30px;
  background: rgba(0, 0, 0, 0.7);
  padding: 20px;
  border-radius: 8px;
  backdrop-filter: blur(10px);
}

.concept-showcase__overlay-text {
  color: #ffffff;
  font-size: 16px;
  margin: 0;
  line-height: 1.5;
}

/* Responsive */
@media screen and (max-width: 1024px) {
  .concept-showcase {
    padding: 60px 0;
    margin: 0 0 20px;
  }

  .concept-showcase__container {
    gap: 40px;
    padding: 0 30px;
  }

  .concept-showcase__grid {
    gap: 20px;
  }

  .concept-showcase__content-column {
    padding: 40px 0;
  }
}

@media screen and (max-width: 768px) {
  .concept-showcase {
    padding: 20px 0 !important;
    background-color: #F5F5F5;
  }

  .concept-showcase__container {
    grid-template-columns: 1fr;
    padding: 0 20px;
    gap: 30px;
  }

  .concept-showcase__grid {
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .concept-showcase__content-column,
  .concept-showcase__image-column {
    order: unset !important;
    padding-top: 0 !important;
  }

  .concept-showcase__image-column {
    min-height: 350px;
  }

  .concept-showcase__content-column {
    padding: 0;
  }

  .concept-showcase__content {
    max-width: 100%;
    margin: 0 !important;
    text-align: center;
  }

  .concept-showcase__heading {
    font-size: 36px;
    margin-bottom: 20px;
  }

  .concept-showcase__text {
    font-size: 16px;
    margin-bottom: 30px;
  }

  .concept-showcase__button {
    padding: 12px 25px;
    font-size: 13px;
  }

  .concept-showcase__image-overlay {
    bottom: 20px;
    left: 20px;
    right: 20px;
    padding: 15px;
  }

  .concept-showcase__overlay-text {
    font-size: 14px;
  }
}

@media screen and (max-width: 480px) {
  .concept-showcase__container {
    padding: 0 15px;
  }

  .concept-showcase__heading {
    font-size: 28px;
  }

  .concept-showcase__text {
    font-size: 15px;
  }

  .concept-showcase__image-overlay {
    bottom: 15px;
    left: 15px;
    right: 15px;
    padding: 12px;
  }

  .concept-showcase__overlay-text {
    font-size: 13px;
  }
}
{% endstyle %}

