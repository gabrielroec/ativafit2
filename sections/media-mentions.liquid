{%- liquid
  assign section_title = section.settings.title | default: 'MEDIA MENTIONS'
-%}

<section 
  class="media-mentions-section"
  data-section-id="{{ section.id }}"
  data-section-type="media-mentions"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    {% if section.settings.background_color != blank %}
      background-color: {{ section.settings.background_color }};
    {% endif %}
  ">
  
  {%- if section_title != blank -%}
    <h1 class="media-mentions-title">{{ section_title }}</h1>
  {%- endif -%}
  
  {%- if section.blocks.size > 0 -%}
    <div class="media-mentions-grid">
      {%- for block in section.blocks -%}
        {%- if block.type == 'media_mention' -%}
          <div 
            class="media-mention-card"
            {{ block.shopify_attributes }}>
            
            {%- if block.settings.logo != blank -%}
              {%- liquid
                assign logo_alt = block.settings.logo.alt | default: block.settings.title
              -%}
              {{ block.settings.logo | image_url: width: 540 | image_tag:
                loading: 'lazy',
                class: 'media-logo',
                alt: logo_alt,
                widths: '180,360,540'
              }}
            {%- elsif block.settings.logo_url != blank -%}
              <img 
                src="{{ block.settings.logo_url }}"
                alt="{{ block.settings.title | escape }}"
                class="media-logo"
                loading="lazy"
                width="540"
                height="121">
            {%- endif -%}
            
            {%- if block.settings.title != blank -%}
              <h3 class="media-subtitle">{{ block.settings.title }}</h3>
            {%- endif -%}
            
            {%- if block.settings.description != blank -%}
              <p>{{ block.settings.description }}</p>
            {%- endif -%}
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  {%- else -%}
    <div class="media-mentions-empty">
      <p>Adicione cards de menções na mídia através do editor visual.</p>
    </div>
  {%- endif -%}
</section>

<style>
.media-mentions-section {
  padding: 60px 0 60px 0;
  background: #fff;
}
.media-mentions-title {
  color: #222;
  font-size: 2.8rem;
  font-weight: 800;
  text-align: center;
  letter-spacing: .04em;
  margin-bottom: 45px;
  text-transform: uppercase;
  animation: fadeInDown .8s cubic-bezier(.4,0,.2,1);
}
.media-mentions-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit,minmax(320px,1fr));
  gap: 36px;
  max-width: 1200px;
  margin: 0 auto;
  animation: fadeInUp 1.1s cubic-bezier(.4,0,.2,1);
}
.media-mention-card {
  background: #fff;
  border-radius: 22px;
  padding: 38px 30px 32px 30px;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  transition: transform .18s;
  border: 1.5px solid rgba(235,112,31,0.07);
  animation: popCard .7s;
}
.media-mention-card:hover {
  transform: translateY(-7px) scale(1.025);
}
.media-logo {
  max-width: 180px;
  max-height: 80px;
  margin-bottom: 26px;
  filter: grayscale(0) brightness(.95) contrast(1.02);
  transition: filter .15s;
}
.media-mention-card:hover .media-logo {
  filter: grayscale(0) brightness(1.06) contrast(1.13);
}
.media-subtitle {
  font-size: 1.22rem;
  font-weight: 700;
  text-align: center;
  color: #222;
  margin-bottom: 18px;
  margin-top: 0;
  min-height: 56px;
}
.media-mention-card p {
  color: #494949;
  font-size: 1.04rem;
  text-align: center;
  font-weight: 400;
  margin: 0;
}

@media (max-width: 900px) {
  .media-mentions-section {
    padding: 32px 0 40px 0;
  }
  .media-mention-card {
    padding: 26px 12px 22px 12px;
  }
  .media-mentions-title {
    font-size: 2rem;
    margin-bottom: 26px;
  }
}

@keyframes fadeInDown {
  from { opacity: 0; transform: translateY(-32px);}
  to { opacity: 1; transform: translateY(0);}
}
@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(32px);}
  to { opacity: 1; transform: translateY(0);}
}
@keyframes popCard {
  0% { opacity: 0; transform: scale(.93);}
  55% { opacity: .9; transform: scale(1.01);}
  100% { opacity: 1; transform: scale(1);}
}

/* Tema Ativafit Laranja */
.media-mentions-title, .media-subtitle {
  background: linear-gradient(90deg, #EB701F 0%, #EFC87D 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.media-mentions-empty {
  text-align: center;
  padding: 60px 20px;
  color: #666;
  font-size: 16px;
}
</style>

