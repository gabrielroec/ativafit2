<section
  class="section product-colorways"
  data-section-id="{{ section.id }}"
  data-section-type="product-colorways"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="container">

    {%- if section.blocks.size > 0 -%}
      <div class="colorways-grid">
        {%- for block in section.blocks -%}
          <div class="colorway-item" {{ block.shopify_attributes }}>
            <div class="colorway-image">
              {%- if block.settings.colorway_image != blank -%}
                <img
                  src="{{ block.settings.colorway_image | img_url: '600x400' }}"
                  alt="{{ block.settings.colorway_image.alt | default: block.settings.colorway_name }}"
                  width="600"
                  height="400"
                  loading="lazy">
              {%- else -%}
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-image' }}
              {%- endif -%}

              {%- if block.settings.colorway_label != blank -%}
                <div class="colorway-label">{{ block.settings.colorway_label | escape }}</div>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>

      {%- if section.blocks.size > 0 -%}
        <div class="colorways-indicators">
          {%- for block in section.blocks -%}
            <div class="color-dot" style="background: {{ block.settings.gradient_background }}"></div>
          {%- endfor -%}
        </div>
      {%- endif -%}
    {%- endif -%}

    <div class="colorways-content">
      {%- if section.settings.heading_part1 != blank or section.settings.highlight_text1 != blank -%}
        <h2 class="colorways-heading">
          {{ section.settings.heading_part1 }}
          {%- if section.settings.highlight_text1 != blank -%}
            <span class="highlight-text">{{ section.settings.highlight_text1 }}</span>
          {%- endif -%}
          {{ section.settings.heading_part2 }}
          {%- if section.settings.highlight_text2 != blank -%}
            <span class="highlight-text">{{ section.settings.highlight_text2 }}</span>
          {%- endif -%}
        </h2>
      {%- endif -%}

      {%- if section.settings.description_line1 != blank or section.settings.description_line2 != blank or section.settings.description_line3 != blank -%}
        <div class="colorways-description">
          {%- if section.settings.description_line1 != blank -%}
            <p>{{ section.settings.description_line1 }}</p>
          {%- endif -%}
          {%- if section.settings.description_line2 != blank -%}
            <p>{{ section.settings.description_line2 }}</p>
          {%- endif -%}
          {%- if section.settings.description_line3 != blank -%}
            <p>{{ section.settings.description_line3 }}</p>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
  .product-colorways {
    background-color: #fff;
  }

  .colorways-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 200px;
    margin-bottom: 30px;
    max-width: 1000px;
    margin-left: auto;
    margin-right: auto;
  }

  .colorway-item {
    position: relative;


  }

  .colorway-image {
    position: relative;
    width: 100%;
    max-width: 480px;
    overflow: hidden;
    border-radius: 16px;
  }

  .colorway-image img,
  .colorway-image svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .colorway-label {
    position: absolute;
    top: 20px;
    left: 20px;
    font-family: 'Barlow'
    , sans-serif;
    font-weight: 700;
    font-size: 48px;
    line-height: 52px;
    letter-spacing: 0;
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .colorways-indicators {
    display: flex;
    justify-content: center;
    gap: 16px;
    margin-bottom: 40px;
  }

  .color-dot {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .colorways-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .colorways-heading {
    font-family: 'Barlow'
    , sans-serif;
    font-weight: 700;
    font-size: 40px;
    line-height: 44px;
    letter-spacing: 0;
    color: #000000;
    margin: 0 0 24px;
  }

  .highlight-text {
    color: #EB701F;
  }

  .colorways-description {
    font-family: 'Barlow'
    , sans-serif;
    font-weight: 400;
    font-size: 18px;
    line-height: 24px;
    letter-spacing: 0;
    color: #000;
  }

  .colorways-description p {
    margin: 0 0 8px;
    font-family: Barlow;
    font-weight: 500 !important;
    font-style: Medium;
    font-size: 25px;
    leading-trim: NONE;
    line-height: 31px;
    letter-spacing: 0;
    text-align: center;

  }

  .colorways-description p:last-child {
    margin-bottom: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .colorways-grid {
      grid-template-columns: 1fr;
      gap: 24px;
      margin-bottom: 24px;
    }

    .colorway-image {
      height: 300px;
    }

    .colorway-label {
      font-size: 36px;
      line-height: 40px;
      top: 15px;
      left: 15px;
    }

    .colorways-heading {
      font-size: 32px;
      line-height: 36px;
      margin-bottom: 20px;
    }

    .colorways-description {
      font-size: 16px;
      line-height: 22px;
    }

    .color-dot {
      width: 32px;
      height: 32px;
    }

    .colorways-indicators {
      gap: 12px;
      margin-bottom: 32px;
    }
  }

  @media (max-width: 480px) {
    .colorways-grid {
      gap: 20px;
    }

    .colorway-image {
      height: 250px;
      border-radius: 12px;
    }

    .colorway-label {
      font-size: 28px;
      line-height: 32px;
    }

    .colorways-heading {
      font-size: 28px;
      line-height: 32px;
    }
  }
</style>

