    max-width: 1750px !important;
    margin: 0 auto;
  }

  .header-logo-section {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 0 !important;
  }

  .header-logo {
    max-width: {{ section.settings.logo_max_width }}px;
  }

