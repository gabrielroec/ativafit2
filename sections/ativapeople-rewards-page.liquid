<script>
  function showTab(tabName) {
    const tabs = document.querySelectorAll('[role="tab"]');
    const tabPanels = document.querySelectorAll('[role="tabpanel"]');
    tabs.forEach(tab => { const sel = tab.getAttribute('aria-controls') === `form-${tabName}`; tab.setAttribute('aria-selected', sel); });
    tabPanels.forEach(panel => { const sel = panel.id === `form-${tabName}`; if (sel) panel.classList.remove('hidden'); else panel.classList.add('hidden'); });
  }
  document.addEventListener('DOMContentLoaded', () => {
    const loginForm = document.getElementById('form-login');
    if (loginForm && loginForm.querySelector('.form-errors')) { showTab('login'); } else { showTab('register'); }
  });
</script>

