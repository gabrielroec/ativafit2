                  {%- if section.settings.benefit1_desc_rte != blank -%}
                    <div class="mt-2 text-gray-600 leading-relaxed">{{ section.settings.benefit1_desc_rte }}</div>
                  {%- elsif section.settings.benefit1_desc != blank -%}
                    <div class="mt-2 text-gray-600 leading-relaxed">{{ section.settings.benefit1_desc | escape | newline_to_br }}</div>
                  {%- endif -%}
                </div>
              </div>

              <!-- Benefit 2 -->
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-orange-100 text-orange-500">
                  <!-- bulb icon -->
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-bold">{{ section.settings.benefit2_title | escape }}</h3>
                  {%- if section.settings.benefit2_desc_rte != blank -%}
                    <div class="mt-2 text-gray-600 leading-relaxed">{{ section.settings.benefit2_desc_rte }}</div>
                  {%- elsif section.settings.benefit2_desc != blank -%}
                    <div class="mt-2 text-gray-600 leading-relaxed">{{ section.settings.benefit2_desc | escape | newline_to_br }}</div>
                  {%- endif -%}
                </div>
              </div>

              <!-- Benefit 3 -->
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-orange-100 text-orange-500">
                  <!-- key/lock icon -->
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-bold">{{ section.settings.benefit3_title | escape }}</h3>
                  {%- if section.settings.benefit3_desc_rte != blank -%}
                    <div class="mt-2 text-gray-600 leading-relaxed">{{ section.settings.benefit3_desc_rte }}</div>
                  {%- elsif section.settings.benefit3_desc != blank -%}
                    <div class="mt-2 text-gray-600 leading-relaxed">{{ section.settings.benefit3_desc | escape | newline_to_br }}</div>
