{% comment %}
  UGC Upload Section
  
  Section for users to upload User Generated Content (UGC).
  The upload button opens a pop-up with Klaviyo sign-up form.
{% endcomment %}

<section class="ugc-upload-section" id="ugc-upload-{{ section.id }}">
  <div class="ugc-upload-container">
    {%- if section.settings.title != blank -%}
      <h2 class="ugc-upload-title">{{ section.settings.title }}</h2>
    {%- endif -%}
    
    {%- if section.settings.description != blank -%}
      <p class="ugc-upload-description">{{ section.settings.description }}</p>
    {%- endif -%}
    
    <button 
      type="button" 
      class="ugc-upload-button" 
      id="ugc-upload-trigger-{{ section.id }}"
      aria-label="Upload UGC">
      {%- if section.settings.button_text != blank -%}
        {{ section.settings.button_text }}
      {%- else -%}
        Upload Your Photo
      {%- endif -%}
    </button>
  </div>
  
  <!-- Pop-up Modal -->
  <div class="ugc-modal" id="ugc-modal-{{ section.id }}" role="dialog" aria-labelledby="ugc-modal-title-{{ section.id }}" aria-hidden="true">
    <div class="ugc-modal-overlay"></div>
    <div class="ugc-modal-content">
      <button 
        type="button" 
        class="ugc-modal-close" 
        id="ugc-modal-close-{{ section.id }}"
        aria-label="Close modal">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      
      <h3 class="ugc-modal-title" id="ugc-modal-title-{{ section.id }}">
        {%- if section.settings.modal_title != blank -%}
          {{ section.settings.modal_title }}
        {%- else -%}
          Share Your Experience
        {%- endif -%}
      </h3>
      
      <div class="ugc-modal-form">
        <div class="klaviyo-form-Xgf5yx"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .ugc-upload-section {
    padding: 60px 20px;
    text-align: center;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .ugc-upload-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
  }
  
  .ugc-upload-title {
    font-size: 32px;
    font-weight: 700;
    color: #000;
    margin: 0;
  }
  
  .ugc-upload-description {
    font-size: 16px;
    color: #666;
    max-width: 600px;
    margin: 0;
    line-height: 1.6;
  }
  
  .ugc-upload-button {
    padding: 16px 40px;
    background: #EB701F;
    color: #fff;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    cursor: pointer;
    transition: background 0.3s ease;
    margin-top: 10px;
  }
  
  .ugc-upload-button:hover {
    background: #d85f0f;
  }
  
  .ugc-upload-button:active {
    transform: scale(0.98);
  }
  
  /* Modal Styles */
  .ugc-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .ugc-modal[aria-hidden="false"] {
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
  }
  
  .ugc-modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
  }
  
  .ugc-modal-content {
    position: relative;
    background: #fff;
    border-radius: 12px;
    padding: 40px;
    max-width: 600px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    z-index: 1;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    transform: scale(0.9);
    transition: transform 0.3s ease;
  }
  
  .ugc-modal[aria-hidden="false"] .ugc-modal-content {
    transform: scale(1);
  }
  
  .ugc-modal-close {
    position: absolute;
    top: 15px;
    right: 15px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 8px;
    color: #666;
    transition: color 0.2s ease;
    z-index: 2;
  }
  
  .ugc-modal-close:hover {
    color: #000;
  }
  
  .ugc-modal-title {
    font-size: 24px;
    font-weight: 700;
    color: #000;
    margin: 0 0 30px 0;
    text-align: center;
  }
  
  .ugc-modal-form {
    width: 100%;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .ugc-upload-section {
      padding: 40px 15px;
    }
    
    .ugc-upload-title {
      font-size: 24px;
    }
    
    .ugc-upload-description {
      font-size: 14px;
    }
    
    .ugc-upload-button {
      padding: 14px 30px;
      font-size: 14px;
      width: 100%;
      max-width: 300px;
    }
    
    .ugc-modal-content {
      padding: 30px 20px;
      width: 95%;
    }
    
    .ugc-modal-title {
      font-size: 20px;
      margin-bottom: 20px;
    }
  }
</style>

<script>
  (function() {
    const sectionId = '{{ section.id }}';
    const trigger = document.getElementById('ugc-upload-trigger-' + sectionId);
    const modal = document.getElementById('ugc-modal-' + sectionId);
    const closeBtn = document.getElementById('ugc-modal-close-' + sectionId);
    const overlay = modal?.querySelector('.ugc-modal-overlay');
    
    if (!trigger || !modal || !closeBtn) return;
    
    // Open modal
    trigger.addEventListener('click', function() {
      modal.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
    });
    
    // Close modal functions
    function closeModal() {
      modal.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
    }
    
    closeBtn.addEventListener('click', closeModal);
    
    if (overlay) {
      overlay.addEventListener('click', closeModal);
    }
    
    // Close on Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && modal.getAttribute('aria-hidden') === 'false') {
        closeModal();
      }
    });
  })();
</script>

{% schema %}
{
  "name": "UGC Upload",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Share Your Experience"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Upload your photos and share your fitness journey with our community!"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Upload Your Photo"
    },
    {
      "type": "text",
      "id": "modal_title",
      "label": "Modal Title",
      "default": "Share Your Experience"
    }
  ],
  "presets": [
    {
      "category": "Custom",
      "name": "UGC Upload"
    }
  ]
}
{% endschema %}

