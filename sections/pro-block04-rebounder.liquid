<style>
  .shane-pro-b4 {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px 60px;
    box-sizing: border-box;
  }
  .shane-pro-b4 h2 {
    margin: 0;
    text-align: center;
    font-size: 36px;
    font-weight: 400;
    line-height: 1.3;
  }
  @media (max-width: 1200px) {
    .shane-pro-b4 h2 {
      font-size: 32px;
    }
  }
  @media (max-width: 992px) {
    .shane-pro-b4 h2 {
      font-size: 28px;
    }
  }
  .shane-pro-b4 > .text {
    font-size: 14px;
    opacity: 0.6;
    width: 500px;
    max-width: calc(100% - 40px);
    margin: 0 auto 20px !important;
    text-align: center;
    line-height: 20px;
  }
  .shane-pro-b4 .shane-height-4 {
    min-height: 60px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px 0;
  }
  .shane-pro-b4 .shane-height-3 {
    min-height: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px 0;
  }
  .b4-viewing {
    display: flex;
    width: 100%;
    justify-content: space-between;
    align-items: flex-start;
  }

  .shane-pro-b4 .b4-viewing-left > div {
    justify-content: flex-start;
  }
  .b4-viewing-left > div:first-child {
    margin-top: 200px;
  }
  .b4-viewing-left {
    width: 300px;
    min-width: 300px;
    max-width: 300px;
    flex-shrink: 0;
  }
  .b4-viewing-right {
    flex: 1;
    min-width: 0;
    text-align: center;
    font-size: 14px;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: 40px;
  }
  @media (min-width: 1200px) {
    .b4-viewing-right {
      gap: 60px;
    }
  }
  @media (min-width: 1400px) {
    .b4-viewing-right {
      gap: 80px;
    }
  }
  .b4-viewing-right > div {
    width: 300px;
    min-width: 300px;
    max-width: 300px;
    flex-shrink: 0;
    border: 1px solid #ffffff;
  }
  .b4-viewing-right .active {
    border: 1px solid #FF6100;
  }

  .viewing-head {
    font-size: 14px;
    color: #fff;
    background-color: #ffffff;
    text-transform: uppercase;
    line-height: 40px;
  }
  .viewing-img {
    height: 180px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .viewing-img img {
    height: 80%;
  }
  .viewing-title {
    font-size: 16px;
    font-weight: 600;
  }
  .viewing-price {
    font-size: 18px;
    font-weight: 600;
  }
  .viewing-cart {
    height: 40px;
  }
  .viewing-cart .viewing-button {
    width: 100%;
    height: 100%;
    line-height: 40px;
    background-color: #FF6100;
    color: #fff;
    font-size: 16px;
    border: 0;
    margin: 0;
    padding: 0;
    cursor: pointer;
    display: none;
  }
  .b4-viewing-right .active {
    border: 1px solid #FF6100;
  }
  .b4-viewing-right .active .viewing-head {
    background-color: #FF6100;
  }
  .b4-viewing-right .active .viewing-button {
    display: block;
  }
  @media (max-width: 768px) {
    .shane-pro-b4 {
      padding: 40px 20px 30px;
    }
    .shane-pro-b4 h2 {
      font-size: 24px;
      line-height: 1.3;
      width: 100%;
      margin: 0 auto 20px;
      padding-bottom: 20px;
    }
    .shane-pro-b4 > .text {
      width: 100%;
      margin: 0 auto 30px !important;
      font-size: 14px;
      line-height: 1.6;
      padding: 0 10px;
    }
    .shane-pro-b4 .shane-height-4 {
      min-height: 50px;
      padding: 12px 16px;
    }
    .shane-pro-b4 .shane-height-3 {
      min-height: 44px;
      padding: 12px 16px;
    }
    .b4-viewing {
      flex-direction: column;
      gap: 0;
    }
    .b4-viewing-left {
      width: 100%;
      min-width: 100%;
      max-width: 100%;
      font-size: 12px;
      margin-bottom: 20px;
      display: none;
    }
    .b4-viewing-left > div:first-child {
      margin-top: 0;
    }
    .b4-viewing-left > div {
      padding: 8px 0;
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }
    .shane-pro-b4 .b4-viewing-left > div {
      justify-content: flex-start;
    }
    .b4-viewing-right {
      width: 100%;
      font-size: 14px;
      overflow-x: auto;
      overflow-y: hidden;
      display: flex;
      gap: 16px;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: thin;
      padding: 0 0 10px 0;
      margin: 0;
      scroll-padding-left: 20px;
      scroll-padding-right: 20px;
      scroll-behavior: smooth;
    }
    .b4-viewing-right::-webkit-scrollbar {
      height: 3px;
    }
    .b4-viewing-right::-webkit-scrollbar-track {
      background: rgba(255, 255, 255, 0.1);
      border-radius: 2px;
    }
    .b4-viewing-right::-webkit-scrollbar-thumb {
      background: rgba(255, 97, 0, 0.5);
      border-radius: 2px;
    }
    .b4-viewing-right > div {
      width: calc(100vw - 80px);
      min-width: calc(100vw - 80px);
      max-width: calc(100vw - 80px);
      flex-shrink: 0;
      border-radius: 12px;
      overflow: hidden;
      scroll-snap-align: start;
      margin: 0;
      box-sizing: border-box;
      position: relative;
      background: rgba(255,255,255,0.02);
    }
    .b4-viewing-right > div:first-child {
      margin-left: 20px;
    }
    .b4-viewing-right > div:last-child {
      margin-right: 20px;
    }
    .b4-viewing-right .active {
      border: 2px solid #FF6100;
      box-shadow: 0 4px 12px rgba(255, 97, 0, 0.2);
    }
    .b4-viewing-right > div > div {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 44px;
      padding: 12px 16px;
      font-size: 13px;
      text-align: center;
      word-wrap: break-word;
    }
    .viewing-head {
      font-size: 12px;
      line-height: 36px;
      height: 36px;
      min-height: 36px;
      border-radius: 12px 12px 0 0;
      opacity: 0;
      transform: translateY(-100%);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      padding: 0;
    }
    .b4-viewing-right .active .viewing-head {
      opacity: 1;
      transform: translateY(0);
      animation: slideDownFromTop 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .b4-viewing-right > div > div.viewing-img {
      height: 180px;
      min-height: 180px;
      padding: 16px;
    }
    .viewing-img img {
      height: 100%;
      max-width: 100%;
      object-fit: contain;
    }
    .viewing-title {
      font-size: 15px;
      font-weight: 600;
      padding: 12px 16px;
    }
    .viewing-price {
      font-size: 17px;
      font-weight: 600;
      padding: 12px 16px;
    }
    .b4-viewing-right > div > div.viewing-cart {
      height: 48px;
      min-height: 48px;
      padding: 0;
    }
    .b4-viewing-right > div > div.viewing-cart a {
      width: 100%;
      height: 100%;
      display: block;
    }
    .viewing-cart .viewing-button {
      line-height: 48px;
      font-size: 15px;
      width: 100%;
      height: 100%;
      border-radius: 0 0 12px 12px;
      opacity: 0;
      transform: translateY(100%);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .b4-viewing-right .active .viewing-button {
      opacity: 1;
      transform: translateY(0);
      animation: slideUpFromBottom 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
  }
</style>
<h2>{{ section.settings.heading }}</h2>
<div class="text">
  {{ section.settings.text }}
</div>
<div class="b4-viewing">
  <div class="b4-viewing-left">
    <div>Feature</div>
    <div>Size</div>
    <div>Suitable Age Range</div>
    <div>Weight Capacity</div>
    <div>Weight</div>
    <div class="shane-height-4">Enclosure Net</div>
    <div class="shane-height-3">Safety Padding</div>
    <div class="shane-height-3">Legs</div>
    <div class="shane-height-3">Accessories</div>
    <div class="shane-height-4">Additional Features</div>
    <div>Price</div>
  </div>
  <div class="b4-viewing-right">
    {%- assign my_variable = 0 -%}
    {%- for block in section.blocks -%}
      {%- assign my_variable = my_variable | plus: 1 -%}
      <div class="{% if my_variable==1 %}active{% endif %}">
        <div class="viewing-head">you are viewing</div>
        <div class="viewing-img"><img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}"></div>
        <div class="viewing-title">{{ block.settings.text01 }}</div>
        <div>{{ block.settings.text02 }}</div>
        <div>{{ block.settings.text03 }}</div>
        <div>{{ block.settings.text04 }}</div>
        <div>{{ block.settings.text05 }}</div>
        <div class="shane-height-4">{{ block.settings.text06 }}</div>
        <div class="shane-height-3">{{ block.settings.text07 }}</div>
        <div class="shane-height-3">{{ block.settings.text08 }}</div>
        <div class="shane-height-3">{{ block.settings.text09 }}</div>
        <div class="shane-height-4">{{ block.settings.text10 }}</div>
        <div class="viewing-price">{{ block.settings.text11 }}</div>
        <div class="viewing-cart">
          <a href="{{ block.settings.link }}"><input
              type="button"
              class="viewing-button"
              value="View More"></a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
<script>
  		$(".b4-viewing-right>div").mouseenter(function(){
  			$(".b4-viewing-right>div").removeClass("active");
  			$(this).addClass("active");			
  		});
</script>
