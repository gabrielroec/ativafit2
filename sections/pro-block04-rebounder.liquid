<style>
  .shane-pro-b4 {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding-bottom: 60px;
  }
  .shane-pro-b4 h2 {
    margin: 0;
    text-align: center;
    font-size: 36px;
    font-weight: 400;
    line-height: 1.3;
  }
  @media (max-width: 1200px) {
    .shane-pro-b4 h2 {
      font-size: 32px;
    }
  }
  @media (max-width: 992px) {
    .shane-pro-b4 h2 {
      font-size: 28px;
    }
  }
  .shane-pro-b4 > .text {
    font-size: 14px;
    opacity: 0.6;
    width: 500px;
    max-width: 90%;
    margin: 0 auto 20px !important;
    text-align: center;
    line-height: 20px;
  }
  .shane-pro-b4 .shane-height-4 {
    min-height: 60px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px 0;
  }
  .shane-pro-b4 .shane-height-3 {
    min-height: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px 0;
  }
  .b4-viewing {
    display: flex;
    width: 100%;
    justify-content: space-between;
    align-items: flex-start;
  }

  .shane-pro-b4 .b4-viewing-left > div {
    justify-content: flex-start;
  }
  .b4-viewing-left > div:first-child {
    margin-top: 200px;
  }
  .b4-viewing-right {
    width: 78%;
    text-align: center;
    font-size: 14px;
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }
  .b4-viewing-right > div {
    width: 50%;
    border: 1px solid #ffffff;
  }
  .b4-viewing-right .active {
    border: 1px solid #FF6100;
  }

  .viewing-head {
    font-size: 14px;
    color: #fff;
    background-color: #ffffff;
    text-transform: uppercase;
    line-height: 40px;
  }
  .viewing-img {
    height: 180px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .viewing-img img {
    height: 80%;
  }
  .viewing-title {
    font-size: 16px;
    font-weight: 600;
  }
  .viewing-price {
    font-size: 18px;
    font-weight: 600;
  }
  .viewing-cart {
    height: 40px;
  }
  .viewing-cart .viewing-button {
    width: 100%;
    height: 100%;
    line-height: 40px;
    background-color: #FF6100;
    color: #fff;
    font-size: 16px;
    border: 0;
    margin: 0;
    padding: 0;
    cursor: pointer;
    display: none;
  }
  .b4-viewing-right .active {
    border: 1px solid #FF6100;
  }
  .b4-viewing-right .active .viewing-head {
    background-color: #FF6100;
  }
  .b4-viewing-right .active .viewing-button {
    display: block;
  }
  @media (max-width: 768px) {
    .shane-pro-b4 {
      padding: 60px 5% 40px;
    }
    .shane-pro-b4 h2 {
      font-size: 28px;
      line-height: 1.3;
      width: 90%;
      margin: auto;
    }
    .shane-pro-b4 > .text {
      width: 100%;
      margin: 20px auto 40px !important;
      font-size: 16px;
      line-height: 1.5;
    }
    .shane-pro-b4 .shane-height-4 {
      min-height: 60px;
      padding: 10px 0;
    }
    .shane-pro-b4 .shane-height-3 {
      min-height: 50px;
      padding: 10px 0;
    }
    .b4-viewing-left {
      width: 36%;
      font-size: 14px;
      line-height: 1.5;
    }
    .b4-viewing-left > div:first-child {
      margin-top: 0;
    }
    .shane-pro-b4 .b4-viewing-left > div {
      justify-content: flex-start;
    }
    .b4-viewing-right {
      width: 62%;
      font-size: 14px;
      overflow-y: hidden;
    }
    .b4-viewing-right > div {
      width: 100%;
      flex-shrink: 0;
    }
    .b4-viewing-right .active {
      border: 1px solid #FF6100;
    }
    .b4-viewing-right > div > div {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .viewing-head {
      font-size: 14px;
      line-height: 50px;
    }
    .b4-viewing-right > div > div.viewing-img {
      height: 200px;
    }
    .viewing-img img {
      height: 80%;
    }
    .viewing-title {
      font-size: 16px;
    }
    .viewing-price {
      font-size: 18px;
    }
    .b4-viewing-right > div > div.viewing-cart {
      height: 50px;
    }
    .b4-viewing-right > div > div.viewing-cart a {
      width: 100%;
    }
    .viewing-cart .viewing-button {
      line-height: 50px;
      font-size: 16px;
      width: 100%;
    }

  }
</style>
<h2>{{ section.settings.heading }}</h2>
<div class="text">
  {{ section.settings.text }}
</div>
<div class="b4-viewing">
  <div class="b4-viewing-left">
    <div>Feature</div>
    <div>Size</div>
    <div>Suitable Age Range</div>
    <div>Weight Capacity</div>
    <div>Weight</div>
    <div class="shane-height-4">Enclosure Net</div>
    <div class="shane-height-3">Safety Padding</div>
    <div class="shane-height-3">Legs</div>
    <div class="shane-height-3">Accessories</div>
    <div class="shane-height-4">Additional Features</div>
    <div>Price</div>
  </div>
  <div class="b4-viewing-right">
    {%- assign my_variable = 0 -%}
    {%- for block in section.blocks -%}
      {%- assign my_variable = my_variable | plus: 1 -%}
      <div class="{% if my_variable==1 %}active{% endif %}">
        <div class="viewing-head">you are viewing</div>
        <div class="viewing-img"><img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}"></div>
        <div class="viewing-title">{{ block.settings.text01 }}</div>
        <div>{{ block.settings.text02 }}</div>
        <div>{{ block.settings.text03 }}</div>
        <div>{{ block.settings.text04 }}</div>
        <div>{{ block.settings.text05 }}</div>
        <div class="shane-height-4">{{ block.settings.text06 }}</div>
        <div class="shane-height-3">{{ block.settings.text07 }}</div>
        <div class="shane-height-3">{{ block.settings.text08 }}</div>
        <div class="shane-height-3">{{ block.settings.text09 }}</div>
        <div class="shane-height-4">{{ block.settings.text10 }}</div>
        <div class="viewing-price">{{ block.settings.text11 }}</div>
        <div class="viewing-cart">
          <a href="{{ block.settings.link }}"><input
              type="button"
              class="viewing-button"
              value="View More"></a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
<script>
  		$(".b4-viewing-right>div").mouseenter(function(){
  			$(".b4-viewing-right>div").removeClass("active");
  			$(this).addClass("active");			
  		});
</script>
