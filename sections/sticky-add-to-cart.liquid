{%- comment -%}
  Sticky Add to Cart Bar
  Appears at the bottom of the screen after scrolling to encourage product purchase
{%- endcomment -%}

<div
  class="sticky-add-to-cart-wrapper"
  id="sticky-add-to-cart"
  data-scroll-threshold="{{ section.settings.scroll_threshold }}">
  <div class="sticky-add-to-cart-bar">
    <div class="sticky-bar-content">
      <!-- Product image and title -->
      <div class="sticky-product-info">
        <div class="sticky-product-image">
          {%- if product.featured_image -%}
            <img
              src="{{ product.featured_image | img_url: '120x' }}"
              alt="{{ product.featured_image.alt | escape }}"
              width="60"
              height="60"
              loading="lazy">
          {%- else -%}
            <div class="sticky-image-placeholder"></div>
          {%- endif -%}
        </div>
        <div class="sticky-product-details">
          <h3 class="sticky-product-title">{{ product.title }}</h3>
          <div class="sticky-product-price">
            <span class="price-item price-item--regular">
              {{ product.price | money }}
            </span>
            {%- if product.compare_at_price > product.price -%}
              <span class="price-item price-item--sale">
                <s>{{ product.compare_at_price | money }}</s>
              </span>
            {%- endif -%}
          </div>
        </div>
      </div>

      <!-- Add to cart button -->
      <div class="sticky-add-to-cart-actions">
        <button
          type="button"
          class="sticky-add-to-cart-button"
          data-product-id="{{ product.id }}"
          {% unless product.available %}
          disabled{% endunless %}>
          {%- if product.available -%}
            {{ section.settings.button_text | default: 'Add to Cart' }}
          {%- else -%}
            Sold Out
          {%- endif -%}
        </button>
      </div>
    </div>
  </div>
</div>

<style>
  .sticky-add-to-cart-wrapper {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    transform: translateY(100%);
    transition: transform 0.3s ease-in-out;
    visibility: hidden;
    background-color: white;
  }

  .sticky-add-to-cart-wrapper.visible {
    transform: translateY(0);
    visibility: visible;
  }

  .sticky-add-to-cart-bar {
    background-color: white;
    box-shadow: 0 -4px 10px rgba(0, 0, 0, 0.1);
    padding: 12px 20px;
    border-top: 1px solid #e8e8e8;
  }

  .sticky-bar-content {
    max-width: 1370px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .sticky-product-info {
    display: flex;
    align-items: center;
  }

  .sticky-product-image {
    width: 60px;
    height: 60px;
    border-radius: 8px;
    overflow: hidden;
    margin-right: 16px;
    flex-shrink: 0;
    background-color: #f5f5f7;
  }

  .sticky-product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .sticky-image-placeholder {
    width: 100%;
    height: 100%;
    background-color: #f5f5f7;
  }

  .sticky-product-details {
    display: flex;
    flex-direction: column;
  }

  .sticky-product-title {
    font-size: 16px;
    font-weight: 600;
    color: #1d1d1f;
    margin: 0 0 4px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 240px;
  }

  .sticky-product-price {
    font-size: 16px;
    font-weight: 500;
    color: #1d1d1f;
    display: flex;
    align-items: center;
  }

  .price-item--sale {
    color: #FF6B00;
    margin-left: 8px;
  }

  .price-item--regular s {
    color: #86868b;
    font-weight: 400;
  }

  .sticky-add-to-cart-actions {
    display: flex;
    align-items: center;
  }

  .sticky-add-to-cart-button {
    background: linear-gradient(90deg, #FF6B00, #FF9A4D);
    border: none;
    border-radius: 50px;
    padding: 14px 32px;
    color: white;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s ease
    , box-shadow 0.2s ease;
    white-space: nowrap;
  }

  .sticky-add-to-cart-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .sticky-add-to-cart-button:disabled {
    background: #e0e0e0;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
  }

  @media screen and (max-width: 767px) {
    .sticky-bar-content {
      padding: 0;
    }

    .sticky-product-image {
      width: 50px;
      height: 50px;
      margin-right: 12px;
    }

    .sticky-product-title {
      font-size: 14px;
      max-width: 140px;
    }

    .sticky-product-price {
      font-size: 14px;
    }

    .sticky-add-to-cart-button {
      padding: 12px 24px;
      font-size: 14px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const stickyBar = document.getElementById('sticky-add-to-cart');
    if (!stickyBar) {
      console.log('Sticky bar not found');
      return;
    }
    
    console.log('Sticky bar found:', stickyBar);
    
    const scrollThreshold = parseInt(stickyBar.dataset.scrollThreshold) || 300;
    const addToCartButton = document.querySelector('.sticky-add-to-cart-button');
    
    // Check if we're on a product page (more comprehensive check)
    const isProductPage = document.body.classList.contains('template-product') || 
                         document.body.classList.contains('product-template') ||
                         window.location.pathname.includes('/products/') ||
                         document.querySelector('form[action*="/cart/add"]') ||
                         document.querySelector('[data-product-id]') ||
                         document.querySelector('.product-form');
    
    console.log('Is product page:', isProductPage);
    console.log('Body classes:', document.body.className);
    console.log('URL pathname:', window.location.pathname);
    
    if (!isProductPage) {
      console.log('Hiding sticky bar - not a product page');
      stickyBar.style.display = 'none';
      return;
    }
    
    // Handle scroll events
    function handleScroll() {
      console.log('Scroll Y:', window.scrollY, 'Threshold:', scrollThreshold);
      if (window.scrollY > scrollThreshold) {
        console.log('Adding visible class');
        stickyBar.classList.add('visible');
      } else {
        console.log('Removing visible class');
        stickyBar.classList.remove('visible');
      }
    }
    
    // Add scroll event listener
    window.addEventListener('scroll', handleScroll);
    
    // Initial check in case page is already scrolled
    handleScroll();
    
    // Handle add to cart click
    if (addToCartButton) {
      addToCartButton.addEventListener('click', function() {
        // Get the product form on the page
        const productForm = document.querySelector('form[action*="/cart/add"]');
        
        if (productForm) {
          // Simulate a click on the main add to cart button
          const mainAddToCartButton = productForm.querySelector('button[type="submit"]');
          if (mainAddToCartButton) {
            mainAddToCartButton.click();
          } else {
            // If no button found, submit the form
            productForm.submit();
          }
        } else {
          console.error('Product form not found');
        }
      });
    }
  });
</script>

{% schema %}
  {
    "name": "Sticky Add to Cart",
    "tag": "section",
    "class": "sticky-add-to-cart-section",
    "settings": [
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Add to Cart"
      },
      {
        "type": "range",
        "id": "scroll_threshold",
        "min": 100,
        "max": 1000,
        "step": 50,
        "unit": "px",
        "label": "Scroll Threshold",
        "default": 300,
        "info": "Amount of scroll before the sticky bar appears"
      }
    ],
    "presets": [
      {
        "name": "Sticky Add to Cart",
        "category": "Product"
      }
    ]
  }
{% endschema %}