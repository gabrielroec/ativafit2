{% comment %} 
                                    Hero Story Section - Estilo Peloton
                                    Seção de hero com título, subtítulo e fundo escuro 
{% endcomment %}

<section class="hero-story" data-section-id="{{ section.id }}">
  <div class="hero-story__container">
    <div class="hero-story__content">
      {% if section.settings.heading != blank %}
        <h1 class="hero-story__heading black">{{ section.settings.heading }}</h1>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="hero-story__subheading regular">{{ section.settings.subheading }}</p>
      {% endif %}

      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <div class="hero-story__button-wrapper">
          <a href="{{ section.settings.button_link }}" class="hero-story__button condensed-bold">
            {{ section.settings.button_text }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% style %}
  .hero-story {
    background: #ffffff;
    min-height: {{ section.settings.section_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    margin: 0 0 70px;
  }

  {% if section.settings.background_image != blank %}
    .hero-story {
      background-image: url('{{ section.settings.background_image | img_url: '1920x1080' }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }

    .hero-story::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
    }
  {% endif %}

  .hero-story__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 60px 20px;
    position: relative;
    z-index: 2;
  }

  .hero-story__content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-story__heading {
    font-size: 72px;
    font-weight: 900;
    color: #000000;
    margin-bottom: 20px;
    line-height: 1.1;
    letter-spacing: -1px;
    text-transform: uppercase;
  }

  .hero-story__subheading {
    font-size: 18px;
    color: #fff;
    margin-bottom: 40px;
    line-height: 1.6;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-story__button-wrapper {
    margin-top: 40px;
  }

  .hero-story__button {
    display: inline-block;
    padding: 15px 30px;
    background: transparent;
    color: #000000;
    border: 2px solid #000000;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .hero-story__button:hover {
    background: #000000;
    color: #ffffff;
    transform: translateY(-2px);
  }

  /* Image overlay text styling */
  {% if section.settings.background_image != blank %}
    .hero-story__heading {
      color: #ffffff;
    }
    .hero-story__subheading {
      color: #fff;
    }
    .hero-story__button {
      color: #ffffff;
      border-color: #ffffff;
    }
    .hero-story__button:hover {
      background: #ffffff;
      color: #000000;
    }
  {% endif %}

  /* Responsive */
  @media screen and (max-width: 768px) {
    .hero-story {
      min-height: {{ section.settings.section_height | divided_by: 1.5 }}px;
      margin: 0;
    }

    .hero-story__container {
      padding: 40px 15px;
    }

    .hero-story__heading {
      font-size: 48px;
      margin-bottom: 15px;
    }

    .hero-story__subheading {
      font-size: 16px;
      margin-bottom: 30px;
    }

    .hero-story__button {
      padding: 12px 25px;
      font-size: 13px;
    }
  }

  @media screen and (max-width: 480px) {
    .hero-story__heading {
      font-size: 36px;
    }

    .hero-story__subheading {
      font-size: 15px;
    }
  }
{% endstyle %}

{% schema %}
  {
    "name": "Hero Story",
    "settings": [
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "The Ativafit Story"
      },
      {
        "type": "textarea",
        "id": "subheading",
        "label": "Subheading",
        "default": "Our company and mission"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }, {
        "type": "header",
        "content": "Background"
      }, {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      }, {
        "type": "range",
        "id": "section_height",
        "label": "Section Height (px)",
        "min": 400,
        "max": 800,
        "step": 50,
        "default": 600
      }
    ],
    "presets": [
      {
        "name": "Hero Story",
        "settings": {
          "heading": "The Ativafit Story",
          "subheading": "Our company and mission"
        }
      }
    ]
  }
{% endschema %}