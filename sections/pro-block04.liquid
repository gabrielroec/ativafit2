<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .shane-pro-b4 {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 40px 20px;
    box-sizing: border-box;
  }

  .header {
    text-align: center;
    margin-bottom: 50px;
    background-color: #fff;
  }

  .header h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 16px;
    line-height: 1.3;
  }

  .header .text {
    font-size: 1.1rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto !important;
    line-height: 1.6;

  }

  .scroll-indicator {
    display: none;
    text-align: center;
    padding: 12px;
    color: #888;
    font-size: 0.85rem;
    background: #f5f5f5;
    border-radius: 8px;
    margin-bottom: 16px;
  }

  .scroll-indicator span {
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .scroll-indicator svg {
    animation: scrollHint 1.5s ease-in-out infinite;
  }

  @keyframes scrollHint {
    0,
    100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(8px);
    }
  }

  .comparison-wrapper {
    display: flex;
    gap: 0;
    background: #fff;
    border-radius: 16px;
    /* box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08); */
    overflow: hidden;
  }

  /* Feature Labels Column */
  .features-column {
    flex-shrink: 0;
    width: 200px;
    background: #fff;
    border-right: 1px solid #eee;
  }

  .feature-header {
    height: 280px;
    display: flex;
    align-items: flex-end;
    padding: 20px;
    border-bottom: 1px solid #eee;
  }

  .feature-label {
    padding: 16px 20px;
    font-size: 0.9rem;
    font-weight: 600;
    color: #e65100;
    border-bottom: 1px solid #eee;
    min-height: 56px;
    display: flex;
    align-items: center;
  }

  .feature-label:last-child {
    border-bottom: none;
  }

  /* Products Container */
  .products-container {
    flex: 1;
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: #ff6b00 #eee;
  }

  .products-container::-webkit-scrollbar {
    height: 6px;
  }

  .products-container::-webkit-scrollbar-track {
    background: #eee;
  }

  .products-container::-webkit-scrollbar-thumb {
    background: #ff6b00;
    border-radius: 3px;
  }

  /* Product Card */
  .product-card {


    scroll-snap-align: start;
    border-right: 1px solid #eee;
    position: relative;
  }

  .product-card:last-child {
    border-right: none;
  }

  .product-card.featured {
    background: linear-gradient(180deg, #fff5eb 0%, #fff 100%);
  }

  .product-card.featured::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: #ff6b00;
  }

  /* Product Header */
  .product-header {
    height: 280px;
    padding: 20px;
    text-align: center;
    border-bottom: 1px solid #eee;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .badge {
    background: #ff6b00;
    color: white;
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 1px;
    padding: 6px 16px;
    border-radius: 20px;
    text-transform: uppercase;
    display: inline-block;
    margin-bottom: 10px;
    opacity: 0;
    transform: translateY(-10px);
    transition: all 0.3s ease;
  }

  .product-card.featured .badge {
    opacity: 1;
    transform: translateY(0);
  }

  .product-image {
    width: 100%;
    height: 140px;
    object-fit: contain;
    margin: 10px 0;
    /* Máscara para remover fundo branco */
    mix-blend-mode: multiply;
    /* Alternativa: usar darken para fundos mais claros */
    /* mix-blend-mode: darken; */
    /* Se precisar de mais controle, pode usar filter também */
    /* filter: contrast(1.1) brightness(1.05); */
  }

  .product-name {
    font-size: 1rem;
    font-weight: 700;
    color: #1a1a1a;
    text-transform: uppercase;
  }

  /* Spec Rows */
  .spec-value {
    padding: 16px 20px;
    font-size: 0.9rem;
    color: #444;
    text-align: center;
    border-bottom: 1px solid #eee;
    min-height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .spec-value:last-child {
    border-bottom: none;
  }

  .product-card.featured .spec-value {
    font-weight: 500;
    color: #333;
  }

  /* CTA Button */
  .cta-section {
    padding: 20px;
    text-align: center;
  }

  .cta-button {
    display: inline-block;
    background: #ff6b00;
    color: white;
    font-size: 0.95rem;
    font-weight: 600;
    padding: 14px 40px;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(255, 107, 0, 0.3);
    border: 0;
    cursor: pointer;
  }

  .cta-button:hover {
    background: #e65100;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 107, 0, 0.4);
  }

  /* Responsive Styles */
  @media (max-width: 1200px) {
    .header h2 {
      font-size: 2rem;
    }
  }

  @media (max-width: 1024px) {
    .features-column {
      width: 160px;
    }

    .product-card {
      min-width: 240px;
    }
  }

  @media (max-width: 992px) {
    .header h2 {
      font-size: 1.75rem;
    }
  }

  @media (max-width: 768px) {
    .shane-pro-b4 {
      padding: 24px 12px;
    }

    .header h2 {
      font-size: 1.75rem;
    }

    .header .text {
      font-size: 0.95rem;
    }

    .scroll-indicator {
      display: block;
    }

    .comparison-wrapper {
      border-radius: 12px;
    }

    .features-column {
      width: 120px;
      position: sticky;
      left: 0;
      z-index: 10;
      background: #fff;
    }

    .feature-header {
      height: 240px;
      padding: 12px;
    }

    .feature-label {
      padding: 12px;
      font-size: 0.75rem;
      min-height: 48px;
    }

    .product-card {
      min-width: 200px;
    }

    .product-header {
      height: 240px;
      padding: 12px;
    }

    .badge {
      font-size: 0.6rem;
      padding: 4px 10px;
    }

    .product-image {
      height: 100px;
    }

    .product-name {
      font-size: 0.8rem;
    }

    .spec-value {
      padding: 12px;
      font-size: 0.75rem;
      min-height: 48px;
    }

    .cta-button {
      padding: 10px 24px;
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .features-column {
      width: 100px;
    }

    .product-card {
      min-width: 180px;
    }

    .feature-label,
    .spec-value {
      font-size: 0.7rem;
      padding: 10px 8px;
    }
  }
</style>

