<script>
  (function() {
    function initHoverEffect() {
      const cards = document.querySelectorAll('.product-card');
      const container = document.querySelector('.products-container');
  				
      if (cards.length === 0) return;
  				
      // Garantir que o scroll comece na posição 0 (primeiro card totalmente visível)
      if (container) {
        container.scrollLeft = 0;
        
        // Verificar se está no mobile e garantir scroll inicial
        if (window.innerWidth <= 768) {
          setTimeout(function() {
            container.scrollLeft = 0;
          }, 100);
        }
      }
  				
      cards.forEach(function(card) {
        card.addEventListener('mouseenter', function() {
          // Remove featured de todos os cards
          cards.forEach(function(c) {
            c.classList.remove('featured');
          });
          // Adiciona featured no card atual
          this.classList.add('featured');
        });
        
        // Para mobile: adicionar evento de toque
        if (window.innerWidth <= 768) {
          card.addEventListener('touchstart', function() {
            cards.forEach(function(c) {
              c.classList.remove('featured');
            });
            this.classList.add('featured');
            
            // Scroll suave para o card ativo
            if (container) {
              const cardLeft = this.offsetLeft;
              container.scrollTo({
                left: cardLeft,
                behavior: 'smooth'
              });
            }
          });
        }
      });
    }
    
    // Tentar inicializar quando o DOM estiver pronto
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initHoverEffect);
    } else {
      initHoverEffect();
    }
    
    // Também tentar com jQuery se estiver disponível (para compatibilidade)
    if (typeof jQuery !== 'undefined') {
      jQuery(document).ready(function($) {
        $(".product-card").on('mouseenter', function(){
          $(".product-card").removeClass("featured");
          $(this).addClass("featured");
        });
        
        // Garantir scroll inicial no mobile
        if (window.innerWidth <= 768) {
          var container = $(".products-container")[0];
          if (container) {
            container.scrollLeft = 0;
          }
        }
      });
    }
    
    // Para o Shopify Theme Editor
    if (typeof Shopify !== 'undefined' && Shopify.designMode) {
      document.addEventListener('shopify:section:load', initHoverEffect);
    }
    
    // Reajustar scroll ao redimensionar a janela
    window.addEventListener('resize', function() {
      const container = document.querySelector('.products-container');
      if (container && window.innerWidth <= 768) {
        container.scrollLeft = 0;
      }
    });
  })();
</script>

