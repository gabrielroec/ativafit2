{% comment %} 
                    Workout Hero Section
                    Hero banner for workout programs with modern design
{% endcomment %}

<section class="workout-hero" data-section-id="{{ section.id }}">
  <div class="workout-hero__background">
    {% if section.settings.background_image != blank %}
      {{ section.settings.background_image | image_url: width: 1920 | image_tag: class: 'workout-hero__bg-image', loading: 'eager', alt: 'Workout background'
      }}
    {% endif %}
    <div class="workout-hero__overlay" style="opacity: {{ section.settings.overlay_opacity | default: 0.7 }};"></div>
  </div>

  <div class="workout-hero__container">
    <div class="workout-hero__content-wrapper">
      <div class="workout-hero__content">
        {% if section.settings.heading != blank %}
          <h1 class="workout-hero__heading">{{ section.settings.heading }}</h1>
        {% endif %}

        {% if section.settings.intro_text != blank %}
          <div class="workout-hero__intro">
            <p class="workout-hero__intro-text">{{ section.settings.intro_text }}</p>
          </div>
        {% endif %}

        <!-- Skill Bars -->
        {% if section.settings.show_skill_bars %}
          <div class="workout-hero__skills">
            {% if section.settings.skill_1_name != blank %}
              <div class="workout-hero__skill">
                <div class="workout-hero__skill-info">
                  <span class="workout-hero__skill-name">{{ section.settings.skill_1_name }}</span>
                  <span class="workout-hero__skill-percentage">{{ section.settings.skill_1_percentage }}%</span>
                </div>
                <div class="workout-hero__skill-bar">
                  <div class="workout-hero__skill-progress" style="width: {{ section.settings.skill_1_percentage }}%; background-color: {{ section.settings.skill_1_color | default: '#FF6100' }};"></div>
                </div>
              </div>
            {% endif %}

            {% if section.settings.skill_2_name != blank %}
              <div class="workout-hero__skill">
                <div class="workout-hero__skill-info">
                  <span class="workout-hero__skill-name">{{ section.settings.skill_2_name }}</span>
                  <span class="workout-hero__skill-percentage">{{ section.settings.skill_2_percentage }}%</span>
                </div>
                <div class="workout-hero__skill-bar">
                  <div class="workout-hero__skill-progress" style="width: {{ section.settings.skill_2_percentage }}%; background-color: {{ section.settings.skill_2_color | default: '#28a745' }};"></div>
                </div>
              </div>
            {% endif %}

            {% if section.settings.skill_3_name != blank %}
              <div class="workout-hero__skill">
                <div class="workout-hero__skill-info">
                  <span class="workout-hero__skill-name">{{ section.settings.skill_3_name }}</span>
                  <span class="workout-hero__skill-percentage">{{ section.settings.skill_3_percentage }}%</span>
                </div>
                <div class="workout-hero__skill-bar">
                  <div class="workout-hero__skill-progress" style="width: {{ section.settings.skill_3_percentage }}%; background-color: {{ section.settings.skill_3_color | default: '#007bff' }};"></div>
                </div>
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% style %}
  .workout-hero {
    position: relative;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    overflow: hidden;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .workout-hero__bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .workout-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.4) 100%);
    z-index: 2;
  }

  .workout-hero__container {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1350px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .workout-hero__content-wrapper {
    margin: 0;
    padding: 0 20px;
  }

  .workout-hero__content {
    margin: 0;
  }

  .workout-hero__heading {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 900;
    color: #ffffff;
    margin-bottom: 16px;
    line-height: 1.1;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-hero__intro {
    margin-bottom: 32px;
  }

  .workout-hero__intro-text {
    font-size: 1rem;
    color: #ffffff;
    line-height: 1.5;
    font-weight: 400;
    font-family: 'Barlow'
    , sans-serif !important;
    opacity: 0.85;
    max-width: 500px;
    margin: 0;
  }

  .workout-hero__skills {
    display: flex;
    flex-direction: column;
    gap: 12px;
    max-width: 400px;
    margin: 0;
  }

  .workout-hero__skill {
    background: rgba(255, 255, 255, 0.08);
    padding: 12px 16px;
    border-radius: 6px;
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .workout-hero__skill-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 6px;
  }

  .workout-hero__skill-name {
    font-size: 0.75rem;
    font-weight: 600;
    color: #ffffff;
    font-family: 'Barlow'
    , sans-serif !important;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .workout-hero__skill-percentage {
    font-size: 0.75rem;
    font-weight: 500;
    color: #ffffff;
    opacity: 0.8;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-hero__skill-bar {
    width: 100%;
    height: 4px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 2px;
    overflow: hidden;
  }

  .workout-hero__skill-progress {
    height: 100%;
    border-radius: 2px;
    transition: width 1s ease-in-out;
  }

  /* Responsive */
  @media screen and (max-width: 768px) {
    .workout-hero {
      min-height: 60vh;
    }

    .workout-hero__container {
      padding: 0 16px;
    }

    .workout-hero__content-wrapper {
      padding: 0 16px;
    }

    .workout-hero__skills {
      max-width: 100%;
    }
  }

  @media screen and (max-width: 480px) {
    .workout-hero {
      min-height: 50vh;
    }

    .workout-hero__container {
      padding: 0 16px;
    }

    .workout-hero__content-wrapper {
      padding: 0;
    }

    .workout-hero__heading {
      margin-bottom: 12px;
    }

    .workout-hero__intro {
      margin-bottom: 24px;
    }

    .workout-hero__skill {
      padding: 10px 12px;
    }
  }
{% endstyle %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Animate skill bars on load
    const skillBars = document.querySelectorAll('.workout-hero__skill-progress');
    
    skillBars.forEach((bar, index) => {
      setTimeout(() => {
        const percentage = bar.style.width;
        bar.style.width = '0%';
        
        setTimeout(() => {
          bar.style.width = percentage;
        }, 100);
      }, index * 150);
    });
  });
</script>

