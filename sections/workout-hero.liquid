{% style %}
  .workout-hero {
    position: relative;
    min-height: 500px;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    overflow: hidden;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .workout-hero__bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    filter: blur(8px);
  }

  .workout-hero__bg-fallback {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .workout-hero__bg-fallback::before {
    content: '🏃‍♂️';
    font-size: 4rem;
    opacity: 0.3;
  }

  .workout-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    z-index: 2;
  }

  .workout-hero__container {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1350px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .workout-hero__content-box {
    background: #ffffff;
    border-radius: 16px 16px 0 0;
    padding: 40px;
    max-width: 600px;
    width: 100%;
    margin: 0 auto;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .workout-hero__heading {
    font-size: 2.5rem;
    font-weight: 900;
    color: #1d1d1f;
    margin-bottom: 20px;
    line-height: 1.1;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    font-family: 'Barlow'
    , sans-serif !important;
    text-align: center;
  }

  .workout-hero__intro {
    margin-bottom: 0;
  }

  .workout-hero__intro-text {
    font-size: 1.125rem;
    color: #333333;
    line-height: 1.6;

    font-family: 'Barlow'
    , sans-serif !important;
    text-align: center;
  }

  /* Skills Section (Below Banner) */
  .workout-hero__skills-section {
    background: #ffffff;
    padding: 60px 0;
    font-family: 'Barlow'
    , sans-serif !important;
    border-radius: 0 0 16px 16px;
  }

  .workout-hero__skills-container {
    max-width: 1350px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: center;
    gap: 60px;
    align-items: center;
  }

  .workout-hero__skill-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0;
    min-width: 200px;
  }

  .workout-hero__skill-content {
