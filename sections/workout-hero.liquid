{% comment %} 
                                                                                                                                                                                                                        Workout Hero Section
                                                                                                                                                                                                                        Hero banner for workout programs with modern design
{% endcomment %}

<section class="workout-hero" data-section-id="{{ section.id }}">
  <div class="workout-hero__background">
    <!-- DEBUG: {{ section.settings.background_image | json }} -->
    {% if section.settings.background_image %}
      <img
        src="{{ section.settings.background_image | image_url: width: 1920 }}"
        alt="Workout background"
        class="workout-hero__bg-image"
        width="1920"
        height="600"
        style="width: 100%; height: 100%; object-fit: cover; filter: blur(8px);">
    {% else %}
      <div class="workout-hero__bg-fallback" style="width: 100%; height: 100%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center;">
        <p style="color: white; text-align: center; padding: 20px;">No image selected</p>
      </div>
    {% endif %}
    <div class="workout-hero__overlay"></div>
  </div>

  <div class="workout-hero__container">
    <div class="workout-hero__content-box">
      {% if section.settings.heading != blank %}
        <h1 class="workout-hero__heading">{{ section.settings.heading }}</h1>
      {% endif %}

      {% if section.settings.intro_text != blank %}
        <div class="workout-hero__intro">
          <p class="workout-hero__intro-text">{{ section.settings.intro_text }}</p>
        </div>
      {% endif %}
    </div>
  </div>
</section>

