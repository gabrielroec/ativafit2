{% comment %} 
      Workout Hero Section
      Hero banner for workout programs with modern design
{% endcomment %}

<section class="workout-hero" data-section-id="{{ section.id }}">
  <div class="workout-hero__background">
    {% if section.settings.background_image != blank %}
      {{ section.settings.background_image | image_url: width: 1920 | image_tag: 
 class: 'workout-hero__bg-image', 
 loading: 'eager', 
 alt: 'Workout background'
      }}
    {% endif %}
    <div class="workout-hero__overlay" style="opacity: {{ section.settings.overlay_opacity | default: 0.7 }};"></div>
  </div>

  <div class="workout-hero__container">
    <div class="workout-hero__content">
      {% if section.settings.heading != blank %}
        <h1 class="workout-hero__heading">{{ section.settings.heading }}</h1>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="workout-hero__subheading">{{ section.settings.subheading }}</p>
      {% endif %}

      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <div class="workout-hero__button-wrapper">
          <a href="{{ section.settings.button_link }}" class="workout-hero__button">
            {{ section.settings.button_text }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% style %}
  .workout-hero {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .workout-hero__bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .workout-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.4) 100%);
    z-index: 2;
  }

  .workout-hero__container {
    position: relative;
    z-index: 3;
    max-width: 1350px;
    margin: 0 auto;
    padding: 0 20px;
    text-align: center;
  }

  .workout-hero__content {
    max-width: 800px;
    margin: 0 auto;
  }

  .workout-hero__heading {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 900;
    color: #ffffff;
    margin-bottom: 24px;
    line-height: 1.1;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-hero__subheading {
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    color: #ffffff;
    margin-bottom: 40px;
    line-height: 1.4;
    font-weight: 400;
    font-family: 'Barlow'
    , sans-serif !important;
    opacity: 0.9;
  }

  .workout-hero__button-wrapper {
    margin-top: 40px;
  }

  .workout-hero__button {
    display: inline-block;
    padding: 18px 36px;
    background: #FF6100;
    color: #ffffff;
    text-decoration: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    font-family: 'Barlow'
    , sans-serif !important;
    border: 2px solid #FF6100;
  }

  .workout-hero__button:hover {
    background: #e55700;
    border-color: #e55700;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(255, 97, 0, 0.3);
  }

  /* Responsive */
  @media screen and (max-width: 768px) {
    .workout-hero {
      min-height: 70vh;
    }

    .workout-hero__container {
      padding: 0 16px;
    }

    .workout-hero__button {
      padding: 16px 28px;
      font-size: 14px;
    }
  }

  @media screen and (max-width: 480px) {
    .workout-hero {
      min-height: 60vh;
    }

    .workout-hero__heading {
      margin-bottom: 16px;
    }

    .workout-hero__subheading {
      margin-bottom: 32px;
    }
  }
{% endstyle %}

{% schema %}
  {
    "name": "Workout Hero",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "The Starter 30-Min Bedside Workout"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Transform your fitness journey with this comprehensive at-home program"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "range",
        "id": "overlay_opacity",
        "min": 0,
        "max": 1,
        "step": 0.1,
        "label": "Overlay Opacity",
        "default": 0.7
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "START WORKOUT"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Workout Hero"
      }
    ]
  }
{% endschema %}