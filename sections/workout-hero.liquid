    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    flex-shrink: 0;
    overflow: hidden;
  }

  .workout-hero__skill-icon:empty {
    display: none;
  }

  .workout-hero__skill-icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
  }

