<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Seleciona todas as divs com imagens de fundo
    const backgroundImages = document.querySelectorAll('.bg-1, .bg-2, .bg-3, .bg-4');
    
    // Função para verificar se um elemento está visível na viewport
    function isElementInViewport(el) {
      const rect = el.getBoundingClientRect();
      return (
        rect.top <= (window.innerHeight || document.documentElement.clientHeight) * 0.8 &&
        rect.bottom >= (window.innerHeight || document.documentElement.clientHeight) * 0.2
      );
    }
    
    // Função para aplicar o efeito parallax baseado na posição do scroll
    function applyParallax() {
      backgroundImages.forEach(image => {
        // Calcula quanto o elemento está dentro da viewport (0 a 1)
        const rect = image.getBoundingClientRect();
        const windowHeight = window.innerHeight || document.documentElement.clientHeight;
        const viewportFactor = 1 - (rect.top + rect.height / 2) / windowHeight;
        
        // Aplica um movimento suave ao fundo
        const moveY = viewportFactor * 5; // Ajuste a intensidade aqui
        image.style.setProperty('--parallax-offset', `${moveY}%`);
      });
    }
    
    // Função para animar os elementos quando estiverem visíveis
    function animateOnScroll() {
      backgroundImages.forEach(image => {
        if (isElementInViewport(image)) {
          // Quando a imagem está visível, aplica a transformação
          image.classList.add('in-view');
        } else {
          // Quando a imagem não está visível, remove a classe
          image.classList.remove('in-view');
        }
      });
      
      // Aplica o efeito parallax
      applyParallax();
    }
    
    // Executa a animação ao carregar a página
    animateOnScroll();
    
    // Adiciona o evento de scroll para atualizar as animações durante a rolagem
    window.addEventListener('scroll', function() {
      requestAnimationFrame(animateOnScroll);
    });
    
    // Também atualiza ao redimensionar a janela
    window.addEventListener('resize', function() {
      animateOnScroll();
    });
  });
</script>