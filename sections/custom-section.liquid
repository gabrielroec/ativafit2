    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(5px);
    transform: translateY(30px);
    opacity: 0;
    transition: opacity 0.6s ease-out 0.2s
    , transform 0.6s ease-out 0.2s;
    margin: 15px;
  }

  .in-view .custom-section__image-1-text {
    transform: translateY(0);
    opacity: 1;
  }
  .bg-1,
  .bg-2,
  .bg-3,
  .bg-4 {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    display: flex;
    padding-bottom: 20px;
    position: relative;
    overflow: hidden;
    --parallax-offset: 0;
  }

  .bg-1::before,
  .bg-2::before,
  .bg-3::before,
  .bg-4::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-size: cover;
    background-position: center calc(50% + var(--parallax-offset));
    transition: transform 0.8s ease-out
    , filter 0.8s ease
    , background-position 0.1s linear;
    z-index: 1;
    transform: scale(1.05);
    filter: brightness(0.9);
  }

  /* Efeito de zoom quando em visualização */
  .bg-1.in-view::before,
  .bg-2.in-view::before,
  .bg-3.in-view::before,
  .bg-4.in-view::before {
