      "type": "header",
      "content": "Aspect Ratio"
    },
    {
      "type": "range",
      "id": "desktop_aspect_ratio_width",
      "min": 1,
      "max": 21,
      "step": 1,
      "label": "Desktop aspect ratio - Width",
      "default": 16,
      "info": "Proporção largura:altura. 16:9 é padrão para banners desktop"
    },
    {
      "type": "range",
      "id": "desktop_aspect_ratio_height",
      "min": 1,
      "max": 21,
      "step": 1,
      "label": "Desktop aspect ratio - Height",
      "default": 9,
      "info": "Proporção largura:altura. 16:9 é padrão para banners desktop"
    },
    {
      "type": "range",
      "id": "mobile_aspect_ratio_width",
      "min": 1,
      "max": 21,
      "step": 1,
      "label": "Mobile aspect ratio - Width",
      "default": 9,
      "info": "Proporção largura:altura. 9:16 é padrão para banners mobile"
    },
    {
      "type": "range",
      "id": "mobile_aspect_ratio_height",
      "min": 1,
