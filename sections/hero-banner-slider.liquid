{% comment %}
  Hero Banner Slider Section
  Fully responsive slider with support for videos and images
  Supports up to 5 slides with individual enable/disable toggle
  Separate images/videos for desktop and mobile
{% endcomment %}

{% assign ai_gen_id = section.id | replace: '_', '' | downcase %}

{% liquid
  assign active_slides = 0
  
  for i in (1..5)
    assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
    assign slide_enabled = section.settings[slide_enabled_key]
    
    if slide_enabled
      assign active_slides = active_slides | plus: 1
    endif
  endfor
%}

{% style %}
  .ai-hero-slider-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: {{ section.settings.background_color }};
  }
  .ai-hero-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
  }
  .ai-hero-slider-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }
  .ai-hero-slide-{{ ai_gen_id }} {
    min-width: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .ai-hero-slide-link-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    position: relative;
    text-decoration: none;
  }
  .ai-hero-slide-media-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }
  .ai-hero-slide-media-{{ ai_gen_id }} img,
  .ai-hero-slide-media-{{ ai_gen_id }} video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .ai-hero-slide-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity }});
    pointer-events: none;
  }
  .ai-hero-slide-content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 40px 20px;
    z-index: 2;
    pointer-events: none;
  }
  .ai-hero-slide-content-{{ ai_gen_id }}.align-left {
    align-items: flex-start;
    text-align: left;
  }
  .ai-hero-slide-content-{{ ai_gen_id }}.align-center {
    align-items: center;
    text-align: center;
  }
  .ai-hero-slide-content-{{ ai_gen_id }}.align-right {
    align-items: flex-end;
    text-align: right;
  }
  .ai-hero-slide-title-{{ ai_gen_id }} {
    font-size: {{ section.settings.title_size }}px;
    color: {{ section.settings.text_color }};
    margin: 0 0 16px;
    max-width: 800px;
    font-weight: 700;
    line-height: 1.2;
  }
  .ai-hero-slide-subtitle-{{ ai_gen_id }} {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.text_color }};
    margin: 0 0 24px;
    max-width: 600px;
    line-height: 1.5;
  }
  .ai-hero-slide-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    pointer-events: auto;
    border: none;
    cursor: pointer;
  }
  .ai-hero-slide-button-{{ ai_gen_id }}:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    color: {{ section.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }
  .ai-hero-slider-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    background-color: {{ section.settings.nav_bg_color }};
    color: {{ section.settings.nav_icon_color }};
    border: none;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    opacity: 0.9;
  }
  .ai-hero-slider-nav-{{ ai_gen_id }}:hover {
    opacity: 1;
    transform: translateY(-50%) scale(1.1);
  }
  .ai-hero-slider-nav-{{ ai_gen_id }}.prev {
    left: 20px;
  }
  .ai-hero-slider-nav-{{ ai_gen_id }}.next {
    right: 20px;
  }
  .ai-hero-slider-dots-{{ ai_gen_id }} {
    position: absolute;
    bottom: 24px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 12px;
    z-index: 10;
  }
  .ai-hero-slider-dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ section.settings.dot_color }};
    opacity: 0.5;
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
    padding: 0;
  }
  .ai-hero-slider-dot-{{ ai_gen_id }}.active {
    opacity: 1;
    transform: scale(1.2);
  }
  .ai-hero-slide-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }
  .ai-hero-slide-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }
  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }
  @media screen and (max-width: 749px) {
    .ai-hero-slider-wrapper-{{ ai_gen_id }},
    .ai-hero-slider-track-{{ ai_gen_id }},
    .ai-hero-slide-{{ ai_gen_id }},
    .ai-hero-slide-link-{{ ai_gen_id }},
    .ai-hero-slide-media-{{ ai_gen_id }} {
      aspect-ratio: {{ section.settings.mobile_aspect_ratio_width }} / {{ section.settings.mobile_aspect_ratio_height }};
    }
    .ai-hero-slide-title-{{ ai_gen_id }} {
      font-size: calc({{ section.settings.title_size }}px * 0.6);
    }
    .ai-hero-slide-subtitle-{{ ai_gen_id }} {
      font-size: calc({{ section.settings.subtitle_size }}px * 0.8);
    }
    .ai-hero-slide-button-{{ ai_gen_id }} {
      font-size: calc({{ section.settings.button_font_size }}px * 0.9);
      padding: 12px 24px;
    }
    .ai-hero-slider-nav-{{ ai_gen_id }} {
      width: 40px;
      height: 40px;
    }
    .ai-hero-slider-nav-{{ ai_gen_id }}.prev {
      left: 10px;
    }
    .ai-hero-slider-nav-{{ ai_gen_id }}.next {
      right: 10px;
    }
    .ai-hero-slide-content-{{ ai_gen_id }} {
      padding: 20px 15px;
    }
    .ai-hero-desktop-media-{{ ai_gen_id }} {
      display: none !important;
    }
    .ai-hero-mobile-media-{{ ai_gen_id }} {
      display: block !important;
    }
  }
  @media screen and (min-width: 750px) {
    .ai-hero-slider-wrapper-{{ ai_gen_id }},
    .ai-hero-slider-track-{{ ai_gen_id }},
    .ai-hero-slide-{{ ai_gen_id }},
    .ai-hero-slide-link-{{ ai_gen_id }},
    .ai-hero-slide-media-{{ ai_gen_id }} {
      aspect-ratio: {{ section.settings.desktop_aspect_ratio_width }} / {{ section.settings.desktop_aspect_ratio_height }};
    }
    .ai-hero-desktop-media-{{ ai_gen_id }} {
      display: block !important;
    }
    .ai-hero-mobile-media-{{ ai_gen_id }} {
      display: none !important;
    }
  }
{% endstyle %}

<div
  class="ai-hero-slider-{{ ai_gen_id }} hero-slider-container"
  data-autoplay="{{ section.settings.enable_autoplay }}"
  data-autoplay-speed="{{ section.settings.autoplay_speed }}"
  data-slider-id="{{ ai_gen_id }}"
  {{ section.shopify_attributes }}
>
  <div class="ai-hero-slider-wrapper-{{ ai_gen_id }}">
    <div class="ai-hero-slider-track-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
          assign desktop_image_key = 'slide_' | append: i | append: '_desktop_image'
          assign desktop_video_key = 'slide_' | append: i | append: '_desktop_video'
          assign mobile_image_key = 'slide_' | append: i | append: '_mobile_image'
          assign mobile_video_key = 'slide_' | append: i | append: '_mobile_video'
          assign title_key = 'slide_' | append: i | append: '_title'
          assign subtitle_key = 'slide_' | append: i | append: '_subtitle'
          assign text_alignment_key = 'slide_' | append: i | append: '_text_alignment'
          assign button_label_key = 'slide_' | append: i | append: '_button_label'
          assign button_link_key = 'slide_' | append: i | append: '_button_link'
          assign slide_link_key = 'slide_' | append: i | append: '_slide_link'
          assign slide_enabled = section.settings[slide_enabled_key]
          assign desktop_image = section.settings[desktop_image_key]
          assign desktop_video = section.settings[desktop_video_key]
          assign mobile_image = section.settings[mobile_image_key]
          assign mobile_video = section.settings[mobile_video_key]
          assign title = section.settings[title_key]
          assign subtitle = section.settings[subtitle_key]
          assign text_alignment = section.settings[text_alignment_key]
          assign button_label = section.settings[button_label_key]
          assign button_link = section.settings[button_link_key]
          assign slide_link = section.settings[slide_link_key]
          assign has_desktop_image = false
          assign has_desktop_video = false
          assign has_mobile_image = false
          assign has_mobile_video = false
          if desktop_image != blank
            assign has_desktop_image = true
          endif
          if desktop_video != blank
            assign has_desktop_video = true
          endif
          if mobile_image != blank
            assign has_mobile_image = true
          endif
          if mobile_video != blank
            assign has_mobile_video = true
          endif
          assign has_content = false
          if title != blank or subtitle != blank or button_label != blank
            assign has_content = true
          endif
        %}
        {% if slide_enabled %}
          <div class="ai-hero-slide-{{ ai_gen_id }}" data-slide-index="{{ forloop.index0 }}">
            {% if slide_link != blank %}
              <a href="{{ slide_link }}" class="ai-hero-slide-link-{{ ai_gen_id }}">
            {% else %}
              <div class="ai-hero-slide-link-{{ ai_gen_id }}">
            {% endif %}
              <div class="ai-hero-slide-media-{{ ai_gen_id }}">
                {% if has_desktop_video or has_desktop_image or has_mobile_video or has_mobile_image %}
                  {% if has_desktop_video %}
                    <video
                      class="ai-hero-desktop-media-{{ ai_gen_id }}"
                      autoplay
                      muted
                      loop
                      playsinline
                      {% if desktop_image %}
                        poster="{{ desktop_image | image_url: width: 2000 }}"
                      {% endif %}
                    >
                      <source src="{{ desktop_video }}" type="video/mp4">
                    </video>
                  {% elsif has_desktop_image %}
                    <img
                      class="ai-hero-desktop-media-{{ ai_gen_id }}"
                      src="{{ desktop_image | image_url: width: 1920, format: 'pjpg' }}"
                      srcset="{{ desktop_image | image_url: width: 768, format: 'pjpg' }} 768w,
                              {{ desktop_image | image_url: width: 1024, format: 'pjpg' }} 1024w,
                              {{ desktop_image | image_url: width: 1366, format: 'pjpg' }} 1366w,
                              {{ desktop_image | image_url: width: 1920, format: 'pjpg' }} 1920w,
                              {{ desktop_image | image_url: width: 2560, format: 'pjpg' }} 2560w"
                      sizes="100vw"
                      alt="{{ desktop_image.alt | escape }}"
                      loading="lazy"
                      width="{{ desktop_image.width }}"
                      height="{{ desktop_image.height }}"
                    >
                  {% endif %}
                  {% if has_mobile_video %}
                    <video
                      class="ai-hero-mobile-media-{{ ai_gen_id }}"
                      autoplay
                      muted
                      loop
                      playsinline
                      {% if mobile_image %}
                        poster="{{ mobile_image | image_url: width: 1000 }}"
                      {% endif %}
                    >
                      <source src="{{ mobile_video }}" type="video/mp4">
                    </video>
                  {% elsif has_mobile_image %}
                    <img
                      class="ai-hero-mobile-media-{{ ai_gen_id }}"
                      src="{{ mobile_image | image_url: width: 750, crop: 'center' }}&quality=75&format=pjpg"
                      srcset="{{ mobile_image | image_url: width: 390, crop: 'center' }}&quality=75&format=pjpg 390w,
                              {{ mobile_image | image_url: width: 500, crop: 'center' }}&quality=75&format=pjpg 500w,
                              {{ mobile_image | image_url: width: 750, crop: 'center' }}&quality=75&format=pjpg 750w"
                      sizes="100vw"
                      alt="{{ mobile_image.alt | escape }}"
                      fetchpriority="high"
                      loading="eager"
                      width="750"
                      height="750">
                  {% endif %}
                {% else %}
                  <div class="ai-hero-slide-placeholder-{{ ai_gen_id }}">
                    {{ 'hero-apparel-1' | placeholder_svg_tag }}
                    <div class="ai-hero-empty-state-{{ ai_gen_id }}">
                      Add an image or video for slide {{ i }}
                    </div>
                  </div>
                {% endif %}
                <div class="ai-hero-slide-overlay-{{ ai_gen_id }}"></div>
              </div>
              {% if has_content %}
                <div class="ai-hero-slide-content-{{ ai_gen_id }} align-{{ text_alignment }}">
                  {% if title != blank %}
                    <h2 class="ai-hero-slide-title-{{ ai_gen_id }}">{{ title }}</h2>
                  {% endif %}
                  {% if subtitle != blank %}
                    <p class="ai-hero-slide-subtitle-{{ ai_gen_id }}">{{ subtitle }}</p>
                  {% endif %}
                  {% if button_label != blank and button_link != blank %}
                    <a href="{{ button_link }}" class="ai-hero-slide-button-{{ ai_gen_id }}">
                      {{ button_label }}
                    </a>
                  {% endif %}
                </div>
              {% endif %}
            {% if slide_link != blank %}
              </a>
            {% else %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
    {% if active_slides > 1 %}
      {% if section.settings.show_arrows %}
        <button class="ai-hero-slider-nav-{{ ai_gen_id }} prev" aria-label="Previous slide">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button class="ai-hero-slider-nav-{{ ai_gen_id }} next" aria-label="Next slide">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      {% endif %}
      {% if section.settings.show_dots %}
        <div class="ai-hero-slider-dots-{{ ai_gen_id }}">
          {% assign dot_index = 0 %}
          {% for i in (1..5) %}
            {% liquid
              assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
              assign slide_enabled = section.settings[slide_enabled_key]
            %}
            {% if slide_enabled %}
              <button
                class="ai-hero-slider-dot-{{ ai_gen_id }} {% if dot_index == 0 %}active{% endif %}"
                data-slide="{{ dot_index }}"
                aria-label="Go to slide {{ dot_index | plus: 1 }}"
              ></button>
              {% assign dot_index = dot_index | plus: 1 %}
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    {% endif %}
  </div>
</div>

<script>
  (function() {
    const sliderId = '{{ ai_gen_id }}';
    
    function initHeroSlider(container) {
      const slider = {
        currentSlide: 0,
        totalSlides: 0,
        autoplayInterval: null,
        touchStartX: 0,
        touchEndX: 0,
        sliderId: sliderId,
        container: container,
        track: null,
        slides: null,
        prevBtn: null,
        nextBtn: null,
        dots: null
      };
      
      slider.track = container.querySelector('.ai-hero-slider-track-' + slider.sliderId);
      slider.slides = container.querySelectorAll('.ai-hero-slide-' + slider.sliderId);
      slider.prevBtn = container.querySelector('.ai-hero-slider-nav-' + slider.sliderId + '.prev');
      slider.nextBtn = container.querySelector('.ai-hero-slider-nav-' + slider.sliderId + '.next');
      slider.dots = container.querySelectorAll('.ai-hero-slider-dot-' + slider.sliderId);
      slider.totalSlides = slider.slides.length;
      
      if (!slider.track || slider.totalSlides <= 1) {
        return;
      }
      
      slider.setupEventListeners = function() {
        if (this.prevBtn) {
          this.prevBtn.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();
            this.prevSlide();
          });
        }
        if (this.nextBtn) {
          this.nextBtn.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();
            this.nextSlide();
          });
        }
        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();
            this.goToSlide(index);
          });
        });
        this.container.addEventListener('touchstart', (e) => {
          this.touchStartX = e.changedTouches[0].screenX;
        });
        this.container.addEventListener('touchend', (e) => {
          this.touchEndX = e.changedTouches[0].screenX;
          this.handleSwipe();
        });
        window.addEventListener('resize', () => this.handleResize());
      };
      
      slider.setupResponsiveMedia = function() {
        const updateMediaVisibility = () => {
          const isMobile = window.innerWidth < 750;
          
          this.container.querySelectorAll('.ai-hero-desktop-media-' + this.sliderId).forEach((el) => {
            el.style.display = isMobile ? 'none' : 'block';
          });
          this.container.querySelectorAll('.ai-hero-mobile-media-' + this.sliderId).forEach((el) => {
            el.style.display = isMobile ? 'block' : 'none';
          });
        };
        updateMediaVisibility();
        window.addEventListener('resize', updateMediaVisibility);
      };
      
      slider.handleResize = function() {
        if (this.track) {
          this.goToSlide(this.currentSlide, false);
        }
      };
      
      slider.handleSwipe = function() {
        const swipeThreshold = 50;
        const diff = this.touchStartX - this.touchEndX;
        if (Math.abs(diff) > swipeThreshold) {
          if (diff > 0) {
            this.nextSlide();
          } else {
            this.prevSlide();
          }
        }
      };
      
      slider.setupAutoplay = function() {
        const autoplay = this.container.dataset.autoplay === 'true';
        const speed = parseInt(this.container.dataset.autoplaySpeed) || 5000;
        if (autoplay && this.totalSlides > 1) {
          this.autoplayInterval = setInterval(() => {
            this.nextSlide();
          }, speed);
          this.container.addEventListener('mouseenter', () => {
            if (this.autoplayInterval) {
              clearInterval(this.autoplayInterval);
              this.autoplayInterval = null;
            }
          });
          this.container.addEventListener('mouseleave', () => {
            if (this.autoplayInterval) {
              clearInterval(this.autoplayInterval);
            }
            this.autoplayInterval = setInterval(() => {
              this.nextSlide();
            }, speed);
          });
        }
      };
      
      slider.goToSlide = function(index, animate = true) {
        if (!this.track || this.totalSlides === 0) return;
        
        if (index < 0) {
          this.currentSlide = this.totalSlides - 1;
        } else if (index >= this.totalSlides) {
          this.currentSlide = 0;
        } else {
          this.currentSlide = index;
        }
        
        const offset = -this.currentSlide * 100;
        
        if (!animate) {
          this.track.style.transition = 'none';
        } else {
          this.track.style.transition = 'transform 0.5s ease-in-out';
        }
        
        this.track.style.transform = `translateX(${offset}%)`;
        
        if (!animate) {
          setTimeout(() => {
            this.track.style.transition = 'transform 0.5s ease-in-out';
          }, 50);
        }
        
        this.updateDots();
      };
      
      slider.updateDots = function() {
        this.dots.forEach((dot, index) => {
          if (index === this.currentSlide) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      };
      
      slider.nextSlide = function() {
        this.goToSlide(this.currentSlide + 1);
      };
      
      slider.prevSlide = function() {
        this.goToSlide(this.currentSlide - 1);
      };
      
      slider.setupEventListeners();
      slider.setupResponsiveMedia();
      slider.setupAutoplay();
      slider.goToSlide(0, false);
      
      return slider;
    }
    
    // Inicializar quando o DOM estiver pronto
    function initSliders() {
      const containers = document.querySelectorAll('.hero-slider-container[data-slider-id="' + sliderId + '"]');
      containers.forEach(container => {
        if (!container.dataset.initialized) {
          container.dataset.initialized = 'true';
          initHeroSlider(container);
        }
      });
    }
    
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initSliders);
    } else {
      initSliders();
    }
    
    // Para o Shopify Theme Editor
    if (typeof Shopify !== 'undefined' && Shopify.designMode) {
      document.addEventListener('shopify:section:load', initSliders);
    }
  })();
</script>

