<style>
  .split-banner {
    position: relative;
    box-sizing: border-box;
    width: 100%;
  }

  .split-banner__container {
    max-width: 1750px;
    margin: 0 auto 35px;
    display: flex;
    flex-wrap: wrap;
  }

  .split-banner__column {
    flex-basis: 50%;
    position: relative;
  }

  .split-banner__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .split-banner__content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    width: 80%;
  }

  .split-banner__title {
    font-family: "Inter";
    font-size: 72px;
    font-weight: 900;
    color: {{ section.settings.title_color }};
    margin-bottom: 20px;
    line-height: 1.1;
  }

  .split-banner__subtitle {
    font-family: "Barlow";
    font-size: 24px;
    color: {{ section.settings.subtitle_color }};
    margin-bottom: 30px;
  }

  .split-banner__button {
    display: inline-block;
    padding: 15px 30px;
    border: 2px solid{{ section.settings.button_border_color }};
    background: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    transition: all 0.3s ease;
    font-weight: 600;
  }

  .split-banner__button:hover {
    background: {{ section.settings.button_bg_color_hover }};
    color: {{ section.settings.button_text_color_hover }};
  }

  @media screen and (max-width: 768px) {
    .split-banner__column {
      flex-basis: 100%;
    }

    .split-banner__column:first-child {
      order: 2;
    }

    .split-banner__column:last-child {
      order: 1;
    }

    .split-banner__title {
      font-size: 48px;
    }

    .split-banner__subtitle {
      font-size: 20px;
    }
  }
</style>

<section class="split-banner">
  <div class="split-banner__container">
    <div class="split-banner__column">
      {% if section.settings.image_1 != blank %}
        {{ section.settings.image_1 | image_url: width: 1920 | image_tag:
 class: 'split-banner__image',
 loading: 'lazy',
 alt: section.settings.image_1.alt | escape
        }}
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'split-banner__image placeholder' }}
      {% endif %}

      {% if section.settings.show_content_1 %}
        <div class="split-banner__content">
          <h2 class="split-banner__title">{{ section.settings.title_1 }}</h2>
          <p class="split-banner__subtitle">{{ section.settings.subtitle_1 }}</p>
          {% if section.settings.button_text_1 != blank and section.settings.button_link_1 != blank %}
            <a href="{{ section.settings.button_link_1 }}" class="split-banner__button">
              {{ section.settings.button_text_1 }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>

    <div class="split-banner__column">
      {% if section.settings.image_2 != blank %}
        {{ section.settings.image_2 | image_url: width: 1920 | image_tag:
 class: 'split-banner__image',
 loading: 'lazy',
 alt: section.settings.image_2.alt | escape
        }}
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'split-banner__image placeholder' }}
      {% endif %}

      {% if section.settings.show_content_2 %}
        <div class="split-banner__content">
          <h2 class="split-banner__title">{{ section.settings.title_2 }}</h2>
          <p class="split-banner__subtitle">{{ section.settings.subtitle_2 }}</p>
          {% if section.settings.button_text_2 != blank and section.settings.button_link_2 != blank %}
            <a href="{{ section.settings.button_link_2 }}" class="split-banner__button">
              {{ section.settings.button_text_2 }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

