          {
            "type": "image_picker",
            "id": "image",
            "label": "Card image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Dumbbell Bicep Curl"
          }, {
            "type": "textarea",
            "id": "description",
            "label": "Description",
            "default": "A fundamental isolation move to build biceps strength and definition."
          }, {
            "type": "text",
            "id": "button_label",
            "label": "Button label",
            "default": "Start exercise"
          }, {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Training Collection Cards",
        "blocks": [
          {
            "type": "training_card"
          }, {
            "type": "training_card"
          }, {
            "type": "training_card"
          }
        ]
      }
    ]
  }
{% endschema %}