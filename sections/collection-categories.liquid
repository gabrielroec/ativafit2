<div class="collection-categories">
  <div class="collection-categories__grid">
    {% for block in section.blocks %}
      <div class="collection-category" {{ block.shopify_attributes }}>
        <div class="collection-category__image-container">

          <img
            src="{{ block.settings.category_image | img_url: '800x' }}"
            width="800"
            height="600"
            alt="{{ block.settings.category_title }}"
            loading="lazy"
            class="collection-category__image">
          <div class="collection-category__overlay">
            <a href="{{ block.settings.category_link }}" class="collection-category__button">
              {{ block.settings.button_text | default: 'SHOP NOW' }}
            </a>
          </div>
        </div>
        <h3 class="collection-category__title bold">{{ block.settings.category_title }}</h3>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .collection-categories {
    width: 100%;
    max-width: 1750px;
    margin: 70px auto 0;
    padding: 0 20px;
  }

  .collection-categories__grid {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 22px;
    justify-content: center;
  }

  .collection-category {
    text-align: center;
    position: relative;
    width: 100%;
  }

  .collection-category__image-container {
    position: relative;
    width: 100%;
    height: 502px;
    overflow: hidden;
    border-radius: 16px;
  }

  .collection-category__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
    border-radius: 16px;
  }

  .collection-category__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    border-radius: 16px;
  }

  .collection-category:hover .collection-category__overlay {
    opacity: 1;
  }

  .collection-category__button {
    background: #fff;
    color: #000;
    padding: 12px 24px;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
    transition: all 0.3s ease;
  }

  .collection-category__button:hover {
    background: #c23d12;
    color: #fff;
  }

  .collection-category__title {
    margin: 0 auto;
    font-size: 24px;
    font-weight: bold;
    color: #fff;
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    max-width: {{ section.settings.title_max_width | default: 300 }}px;
    text-align: center;
  }

  /* Breakpoints responsivos */
  @media screen and (max-width: 768px) {
    .collection-categories {
      margin: 40px auto 0;
      padding: 0 10px;
    }

    .collection-categories__grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .collection-category__image-container {
      height: calc((100vw - 20px) * 0.75);
      /* Proporção 4:3 */
    }

    .collection-category__title {
      font-size: 20px;
      bottom: 15px;
    }
  }

  @media screen and (max-width: 480px) {
    .collection-category__title {
      font-size: 18px;
    }
  }
</style>

{% schema %}
  {
    "name": "Categorias",
    "max_blocks": 4,
    "settings": [
      {
        "type": "range",
        "id": "title_max_width",
        "min": 200,
        "max": 600,
        "step": 10,
        "unit": "px",
        "label": "Largura máxima do título",
        "default": 300,
        "info": "Define a largura máxima do título de cada categoria"
      }
    ],
    "blocks": [
      {
        "type": "category",
        "name": "Categoria",
        "settings": [
          {
            "type": "image_picker",
            "id": "category_image",
            "label": "Imagem da categoria"
          }, {
            "type": "text",
            "id": "category_title",
            "label": "Nome da categoria",
            "default": "Nome da categoria"
          }, {
            "type": "url",
            "id": "category_link",
            "label": "Link da categoria"
          }, {
            "type": "text",
            "id": "button_text",
            "label": "Texto do botão",
            "default": "SHOP NOW"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Categorias",
        "blocks": [
          {
            "type": "category"
          }, {
            "type": "category"
          }, {
            "type": "category"
          }, {
            "type": "category"
          }
        ]
      }
    ]
  }
{% endschema %}