{%- style -%}
  .awards-section {
    padding: 90px 0;
    text-align: center;
  }

  .awards-section__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .awards-section__title {
    font-family: 'Barlow'
    , sans-serif;
    font-size: 50px;
    font-weight: 900;
    letter-spacing: -2px;
    line-height: 1.1;
    color: #222021;
    margin: 0 !important;
  }

  .awards-section__title .highlight {
    background: linear-gradient(180deg, #A37E3B 0%, #F4CA7F 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: inline-block;
  }

  .awards-section__description {
    font-family: 'Barlow'
    , sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.2;
    color: #000;
    max-width: 850px;
    margin: 0 auto 60px;
  }

  .awards-section__button {
    display: inline-block;
    color: #EB701F;
    padding: 16px 32px;
    border-radius: 8px;
    text-decoration: none;
    font-family: 'Barlow Condensed'
    , sans-serif;
    font-weight: 700;
    font-size: 16px;
    text-transform: uppercase;
    text-decoration: underline;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    margin-top: 40px;
  }

  .awards-section__button:hover {
    background: #c23d12;
    color: #fff;
    transform: translateY(-2px);
  }

  .awards-section__images {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 30px;
    flex-wrap: wrap;
    margin: 0 auto;
    max-width: 1000px;
  }

  .awards-section__image {
    flex: 0 0 auto;
    transition: transform 0.3s ease;
  }

  .awards-section__image:hover {
    transform: translateY(-5px);
  }

  .awards-section__image img {
    width: 100%;
    height: auto;
    display: block;
  }

  @media screen and (max-width: 768px) {
    .awards-section {
      padding: 60px 20px;
    }

    .awards-section__title {
      font-size: 36px;
      margin-bottom: 20px;
    }

    .awards-section__description {
      font-size: 16px;
      margin-bottom: 40px;
    }

    .awards-section__images {
      gap: 20px;
    }

    .awards-section__image {
      max-width: 250px;
      padding: 15px;
    }
  }

  @media screen and (max-width: 480px) {
    .awards-section__title {
      font-size: 28px;
    }

    .awards-section__images {
      gap: 15px;
    }

    .awards-section__image {
      max-width: 100%;
    }
  }
  .awards-section__content {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin: 0 0 30px;
  }
{%- endstyle -%}

