{%- style -%}
  .awards-section {
    padding: 80px 20px;
    background-color: #f8f8f8;
    text-align: center;
  }

  .awards-section__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .awards-section__title {
    font-family: 'Barlow'
    , sans-serif;
    font-size: 48px;
    font-weight: 900;
    letter-spacing: -2px;
    line-height: 1.1;
    margin: 0 0 30px;
    color: #222021;
  }

  .awards-section__title .highlight {
    color: #C8A882;
  }

  .awards-section__description {
    font-family: 'Barlow'
    , sans-serif;
    font-size: 18px;
    font-weight: 400;
    line-height: 1.6;
    color: #666;
    max-width: 800px;
    margin: 0 auto 60px;
  }

  .awards-section__logos {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 40px;
    margin-bottom: 60px;
    flex-wrap: wrap;
  }

  .awards-section__logo {
    flex: 0 0 auto;
    max-width: 300px;
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid #C8A882;
    padding: 20px;
    background: #fff;
  }

  .awards-section__logo img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .awards-section__button {
    display: inline-block;
    background: #DD4D1E;
    color: #fff;
    padding: 16px 32px;
    border-radius: 8px;
    text-decoration: none;
    font-family: 'Barlow Condensed'
    , sans-serif;
    font-weight: 700;
    font-size: 16px;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
  }

  .awards-section__button:hover {
    background: #c23d12;
    transform: translateY(-2px);
  }

  /* Responsive */
  @media screen and (max-width: 768px) {
    .awards-section {
      padding: 60px 20px;
    }

    .awards-section__title {
      font-size: 36px;
      margin-bottom: 20px;
    }

    .awards-section__description {
      font-size: 16px;
      margin-bottom: 40px;
    }

    .awards-section__logos {
      gap: 20px;
      margin-bottom: 40px;
    }

    .awards-section__logo {
      max-width: 250px;
      height: 100px;
      padding: 15px;
    }
  }

  @media screen and (max-width: 480px) {
    .awards-section__title {
      font-size: 28px;
    }

    .awards-section__logos {
      flex-direction: column;
      gap: 15px;
    }

    .awards-section__logo {
      max-width: 100%;
      height: 80px;
    }
  }
{%- endstyle -%}

<section class="awards-section">
  <div class="awards-section__container">
    <h2 class="awards-section__title black">
      <span class="highlight">{{ section.settings.title_highlight }}</span>
      {{ section.settings.title_main }}</h2>

    <p class="awards-section__description">
      {{ section.settings.description }}
    </p>

    <div class="awards-section__logos">
      {% for block in section.blocks %}
        {% if block.type == 'award' and block.settings.logo != blank %}
          <div class="awards-section__logo">
            <img
              src="{{ block.settings.logo | image_url: width: 300 }}"
              alt="{{ block.settings.alt_text | default: 'Award logo' | escape }}"
              loading="lazy">
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="awards-section__button condensed-bold">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Awards Section",
    "settings": [
      {
        "type": "text",
        "id": "title_highlight",
        "label": "Title Highlight Text",
        "default": "AWARDS "
      },
      {
        "type": "text",
        "id": "title_main",
        "label": "Title Main Text",
        "default": "FOR THE BEST DESIGN"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "Award-winning Ativafit have been recognized for their original design, asthetic factors, fine product details, cutting-edges manufacture, and innovative technology, as well their intelligent, user-friendly operation."
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "SEE OUR PRODUCTS"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "blocks": [
      {
        "type": "award",
        "name": "Award Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo",
            "label": "Award Logo"
          }, {
            "type": "text",
            "id": "alt_text",
            "label": "Alt Text",
            "info": "Describe the award for accessibility"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Awards Section",
        "settings": {},
        "blocks": [
          {
            "type": "award"
          }, {
            "type": "award"
          }, {
            "type": "award"
          }
        ]
      }
    ]
  }
{% endschema %}