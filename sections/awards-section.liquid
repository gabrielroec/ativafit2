{%- style -%}
  .awards-section {
    padding: 80px 20px;
    text-align: center;
  }

  .awards-section__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .awards-section__title {
    font-family: 'Barlow'
    , sans-serif;
    font-size: 48px;
    font-weight: 900;
    letter-spacing: -2px;
    line-height: 1.1;
    margin: 0 0 30px;
    color: #222021;
  }

  .awards-section__title .highlight {
    background: linear-gradient(180deg, #A37E3B 0%, #F4CA7F 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: inline-block;
  }

  .awards-section__description {
    font-family: 'Barlow'
    , sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.2;
    color: #000;
    max-width: 850px;
    margin: 0 auto 60px;
  }

  .awards-section__button {
    display: inline-block;
    color: #DD4D1E;
    padding: 16px 32px;
    border-radius: 8px;
    text-decoration: none;
    font-family: 'Barlow Condensed'
    , sans-serif;
    font-weight: 700;
    font-size: 16px;
    text-transform: uppercase;
    text-decoration: underline;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    margin-top: 40px;
  }

  .awards-section__button:hover {
    background: #c23d12;
    color: #fff;
    transform: translateY(-2px);
  }

  .awards-section__images {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 30px;
    flex-wrap: wrap;
    margin: 0 auto;
    max-width: 1000px;
  }

  .awards-section__image {
    flex: 0 0 auto;
    transition: transform 0.3s ease;
  }

  .awards-section__image:hover {
    transform: translateY(-5px);
  }

  .awards-section__image img {
    width: 100%;
    height: auto;
    display: block;
  }

  @media screen and (max-width: 768px) {
    .awards-section {
      padding: 60px 20px;
    }

    .awards-section__title {
      font-size: 36px;
      margin-bottom: 20px;
    }

    .awards-section__description {
      font-size: 16px;
      margin-bottom: 40px;
    }

    .awards-section__images {
      gap: 20px;
    }

    .awards-section__image {
      max-width: 250px;
      padding: 15px;
    }
  }

  @media screen and (max-width: 480px) {
    .awards-section__title {
      font-size: 28px;
    }

    .awards-section__images {
      gap: 15px;
    }

    .awards-section__image {
      max-width: 100%;
    }
  }
{%- endstyle -%}

<section class="awards-section">
  <div class="awards-section__container">
    <h2 class="awards-section__title black">
      <span class="highlight black">{{ section.settings.title_highlight }}</span>
      {{ section.settings.title_main }}</h2>

    <p class="awards-section__description">
      {{ section.settings.description }}
    </p>

    <div class="awards-section__images">
      {% for block in section.blocks %}
        {% if block.type == 'award' and block.settings.award_image != blank %}
          <div class="awards-section__image">
            <img
              src="{{ block.settings.award_image | image_url: width: 300 }}"
              alt="{{ block.settings.alt_text | escape }}"
              loading="lazy">
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="awards-section__button condensed-bold">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Awards Section",
    "settings": [
      {
        "type": "text",
        "id": "title_highlight",
        "label": "Title Highlight Text",
        "default": "AWARDS "
      },
      {
        "type": "text",
        "id": "title_main",
        "label": "Title Main Text",
        "default": "FOR THE BEST DESIGN"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "Award-winning Ativafit have been recognized for their original design, aesthetic factors, fine product details, cutting-edge manufacture, and innovative technology, as well as their intelligent, user-friendly operation."
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "SEE OUR PRODUCTS"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "blocks": [
      {
        "type": "award",
        "name": "Award",
        "limit": 6,
        "settings": [
          {
            "type": "image_picker",
            "id": "award_image",
            "label": "Award Image"
          }, {
            "type": "text",
            "id": "alt_text",
            "label": "Alt Text",
            "default": "Award Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Awards Section",
        "blocks": [
          {
            "type": "award"
          }, {
            "type": "award"
          }, {
            "type": "award"
          }
        ]
      }
    ]
  }
{% endschema %}