  @media (max-width: 1199px) and (min-width: 1025px) {
    .strength-cards-grid.few-items {
      justify-content: center !important;
      max-width: 100% !important;
    }

    .strength-cards-grid.many-items {
      justify-content: flex-start !important;
      max-width: none !important;
    }
  }

  /* Mobile breakpoint - a partir de 1024px para baixo */
  @media (max-width: 1024px) {
    .goal-spark-title__heading {
      font-size: 32px;
      line-height: 36px;
      margin-bottom: 40px;
    }

    .strength-cards-desktop {
      display: none !important;
    }

    .strength-cards-mobile {
      display: block !important;
    }

    /* No mobile, sempre usar slider - ESCONDER COMPLETAMENTE O GRID */
    .strength-cards-grid {
      display: none !important;
      visibility: hidden !important;
      opacity: 0 !important;
      height: 0 !important;
      overflow: hidden !important;
    }

    /* Garantir que o mobile slider seja visível */
    .mobile-slider-container {
      display: block !important;
      visibility: visible !important;
      opacity: 1 !important;
    }

    .mobile-card {
      display: block !important;
    }

    .mobile-card.hidden {
      display: none !important;
    }

    .mobile-dots {
      display: flex !important;
    }
  }

