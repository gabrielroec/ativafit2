{% comment %} 
                        Workout Stretching Section
                        Specialized section for stretching exercises with orange highlight design
{% endcomment %}

<section class="workout-stretching-section" data-section-id="{{ section.id }}">
  <div class="workout-stretching-section__container">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'stretching_header' %}
          <div class="workout-stretching-section__header" {{ block.shopify_attributes }}>
            <div class="workout-stretching-section__header-content">
              <h2 class="workout-stretching-section__title">{{ block.settings.title }}</h2>
            </div>
          </div>

        {% when 'stretch' %}
          <div class="workout-stretch" {{ block.shopify_attributes }}>
            <div class="workout-stretch__grid">
              <!-- Stretch Image -->
              <div class="workout-stretch__image-column">
                {% if block.settings.stretch_image != blank %}
                  <div class="workout-stretch__image-wrapper">
                    {{ block.settings.stretch_image | image_url: width: 600 | image_tag: class: 'workout-stretch__image', loading: 'lazy', alt: block.settings.image_alt | default: block.settings.stretch_title | escape
                    }}
                  </div>
                {% endif %}
              </div>

              <!-- Stretch Content -->
              <div class="workout-stretch__content-column">
                <div class="workout-stretch__content">
                  <div class="workout-stretch__header">
                    <span class="workout-stretch__number">{{ block.settings.stretch_number }}</span>
                    <h3 class="workout-stretch__title">{{ block.settings.stretch_title }}</h3>
                  </div>

                  {% if block.settings.target_muscles != blank %}
                    <div class="workout-stretch__target">
                      <span class="workout-stretch__target-label">Target:</span>
                      <span class="workout-stretch__target-muscles">{{ block.settings.target_muscles }}</span>
                    </div>
                  {% endif %}

                  {% if block.settings.instructions != blank %}
                    <div class="workout-stretch__instructions">
                      {{ block.settings.instructions }}
                    </div>
                  {% endif %}

                  {% if block.settings.repetition_count != blank %}
                    <div class="workout-stretch__repetition">
                      <span class="workout-stretch__repetition-text">{{ block.settings.repetition_count }}</span>
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</section>

{% style %}
  .workout-stretching-section {
    padding: {{ section.settings.section_padding | default: '60px 0' }};
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-stretching-section__container {
    max-width: 1350px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Section Header */
  .workout-stretching-section__header {
    margin-bottom: 60px;
    text-align: center;
  }

  .workout-stretching-section__header-content {
    display: inline-block;
    padding: 0;
    background: transparent;
    border: none;
    box-shadow: none;
  }

  .workout-stretching-section__title {
    font-size: 2rem;
    font-weight: 800;
    color: #1d1d1f;
    margin: 0 0 12px;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    font-family: 'Barlow'
    , sans-serif !important;
    position: relative;
  }

  .workout-stretching-section__title::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: #FF6100;
    border-radius: 2px;
  }

  /* Stretch Blocks */
  .workout-stretch {
    margin-bottom: 80px;
  }

  .workout-stretch:last-child {
    margin-bottom: 0;
  }

  .workout-stretch__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  /* Image Column */
  .workout-stretch__image-column {
    position: relative;
  }

  .workout-stretch__image-wrapper {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    aspect-ratio: 4 / 3;
  }

  .workout-stretch__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .workout-stretch__image-wrapper:hover .workout-stretch__image {
    transform: scale(1.02);
  }

  /* Content Column */
  .workout-stretch__content-column {
    padding: 20px 0;
  }

  .workout-stretch__content {
    max-width: 500px;
  }

  .workout-stretch__header {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
    gap: 12px;
  }

  .workout-stretch__number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: #FF6100;
    color: #fff;
    border: 2px solid #FF6100;
    border-radius: 50%;
    font-size: 1rem;
    font-weight: 700 !important;
    font-family: 'Barlow'
    , sans-serif !important;
    flex-shrink: 0;
  }

  .workout-stretch__title {
    font-size: 1.5rem;
    font-weight: 700 !important;
    color: #1d1d1f;
    margin: 0;
    line-height: 1.2;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-stretch__target {
    margin-bottom: 20px;
    padding: 12px 16px;
    background: #f8f9fa;
    border-radius: 6px;
    border-left: 3px solid #FF6100;
  }

  .workout-stretch__target-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: #666666;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-stretch__target-muscles {
    font-size: 0.875rem;
    font-weight: 600;
    color: #1d1d1f;
    margin-left: 8px;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-stretch__instructions {
    margin-bottom: 20px;
    font-size: 0.9375rem;
    line-height: 1.6;
    color: #333333;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-stretch__instructions ul {
    margin: 0;
    padding-left: 20px;
  }

  .workout-stretch__instructions li {
    margin-bottom: 6px;
  }

  .workout-stretch__instructions li:last-child {
    margin-bottom: 0;
  }

  .workout-stretch__repetition {
    text-align: center;
    padding: 12px 20px;
    background: #f8f9fa;
    border-radius: 6px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .workout-stretch__repetition-text {
    font-size: 0.875rem;
    font-weight: 700 !important;
    color: #1d1d1f;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  /* Responsive */
  @media screen and (max-width: 1024px) {
    .workout-stretch__grid {
      gap: 40px;
    }

    .workout-stretching-section__title {
      font-size: 1.5rem;
    }
  }

  @media screen and (max-width: 768px) {
    .workout-stretching-section__container {
      padding: 0 16px;
    }

    .workout-stretch__grid {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .workout-stretch__content {
      max-width: 100%;
    }

    .workout-stretch__header {
      flex-direction: row;
      align-items: center;
      gap: 12px;
    }

    .workout-stretch__title {
      font-size: 1.25rem;
    }

    .workout-stretching-section__header-content {
      padding: 0;
    }

    .workout-stretching-section__title {
      font-size: 1.5rem;
    }

    .workout-stretching-section__title::after {
      width: 50px;
      height: 2px;
    }
  }

  @media screen and (max-width: 480px) {
    .workout-stretch__header {
      flex-direction: row;
      align-items: center;
      gap: 10px;
    }

    .workout-stretch__number {
      width: 28px;
      height: 28px;
      font-size: 0.875rem;
    }

    .workout-stretch__title {
      font-size: 1.125rem;
    }

    .workout-stretch__instructions {
      font-size: 0.875rem;
    }
  }
{% endstyle %}

{% schema %}
  {
    "name": "Workout Stretching",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "section_padding",
        "label": "Section Padding",
        "default": "60px 0"
      }
    ],
    "blocks": [
      {
        "type": "stretching_header",
        "name": "Stretching Header",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Section Title",
            "default": "Stretching Moves 6 mins"
          }, {
            "type": "color",
            "id": "section_color",
            "label": "Section Color",
            "default": "#FF6100"
          }
        ]
      }, {
        "type": "stretch",
        "name": "Stretch",
        "settings": [
          {
            "type": "text",
            "id": "stretch_number",
            "label": "Stretch Number",
            "default": "1"
          },
          {
            "type": "text",
            "id": "stretch_title",
            "label": "Stretch Title",
            "default": "Across-the-chest Stretch"
          },
          {
            "type": "text",
            "id": "target_muscles",
            "label": "Target Muscles",
            "default": "Shoulders"
          },
          {
            "type": "richtext",
            "id": "instructions",
            "label": "Instructions",
            "default": "<ul><li>Bring your right arm straight across your chest</li><li>Use your left hand to gently pull your right arm closer to your chest</li><li>Hold for 30 seconds, then switch sides</li></ul>"
          }, {
            "type": "text",
            "id": "repetition_count",
            "label": "Repetition Count",
            "default": "30 seconds each side"
          }, {
            "type": "image_picker",
            "id": "stretch_image",
            "label": "Stretch Image"
          }, {
            "type": "text",
            "id": "image_alt",
            "label": "Image Alt Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Workout Stretching",
        "blocks": [
          {
            "type": "stretching_header"
          }, {
            "type": "stretch"
          }
        ]
      }
    ]
  }
{% endschema %}
