{% comment %} 
      Workout CTA Section
      Final call to action section for workout program download
{% endcomment %}

<section
  class="workout-cta"
  data-section-id="{{ section.id }}"
  style="background-color: {{ section.settings.background_color | default: '#f8f9fa' }};">
  <div class="workout-cta__container">
    <div class="workout-cta__content">
      {% if section.settings.heading != blank %}
        <h2 class="workout-cta__heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="workout-cta__subheading">{{ section.settings.subheading }}</p>
      {% endif %}

      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <div class="workout-cta__button-wrapper">
          <a href="{{ section.settings.button_link }}" class="workout-cta__button">
            <svg
              class="workout-cta__button-icon"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg">
              <path
                d="M12 16L12 8M12 8L16 12M12 8L8 12"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round" />
            </svg>
            {{ section.settings.button_text }}
          </a>
        </div>
      {% endif %}
    </div>

    <!-- Decorative Elements -->
    <div class="workout-cta__decoration">
      <div class="workout-cta__decoration-circle workout-cta__decoration-circle--1"></div>
      <div class="workout-cta__decoration-circle workout-cta__decoration-circle--2"></div>
      <div class="workout-cta__decoration-circle workout-cta__decoration-circle--3"></div>
    </div>
  </div>
</section>

{% style %}
  .workout-cta {
    position: relative;
    padding: 100px 0;
    overflow: hidden;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-cta__container {
    max-width: 1350px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
  }

  .workout-cta__content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .workout-cta__heading {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700 !important;
    color: #1d1d1f;
    margin-bottom: 24px;
    line-height: 1.1;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-cta__subheading {
    font-size: clamp(1.125rem, 2.5vw, 1.375rem);
    color: #666666;
    margin-bottom: 48px;
    line-height: 1.5;
    font-weight: 600;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-cta__button-wrapper {
    margin-top: 40px;
  }

  .workout-cta__button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 20px 40px;
    background: #FF6100;
    color: #ffffff;
    text-decoration: none;
    border-radius: 12px;
    font-size: 18px;
    font-weight: 700 !important;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    font-family: 'Barlow'
    , sans-serif !important;
    border: 2px solid #FF6100;
    box-shadow: 0 8px 32px rgba(255, 97, 0, 0.3);
    position: relative;
    overflow: hidden;
  }

  .workout-cta__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .workout-cta__button:hover::before {
    left: 100%;
  }

  .workout-cta__button:hover {
    background: #e55700;
    border-color: #e55700;
    transform: translateY(-3px);
    box-shadow: 0 12px 40px rgba(255, 97, 0, 0.4);
  }

  .workout-cta__button-icon {
    transition: transform 0.3s ease;
  }

  .workout-cta__button:hover .workout-cta__button-icon {
    transform: translateY(-2px);
  }

  /* Decorative Elements */
  .workout-cta__decoration {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 1;
  }

  .workout-cta__decoration-circle {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(255, 97, 0, 0.1) 0%, rgba(255, 97, 0, 0.05) 100%);
    animation: float 6s ease-in-out infinite;
  }

  .workout-cta__decoration-circle--1 {
    width: 120px;
    height: 120px;
    top: 20%;
    left: 10%;
    animation-delay: 0s;
  }

  .workout-cta__decoration-circle--2 {
    width: 80px;
    height: 80px;
    top: 60%;
    right: 15%;
    animation-delay: 2s;
  }

  .workout-cta__decoration-circle--3 {
    width: 60px;
    height: 60px;
    bottom: 20%;
    left: 20%;
    animation-delay: 4s;
  }

  @keyframes float {
    0,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    33% {
      transform: translateY(-20px) rotate(120deg);
    }
    66% {
      transform: translateY(-10px) rotate(240deg);
    }
  }

  /* Responsive */
  @media screen and (max-width: 768px) {
    .workout-cta {
      padding: 80px 0;
    }

    .workout-cta__container {
      padding: 0 16px;
    }

    .workout-cta__button {
      padding: 18px 32px;
      font-size: 16px;
    }

    .workout-cta__decoration-circle--1 {
      width: 80px;
      height: 80px;
    }

    .workout-cta__decoration-circle--2 {
      width: 60px;
      height: 60px;
    }

    .workout-cta__decoration-circle--3 {
      width: 40px;
      height: 40px;
    }
  }

  @media screen and (max-width: 480px) {
    .workout-cta {
      padding: 60px 0;
    }

    .workout-cta__heading {
      margin-bottom: 16px;
    }

    .workout-cta__subheading {
      margin-bottom: 32px;
    }

    .workout-cta__button {
      padding: 16px 24px;
      font-size: 14px;
      flex-direction: column;
      gap: 8px;
    }

    .workout-cta__decoration-circle {
      display: none;
    }
  }
{% endstyle %}

{% schema %}
  {
    "name": "Workout CTA",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Ready to Transform Your Fitness?"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Download this complete workout routine and start your journey today"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "DOWNLOAD WORKOUT PDF"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }, {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#f8f9fa"
      }
    ],
    "presets": [
      {
        "name": "Workout CTA"
      }
    ]
  }
{% endschema %}
