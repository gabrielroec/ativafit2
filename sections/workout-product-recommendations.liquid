{% comment %} 
        Workout Product Recommendations Section
        Product recommendations section for workout programs
{% endcomment %}

<section class="workout-product-recommendations" data-section-id="{{ section.id }}">
  <div class="workout-product-recommendations__container">
    {% if section.settings.heading != blank %}
      <div class="workout-product-recommendations__header">
        <h2 class="workout-product-recommendations__title">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="workout-product-recommendations__subtitle">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="workout-product-recommendations__grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'product' %}
            <div class="workout-product-recommendations__item" {{ block.shopify_attributes }}>
              {% if block.settings.product != blank %}
                {% assign product = block.settings.product %}
                <div class="workout-product-recommendations__card">
                  <div class="workout-product-recommendations__image-wrapper">
                    <a href="{{ product.url }}">
                      {% if product.featured_image != blank %}
                        {{ product.featured_image | image_url: width: 400 | image_tag: 
 class: 'workout-product-recommendations__image', 
 loading: 'lazy', 
 alt: product.featured_image.alt | escape
                        }}
                      {% else %}
                        {{ 'product-1' | placeholder_svg_tag: 'workout-product-recommendations__image placeholder' }}
                      {% endif %}
                    </a>
                  </div>

                  <div class="workout-product-recommendations__content">
                    <h3 class="workout-product-recommendations__product-title">
                      <a href="{{ product.url }}">{{ product.title }}</a>
                    </h3>

                    <div class="workout-product-recommendations__price">
                      {% if product.compare_at_price > product.price %}
                        <span class="workout-product-recommendations__price--sale">{{ product.price | money }}</span>
                        <span class="workout-product-recommendations__price--compare">{{ product.compare_at_price | money }}</span>
                      {% else %}
                        <span class="workout-product-recommendations__price--regular">{{ product.price | money }}</span>
                      {% endif %}
                    </div>

                    {% if block.settings.description != blank %}
                      <p class="workout-product-recommendations__description">{{ block.settings.description }}</p>
                    {% endif %}

                    <a href="{{ product.url }}" class="workout-product-recommendations__button">
                      {{ block.settings.button_text | default: 'View Product' }}
                    </a>
                  </div>
                </div>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

{% style %}
  .workout-product-recommendations {
    background: #f8f9fa;
    padding: 80px 0;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-product-recommendations__container {
    max-width: 1350px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .workout-product-recommendations__header {
    text-align: center;
    margin-bottom: 60px;
  }

  .workout-product-recommendations__title {
    font-size: 2.5rem;
    font-weight: 900;
    color: #1d1d1f;
    margin-bottom: 16px;
    line-height: 1.1;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-product-recommendations__subtitle {
    font-size: 1.125rem;
    color: #666666;
    line-height: 1.5;
    font-weight: 400;
    font-family: 'Barlow'
    , sans-serif !important;
    max-width: 600px;
    margin: 0 auto;
  }

  .workout-product-recommendations__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 32px;
  }

  .workout-product-recommendations__card {
    background: #ffffff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
  }

  .workout-product-recommendations__card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
  }

  .workout-product-recommendations__image-wrapper {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
  }

  .workout-product-recommendations__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .workout-product-recommendations__card:hover .workout-product-recommendations__image {
    transform: scale(1.05);
  }

  .workout-product-recommendations__content {
    padding: 24px;
  }

  .workout-product-recommendations__product-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1d1d1f;
    margin-bottom: 12px;
    line-height: 1.2;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-product-recommendations__product-title a {
    color: inherit;
    text-decoration: none;
  }

  .workout-product-recommendations__product-title a:hover {
    color: #FF6100;
  }

  .workout-product-recommendations__price {
    margin-bottom: 16px;
  }

  .workout-product-recommendations__price--regular {
    font-size: 1.125rem;
    font-weight: 700;
    color: #1d1d1f;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-product-recommendations__price--sale {
    font-size: 1.125rem;
    font-weight: 700;
    color: #FF6100;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-product-recommendations__price--compare {
    font-size: 0.875rem;
    font-weight: 500;
    color: #666666;
    text-decoration: line-through;
    margin-left: 8px;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-product-recommendations__description {
    font-size: 0.875rem;
    color: #666666;
    line-height: 1.5;
    margin-bottom: 20px;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-product-recommendations__button {
    display: inline-block;
    padding: 12px 24px;
    background: #FF6100;
    color: #ffffff;
    text-decoration: none;
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    font-family: 'Barlow'
    , sans-serif !important;
    border: 2px solid #FF6100;
  }

  .workout-product-recommendations__button:hover {
    background: #e55700;
    border-color: #e55700;
    transform: translateY(-1px);
  }

  /* Responsive */
  @media screen and (max-width: 1024px) {
    .workout-product-recommendations__grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 24px;
    }
  }

  @media screen and (max-width: 768px) {
    .workout-product-recommendations {
      padding: 60px 0;
    }

    .workout-product-recommendations__container {
      padding: 0 16px;
    }

    .workout-product-recommendations__title {
      font-size: 2rem;
    }

    .workout-product-recommendations__subtitle {
      font-size: 1rem;
    }

    .workout-product-recommendations__grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }
  }

  @media screen and (max-width: 480px) {
    .workout-product-recommendations {
      padding: 40px 0;
    }

    .workout-product-recommendations__title {
      font-size: 1.75rem;
    }

    .workout-product-recommendations__grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .workout-product-recommendations__content {
      padding: 20px;
    }
  }
{% endstyle %}

