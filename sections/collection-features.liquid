{%- style -%}
  .collection-features {
    padding: 40px 0;
    background: #fff;
  }

  .collection-features__container {
    max-width: 1040px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    gap: 20px;
    padding: 0 20px;
  }

  .collection-features__item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .collection-features__icon {
    margin-bottom: 20px;
  }

  .collection-features__title {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 10px;
    color: #000;
  }

  @media screen and (max-width: 768px) {
    .collection-features__container {
      flex-direction: column;
      gap: 40px;
    }

    .collection-features__item {
      width: 100%;
    }
  }
{%- endstyle -%}

