.feature-row.reverse .feature-content {
  direction: ltr;
}

.feature-row.reverse .feature-content {
  padding-left: 80px;
}

.feature-image {
  width: 100%;
  overflow: hidden;
}

.feature-image img,
.feature-image svg {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: contain;
}

.feature-content {
  padding: 0;
  width: 100%;
}

