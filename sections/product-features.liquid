{% comment %} PRODUCT FEATURES SECTION {% endcomment %}
<div class="product-features-section">
  <div class="features-container">
    <div id="feature-left-{{ section.id }}" class="feature-block left-feature">
      <div class="feature-content">
        <h2 class="feature-title">{{ section.settings.left_title }}</h2>
        <div class="feature-description">{{ section.settings.left_description }}</div>
      </div>
    </div>

    <div id="feature-right-{{ section.id }}" class="feature-block right-feature">
      <div class="feature-content">
        <h2 class="feature-title">{{ section.settings.right_title }}</h2>
        <div class="feature-description">{{ section.settings.right_description }}</div>
      </div>
    </div>
  </div>
</div>

<style>
  .product-features-section {
    width: 100%;
    max-width: 1370px;
    margin: 60px auto;
    padding: 0 20px;
  }

  .features-container {
    display: flex;
    gap: 20px;
  }

  .feature-block {
    height: 700px;
    width: 100%;
    max-width: 665px;
    display: flex;
    align-items: start;
    justify-content: center;
    text-align: center !important;
    background-repeat: no-repeat;
    padding: 40px;
    border-radius: 10px;
    position: relative;
    overflow: hidden;
  }

  #feature-left-{{ section.id }} {
    background-color: {{ section.settings.left_bg_color }};
    {% if section.settings.left_bg_image != blank %}
      background-image: url('{{ section.settings.left_bg_image | img_url: '2000x' }}');
    {% else %}
      background-image: url('{{ 'bg_section_1.png' | asset_url }}');
    {% endif %}
    background-position: right bottom;
    background-size: 90%;
  }

  #feature-right-{{ section.id }} {
    background-color: {{ section.settings.right_bg_color }};
    {% if section.settings.right_bg_image != blank %}
      background-image: url('{{ section.settings.right_bg_image | img_url: '2000x' }}');
    {% else %}
      background-image: url('{{ 'bg_section_2.png' | asset_url }}');
    {% endif %}
    background-position: center bottom;
    background-size: 100%;
  }

  .feature-content {
    color: #FFFFFF;
    z-index: 1;
    width: 100%;
    max-width: 100%;
    text-align: center;
  }

  .feature-title {
    font-size: 36px;
    margin-bottom: 0 !important;
    font-weight: bold;
    color: #FFFFFF !important;
    text-align: center;
  }

  .feature-description {
    font-size: 16px;
    line-height: 1.5;
    margin-bottom: 20px;
    color: #FFFFFF !important;
    text-align: center;
  }

  .feature-link {
    display: inline-block;
    color: #FFFFFF;
    text-decoration: underline;

  }

  @media screen and (max-width: 1024px) {
    .features-container {
      flex-direction: column;
      gap: 30px;
    }

    .feature-block {
      width: 100% !important;
      max-width: 100% !important;
      height: 500px;
    }


  }

  @media screen and (max-width: 767px) {
    .features-container {
      flex-direction: column;
      gap: 30px;
    }

    .feature-block {
      min-height: 450px;
      padding: 25px 20px;
      height: 400px;
    }

    .feature-title {
      font-size: 28px;
    }

    .feature-description {
      font-size: 14px;
      line-height: 1.4;
      padding: 0 15px;
    }

    #feature-left-{{ section.id }} {
      background-position: right 150px;
    }

    #feature-right-{{ section.id }} {
      background-position: center 200px;
    }

  }

  @media screen and (max-width: 480px) {
    .product-features-section {
      width: 100% !important;
      max-width: 100% !important;
      padding: 0 !important;
    }
    .feature-block {
      min-height: 350px;
      height: 550px;
      padding: 20px 15px;
    }
    .features-container {
      gap: 10px;
    }
    .feature-title {
      font-size: 24px;
    }

    .feature-description {
      font-size: 13px;
      padding: 0 10px;
    }

    .product-features-section {
      margin: 40px auto;
      padding: 0 15px;
    }
    #feature-left-{{ section.id }} {
      background-position: right bottom;
    }
    #feature-right-{{ section.id }} {
      background-position: center bottom;
    }

  }
</style>

{% schema %}
  {
    "name": "Product Features",
    "tag": "section",
    "class": "product-features-section",
    "settings": [
      {
        "type": "header",
        "content": "Left Feature Block"
      },
      {
        "type": "color",
        "id": "left_bg_color",
        "label": "Background color",
        "default": "#FF6B35"
      },
      {
        "type": "image_picker",
        "id": "left_bg_image",
        "label": "Background image"
      },
      {
        "type": "text",
        "id": "left_title",
        "label": "Title",
        "default": "More range."
      },
      {
        "type": "textarea",
        "id": "left_description",
        "label": "Description",
        "default": "The Ativafit 66 lb adjustable dumbbell packs 12 weight settings—from 11 lbs up to 66 lbs (5-30 kg) in 5 lb increments—into one sleek, space-saving design. No more plate stacks, just seamless progression through every exercise."
      },
      {
        "type": "header",
        "content": "Right Feature Block"
      },
      {
        "type": "color",
        "id": "right_bg_color",
        "label": "Background color",
        "default": "#1A1A1A"
      },
      {
        "type": "image_picker",
        "id": "right_bg_image",
        "label": "Background image"
      },
      {
        "type": "text",
        "id": "right_title",
        "label": "Title",
        "default": "Faster adjustments."
      },
      {
        "type": "textarea",
        "id": "right_description",
        "label": "Description",
        "default": "Our patented Dial Tech system locks in your chosen plates and ejects the rest in under 3 seconds: press the safety tab, twist to your next weight, and lift—the most efficient way to keep your workout intensity high."
      }
    ],
    "presets": [
      {
        "name": "Product Features",
        "category": "Product"
      }
    ]
  }
{% endschema %}