{% comment %} 
      Workout Blog Posts Section
      Blog posts section for workout programs
{% endcomment %}

<section class="workout-blog-posts" data-section-id="{{ section.id }}">
  <div class="workout-blog-posts__container">
    {% if section.settings.heading != blank %}
      <div class="workout-blog-posts__header">
        <h2 class="workout-blog-posts__title">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="workout-blog-posts__subtitle">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="workout-blog-posts__grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'blog_post' %}
            <div class="workout-blog-posts__item" {{ block.shopify_attributes }}>
              {% if block.settings.article != blank %}
                {% assign article = block.settings.article %}
                <div class="workout-blog-posts__card">
                  <div class="workout-blog-posts__image-wrapper">
                    <a href="{{ article.url }}">
                      {% if article.image != blank %}
                        {{ article.image | image_url: width: 400 | image_tag: 
 class: 'workout-blog-posts__image', 
 loading: 'lazy', 
 alt: article.image.alt | escape
                        }}
                      {% else %}
                        {{ 'article-1' | placeholder_svg_tag: 'workout-blog-posts__image placeholder' }}
                      {% endif %}
                    </a>
                  </div>

                  <div class="workout-blog-posts__content">
                    <div class="workout-blog-posts__meta">
                      <span class="workout-blog-posts__date">{{ article.published_at | date: '%B %d, %Y' }}</span>
                      {% if article.tags.size > 0 %}
                        <span class="workout-blog-posts__tag">{{ article.tags.first }}</span>
                      {% endif %}
                    </div>

                    <h3 class="workout-blog-posts__article-title">
                      <a href="{{ article.url }}">{{ article.title }}</a>
                    </h3>

                    {% if article.excerpt != blank %}
                      <p class="workout-blog-posts__excerpt">{{ article.excerpt | strip_html | truncate: 120 }}</p>
                    {% endif %}

                    <a href="{{ article.url }}" class="workout-blog-posts__read-more">
                      {{ block.settings.button_text | default: 'Read More' }}
                      <svg
                        class="workout-blog-posts__arrow"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none">
                        <path
                          d="M5 12H19M19 12L12 5M19 12L12 19"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round" />
                      </svg>
                    </a>
                  </div>
                </div>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

{% style %}
  .workout-blog-posts {
    background: #ffffff;
    padding: 80px 0;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-blog-posts__container {
    max-width: 1350px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .workout-blog-posts__header {
    text-align: center;
    margin-bottom: 60px;
  }

  .workout-blog-posts__title {
    font-size: 2.5rem;
    font-weight: 900;
    color: #1d1d1f;
    margin-bottom: 16px;
    line-height: 1.1;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-blog-posts__subtitle {
    font-size: 1.125rem;
    color: #666666;
    line-height: 1.5;
    font-weight: 400;
    font-family: 'Barlow'
    , sans-serif !important;
    max-width: 600px;
    margin: 0 auto;
  }

  .workout-blog-posts__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 32px;
  }

  .workout-blog-posts__card {
    background: #ffffff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border: 1px solid #f0f0f0;
  }

  .workout-blog-posts__card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
  }

  .workout-blog-posts__image-wrapper {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .workout-blog-posts__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .workout-blog-posts__card:hover .workout-blog-posts__image {
    transform: scale(1.05);
  }

  .workout-blog-posts__content {
    padding: 24px;
  }

  .workout-blog-posts__meta {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 12px;
  }

  .workout-blog-posts__date {
    font-size: 0.75rem;
    color: #666666;
    font-weight: 500;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-blog-posts__tag {
    font-size: 0.75rem;
    color: #FF6100;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-blog-posts__article-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1d1d1f;
    margin-bottom: 12px;
    line-height: 1.3;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-blog-posts__article-title a {
    color: inherit;
    text-decoration: none;
  }

  .workout-blog-posts__article-title a:hover {
    color: #FF6100;
  }

  .workout-blog-posts__excerpt {
    font-size: 0.875rem;
    color: #666666;
    line-height: 1.6;
    margin-bottom: 20px;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-blog-posts__read-more {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: #FF6100;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-blog-posts__read-more:hover {
    color: #e55700;
    gap: 12px;
  }

  .workout-blog-posts__arrow {
    transition: transform 0.3s ease;
  }

  .workout-blog-posts__read-more:hover .workout-blog-posts__arrow {
    transform: translateX(4px);
  }

  /* Responsive */
  @media screen and (max-width: 1024px) {
    .workout-blog-posts__grid {
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 24px;
    }
  }

  @media screen and (max-width: 768px) {
    .workout-blog-posts {
      padding: 60px 0;
    }

    .workout-blog-posts__container {
      padding: 0 16px;
    }

    .workout-blog-posts__title {
      font-size: 2rem;
    }

    .workout-blog-posts__subtitle {
      font-size: 1rem;
    }

    .workout-blog-posts__grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 20px;
    }
  }

  @media screen and (max-width: 480px) {
    .workout-blog-posts {
      padding: 40px 0;
    }

    .workout-blog-posts__title {
      font-size: 1.75rem;
    }

    .workout-blog-posts__grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .workout-blog-posts__content {
      padding: 20px;
    }
  }
{% endstyle %}

