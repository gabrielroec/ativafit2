      }
    ],
    "presets": [
      {
        "name": "Blog Posts",
        "blocks": [
          {
            "type": "blog_post"
          }, {
            "type": "blog_post"
          }, {
            "type": "blog_post"
          }
        ]
      }
    ]
  }
{% endschema %}