{% comment %} 
        Workout Blog Posts Section
        Blog posts section for workout programs
{% endcomment %}

<section class="workout-blog-posts" data-section-id="{{ section.id }}">
  <div class="workout-blog-posts__container">
    {% if section.settings.heading != blank %}
      <div class="workout-blog-posts__header">
        <h2 class="workout-blog-posts__title">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="workout-blog-posts__subtitle">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="workout-blog-posts__grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'blog_post' %}
            <div class="workout-blog-posts__item" {{ block.shopify_attributes }}>
              {% if block.settings.article != blank %}
                {% assign article = block.settings.article %}
                <a href="{{ article.url }}" class="workout-blog-card">
                  <div class="workout-blog-card__image-container">
                    {% if article.image != blank %}
                      {{ article.image | image_url: width: 400 | image_tag: 
 class: 'workout-blog-card__image', 
 loading: 'lazy', 
 alt: article.image.alt | escape
                      }}
                    {% else %}
                      {{ 'lifestyle-1' | placeholder_svg_tag: 'workout-blog-card__image' }}
                    {% endif %}
                  </div>
                  <div class="workout-blog-card__content">
                    <h3 class="workout-blog-card__category regular">
                      {% if article.tags.first != blank %}
                        {{ article.tags.first }}
                      {% else %}
                        Blog
                      {% endif %}
                    </h3>
                    <hr class="workout-blog-card__divider">
                    <p class="workout-blog-card__title bold">{{ article.title }}</p>
                    {% if section.settings.show_date %}
                      <p class="workout-blog-card__date">{{ article.published_at | date: "%B %d, %Y" }}</p>
                    {% endif %}
                  </div>
                </a>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

{% style %}
  .workout-blog-posts {
    background: #fff;
    padding: 80px 20px;
    max-width: 1750px;
    margin: 0 auto;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-blog-posts__container {
    max-width: 1350px;
    margin: 0 auto;
  }

  .workout-blog-posts__header {
    text-align: center;
    margin-bottom: 60px;
  }

  .workout-blog-posts__title {
    font-size: 2.5rem;
    font-weight: 900;
    color: #1d1d1f;
    margin-bottom: 16px;
    line-height: 1.1;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-blog-posts__subtitle {
    font-size: 1.125rem;
    color: #666666;
    line-height: 1.5;
    font-weight: 400 !important;
    font-family: 'Barlow'
    , sans-serif !important;
    max-width: 600px;
    margin: 0 auto;
  }

  .workout-blog-posts__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
    margin-top: 60px;
  }

  /* Blog Card Design (same as blog-section.liquid) */
  .workout-blog-card {
    position: relative;
    background: #fff;
    border-radius: 12px;
    overflow: visible;
    transition: all 0.3s ease;
    text-decoration: none;
    color: inherit;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    height: 400px;
    margin-bottom: 40px;
    display: block;
  }

  .workout-blog-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    text-decoration: none;
    color: inherit;
  }

  .workout-blog-card__image-container {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: 12px;
  }

  .workout-blog-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .workout-blog-card:hover .workout-blog-card__image {
    transform: scale(1.05);
  }

  .workout-blog-card__content {
    position: absolute;
    bottom: -20px;
    left: 20px;
    right: 20px;
    background: #fff;
    padding: 24px;
    border-radius: 8px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    z-index: 2;
    transition: all 0.3s ease;
  }

  .workout-blog-card:hover .workout-blog-card__content {
    bottom: -25px;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
  }

  .workout-blog-card__category {
    font-size: 12px;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 12px;
    text-align: center;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-blog-card__divider {
    width: 100%;
    height: 1px;
    background: #e5e5e5;
    border: none;
    margin: 12px 0 16px;
  }

  .workout-blog-card__title {
    font-size: 18px;
    color: #000;
    line-height: 1.4;
    margin: 0;
    text-align: center;
    font-family: 'Barlow'
    , sans-serif !important;
  }

  .workout-blog-card__date {
    font-family: "Inter";
    font-size: 12px;
    color: #999;
    margin-top: 12px;
    text-align: center;
  }

  /* Responsive */
  @media screen and (max-width: 1024px) {
    .workout-blog-posts__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 24px;
    }

    .workout-blog-posts__title {
      font-size: 2rem;
    }

    .workout-blog-card {
      margin-bottom: 50px;
    }
  }

  @media screen and (max-width: 768px) {
    .workout-blog-posts {
      padding: 60px 15px;
    }

    .workout-blog-posts__grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .workout-blog-posts__title {
      font-size: 1.75rem;
    }

    .workout-blog-card {
      height: 350px;
      margin-bottom: 50px;
    }

    .workout-blog-card__content {
      left: 15px;
      right: 15px;
      padding: 20px;
    }
  }

  @media screen and (max-width: 480px) {
    .workout-blog-posts__title {
      font-size: 1.5rem;
    }

    .workout-blog-card {
      height: 300px;
      margin-bottom: 45px;
    }

    .workout-blog-card__content {
      padding: 18px;
    }
  }
{% endstyle %}

{% schema %}
  {
    "name": "Blog Posts",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "RELATED ARTICLES"
      }, {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Learn more about fitness and wellness"
      }, {
        "type": "checkbox",
        "id": "show_date",
        "label": "Show Date",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "blog_post",
        "name": "Blog Post",
        "settings": [
          {
            "type": "article",
            "id": "article",
            "label": "Article"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Blog Posts",
        "blocks": [
          {
            "type": "blog_post"
          }, {
            "type": "blog_post"
          }, {
            "type": "blog_post"
          }
        ]
      }
    ]
  }
{% endschema %}
