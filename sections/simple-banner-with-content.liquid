<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Função para limpar &nbsp; dos textos
    function cleanTextContent() {
      const headings = document.querySelectorAll('.banner-heading');
      const texts = document.querySelectorAll('.banner-text');
      
      headings.forEach(function(heading) {
        if (heading.innerHTML.includes('&nbsp;')) {
          heading.innerHTML = heading.innerHTML.replace(/&nbsp;/g, ' ');
        }
      });
      
      texts.forEach(function(text) {
        if (text.innerHTML.includes('&nbsp;')) {
          text.innerHTML = text.innerHTML.replace(/&nbsp;/g, ' ');
        }
      });
    }
    
    // Executa imediatamente
    cleanTextContent();
    
    // Re-executa quando o Shopify editor atualiza
    if (typeof window.Shopify !== 'undefined' && window.Shopify.designMode) {
      document.addEventListener('shopify:section:load', cleanTextContent);
      document.addEventListener('shopify:block:select', cleanTextContent);
      document.addEventListener('shopify:block:deselect', cleanTextContent);
    }
  });
</script>
