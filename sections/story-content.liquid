{% comment %} 
                                                                                            Story Content Section - Estilo Peloton
                                                                                            Seção com imagem e conteúdo lado a lado 
{% endcomment %}

<section class="story-content" data-section-id="{{ section.id }}">
  <div class="story-content__container">
    <div class="story-content__grid{% if section.settings.layout == 'image_right' %} story-content__grid--image-right{% endif %}">
      <!-- Image Column -->
      <div class="story-content__image-column">
        {% if section.settings.image != blank %}
          {{ section.settings.image | image_url: width: 800 | image_tag: class: 'story-content__image', loading: 'lazy', alt: section.settings.image.alt | escape
          }}
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'story-content__image placeholder' }}
        {% endif %}
      </div>

      <!-- Content Column -->
      <div class="story-content__text-column">
        <div class="story-content__content">
          <!-- Section Label -->
          {% if section.settings.section_label != blank %}
            <div class="story-content__section-label">
              <p class="story-content__label condensed-bold">{{ section.settings.section_label }}</p>
            </div>
          {% endif %}

          {% if section.settings.heading != blank %}
            <h2 class="story-content__heading black">{{ section.settings.heading }}</h2>
          {% endif %}

          {% if section.settings.text != blank %}
            <div class="story-content__text regular">
              {{ section.settings.text }}
            </div>
          {% endif %}

          {% if section.settings.button_text != blank and section.settings.button_link != blank %}
            <div class="story-content__button-wrapper">
              <a href="{{ section.settings.button_link }}" class="story-content__button condensed-bold">
                {{ section.settings.button_text }}
              </a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% style %}
  .story-content {
    background: #ffffff;
    margin: 0;
  }

  .story-content__container {
    max-width: 1750px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .story-content__section-label {
    margin-bottom: 10px;
  }

  .story-content__label {
    font-size: 14px;
    color: #EB701F;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 600;
    margin: 0;
  }

  .story-content__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    min-height: 600px;
    gap: 40px;
  }

  /* Image Right Layout */
  .story-content__grid--image-right .story-content__image-column {
    order: 2;
  }

  .story-content__grid--image-right .story-content__text-column {
    order: 1;
  }

  .story-content__image-column {
    position: relative;
    height: 100%;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .story-content__image {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    display: block;
    border-radius: 8px;
  }

  .story-content__image.placeholder {
    height: 600px;
  }

  .story-content__text-column {
    padding: 60px 0;
  }

  .story-content__content {
  ;
  /* max-width: 500px; */
}

/* Content alignment based on layout */
.story-content__grid:not(.story-content__grid--image-right) .story-content__content {
;
/* margin-left: auto; */
}

.story-content__grid--image-right .story-content__content {
  margin-right: auto;
}

.story-content__heading {
  font-size: 48px;
  font-weight: 700;
  color: #000000;
  margin-bottom: 10px;
  line-height: 1.2;
  letter-spacing: -0.5px;
}

.story-content__text {
  font-size: 18px;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 40px;
}

.story-content__text p {
  margin-bottom: 20px;
  font-family: 'Barlow'
  , sans-serif;
}

.story-content__text p:last-child {
  margin-bottom: 0;
}

.story-content__button {
  display: inline-block;
  padding: 15px 30px;
  background: transparent;
  color: #000000;
  border: 2px solid #000000;
  text-decoration: none;
  border-radius: 4px;
  transition: all 0.3s ease;
  font-size: 14px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.story-content__button:hover {
  background: #000000;
  color: #ffffff;
  transform: translateY(-2px);
}

/* Responsive */
@media screen and (max-width: 1024px) {
  .story-content {
    padding: 60px 0;
    margin: 0 0 80px;
  }

  .story-content__container {
    gap: 40px;
    padding: 0 30px;
  }

  .story-content__grid {
    gap: 60px;
  }

  .story-content__text-column {
    padding: 40px 0;
  }
}

@media screen and (max-width: 768px) {
  .story-content {
    padding: 50px 0;
    margin: 0 0 60px;
  }

  .story-content__container {
    grid-template-columns: 1fr;
    padding: 0 20px;
    gap: 30px;
  }

  .story-content__grid {
    grid-template-columns: 1fr;
    gap: 40px;
  }

  .story-content__image-column,
  .story-content__text-column {
    order: unset !important;
    padding-top: 0 !important
  }

  /* Para inverter a ordem no mobile */
  .story-content__image-column {
    order: 2 !important;
    min-height: 300px;
  }

  .story-content__text-column {
    order: 1 !important;
    padding: 40px 0;
  }

  .story-content__content {
    max-width: 100%;
    margin: 0 !important;
    text-align: center;
  }

  .story-content__heading {
    font-size: 36px;
    margin-bottom: 20px;
  }

  .story-content__text {
    font-size: 16px;
    margin-bottom: 30px;
  }

  .story-content__button {
    padding: 12px 25px;
    font-size: 13px;
  }
}

@media screen and (max-width: 480px) {
  .story-content__container {
    padding: 0 15px;
  }

  .story-content__heading {
    font-size: 28px;
  }

  .story-content__text {
    font-size: 15px;
  }
}
{% endstyle %}

