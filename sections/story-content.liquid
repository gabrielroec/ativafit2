{% comment %} 
        Story Content Section - Estilo Peloton
        Seção com imagem e conteúdo lado a lado 
{% endcomment %}

<section class="story-content" data-section-id="{{ section.id }}">
  <div class="story-content__container">
    <div class="story-content__grid{% if section.settings.layout == 'image_right' %} story-content__grid--image-right{% endif %}">
      <!-- Image Column -->
      <div class="story-content__image-column">
        {% if section.settings.image != blank %}
          {{ section.settings.image | image_url: width: 800 | image_tag: class: 'story-content__image', loading: 'lazy', alt: section.settings.image.alt | escape
          }}
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'story-content__image placeholder' }}
        {% endif %}
      </div>

      <!-- Content Column -->
      <div class="story-content__text-column">
        <div class="story-content__content">
          {% if section.settings.heading != blank %}
            <h2 class="story-content__heading black">{{ section.settings.heading }}</h2>
          {% endif %}

          {% if section.settings.text != blank %}
            <div class="story-content__text regular">
              {{ section.settings.text }}
            </div>
          {% endif %}

          {% if section.settings.button_text != blank and section.settings.button_link != blank %}
            <div class="story-content__button-wrapper">
              <a href="{{ section.settings.button_link }}" class="story-content__button condensed-bold">
                {{ section.settings.button_text }}
              </a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% style %}
  .story-content {
    background: {{ section.settings.background_color | default: '#ffffff' }};
    padding: {{ section.settings.section_padding_top | default: 80 }}
    px 0{{ section.settings.section_padding_bottom | default: 80 }}px;
    margin: {{ section.settings.section_margin_top | default: 0 }}
    px 0{{ section.settings.section_margin_bottom | default: 0 }}px;
  }

  .story-content__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .story-content__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
    min-height: 600px;
  }

  /* Image Right Layout */
  .story-content__grid--image-right .story-content__image-column {
    order: 2;
  }

  .story-content__grid--image-right .story-content__text-column {
    order: 1;
  }

  .story-content__image-column {
    position: relative;
    height: 100%;
    min-height: 500px;
  }

  .story-content__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
    display: block;
  }

  .story-content__image.placeholder {
    height: 500px;
    border-radius: 8px;
  }

  .story-content__text-column {
    padding: 40px 0;
  }

  .story-content__content {
    max-width: 500px;
  }

  /* Content alignment based on layout */
  .story-content__grid:not(.story-content__grid--image-right) .story-content__content {
    margin-left: auto;
  }

  .story-content__grid--image-right .story-content__content {
    margin-right: auto;
  }

  .story-content__heading {
    font-size: 48px;
    font-weight: 700;
    color: {{ section.settings.heading_color | default: '#000000' }};
    margin-bottom: 30px;
    line-height: 1.2;
    letter-spacing: -0.5px;
  }

  .story-content__text {
    font-size: 18px;
    color: {{ section.settings.text_color | default: '#666666' }};
    line-height: 1.6;
    margin-bottom: 40px;
  }

  .story-content__text p {
    margin-bottom: 20px;
  }

  .story-content__text p:last-child {
    margin-bottom: 0;
  }

  .story-content__button {
    display: inline-block;
    padding: 15px 30px;
    background: {{ section.settings.button_bg_color | default: 'transparent' }};
    color: {{ section.settings.button_text_color | default: '#000000' }};
    border: 2px solid{{ section.settings.button_border_color | default: '#000000' }};
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .story-content__button:hover {
    background: {{ section.settings.button_bg_hover | default: '#000000' }};
    color: {{ section.settings.button_text_hover | default: '#ffffff' }};
    transform: translateY(-2px);
  }

  /* Dark Background Variation */
  {% if section.settings.background_color == '#2a2a2a' or section.settings.background_color == '#000000' or section.settings.background_color == '#1a1a1a' %}
    .story-content__heading {
      color: {{ section.settings.heading_color | default: '#ffffff' }};
    }
    .story-content__text {
      color: {{ section.settings.text_color | default: '#cccccc' }};
    }
  {% endif %}

  /* Responsive */
  @media screen and (max-width: 1024px) {
    .story-content__grid {
      gap: 60px;
    }
  }

  @media screen and (max-width: 768px) {
    .story-content {
      padding: {{ section.settings.section_padding_top | default: 80 | divided_by: 1.5 }}
      px 0{{ section.settings.section_padding_bottom | default: 80 | divided_by: 1.5 }}px;
      margin: {{ section.settings.section_margin_top | default: 0 | divided_by: 1.5 }}
      px 0{{ section.settings.section_margin_bottom | default: 0 | divided_by: 1.5 }}px;
    }

    .story-content__container {
      padding: 0 15px;
    }

    .story-content__grid {
      grid-template-columns: 1fr;
      gap: 40px;
      min-height: auto;
    }

    .story-content__image-column,
    .story-content__text-column {
      order: unset !important;
    }

    .story-content__image-column {
      min-height: 300px;
    }

    .story-content__content {
      max-width: 100%;
      margin: 0 !important;
      text-align: center;
    }

    .story-content__heading {
      font-size: 36px;
      margin-bottom: 20px;
    }

    .story-content__text {
      font-size: 16px;
      margin-bottom: 30px;
    }

    .story-content__button {
      padding: 12px 25px;
      font-size: 13px;
    }
  }

  @media screen and (max-width: 480px) {
    .story-content__heading {
      font-size: 28px;
    }

    .story-content__text {
      font-size: 15px;
    }
  }
{% endstyle %}

