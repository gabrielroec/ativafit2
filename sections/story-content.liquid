    "name": "Story Content",
    "settings": [
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "options": [
          {
            "value": "image_left",
            "label": "Image Left"
          }, {
            "value": "image_right",
            "label": "Image Right"
          }
        ],
        "default": "image_left"
      },
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "How it all started"
      }, {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>In 2012, we brought the best talent in technology, hardware and production together to accomplish an ambitious goal: bring the community and excitement of boutique fitness into the home.</p>"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Story Content",
        "settings": {
          "heading": "How it all started",
          "text": "<p>In 2012, we brought the best talent in technology, hardware and production together to accomplish an ambitious goal: bring the community and excitement of boutique fitness into the home.</p>"
        }
      }
    ]
  }
{% endschema %}