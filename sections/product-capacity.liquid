<style>
  .product-capacity-section {
    width: 100%;
    max-width: 1370px;
    margin: 60px auto;
    padding: 0 20px;
  }

  .section-title-container {
    text-align: center;
    margin-bottom: 40px;
  }

  .section-title {
    font-size: 36px;
    font-weight: bold;
    color: #212121;
    margin: 0;
  }

  .capacity-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .capacity-item {
    background-color: #f9f9f9;
    border-radius: 8px;
    padding: 30px;
    transition: transform 0.3s ease;
    text-align: center;
  }

  .capacity-item:hover {
    transform: translateY(-5px);
  }

  .capacity-icon {
    margin-bottom: 20px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .capacity-icon-image {
    max-height: 60px;
    width: auto;
  }

  .default-icon {
    height: 60px;
    width: 60px;
  }

  .capacity-header {
    margin-bottom: 15px;
  }

  .capacity-title {
    font-size: 24px;
    margin: 0;
    color: #212121;
  }

  .capacity-description {
    font-size: 16px;
    line-height: 1.5;
    color: #212121;
  }

  @media screen and (max-width: 1024px) {
    .capacity-container {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 768px) {
    .product-capacity-section {
      margin: 40px auto;
    }

    .section-title {
      font-size: 30px;
    }

    .capacity-container {
      grid-template-columns: 1fr;
    }

    .capacity-title {
      font-size: 22px;
    }
  }
</style>

