{%- comment -%}
  Product Reviews Section
  Displays customer testimonials in a modern iOS-inspired style
{%- endcomment -%}

<div class="product-reviews-section">
  <div class="section-container">
    <h2 class="section-title">{{ section.settings.title | default: 'What our customers say' }}</h2>

    <div class="reviews-container">
      <div class="reviews-grid">
        <!-- Reviews content will be loaded dynamically via JavaScript -->
      </div>
    </div>

    <!-- Pagination Controls -->
    <div class="reviews-pagination">
      <button
        class="pagination-arrow prev"
        aria-label="Previous page"
        disabled>
        <svg
          width="12"
          height="12"
          viewBox="0 0 12 12"
          fill="none"
          xmlns="http://www.w3.org/2000/svg">
          <path
            d="M7.5 2L3.5 6L7.5 10"
            stroke="#999"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round" />
        </svg>
      </button>
      <div class="pagination-numbers">
        <button
          class="pagination-number active"
          aria-current="page"
          data-page="1">1</button>
        <button class="pagination-number" data-page="2">2</button>
        <button class="pagination-number" data-page="3">3</button>
      </div>
      <button class="pagination-arrow next" aria-label="Next page">
        <svg
          width="12"
          height="12"
          viewBox="0 0 12 12"
          fill="none"
          xmlns="http://www.w3.org/2000/svg">
          <path
            d="M4.5 2L8.5 6L4.5 10"
            stroke="#333"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round" />
        </svg>
      </button>
    </div>

  </div>
</div>

<style>
  .product-reviews-section {
    padding: 60px 0;
    background-color: #fff;
    margin-bottom: 80px;
  }

  .section-container {
    max-width: 1370px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-title {
    font-size: 36px;
    font-weight: 700;
    color: #1d1d1f;
    text-align: center;
    margin-bottom: 40px;
  }

  .reviews-container {
    width: 100%;
    margin-bottom: 40px;
  }

  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-auto-rows: 1fr;
    gap: 24px;
    grid-template-rows: repeat(3, auto);
  }

  .review-card {
    background-color: #ffffff;
    border-radius: 16px;
    padding: 24px;
    box-shadow: 0 4px 14px rgba(0, 0, 0, 0.06);
    transition: transform 0.2s ease
    , box-shadow 0.2s ease;
    position: relative;
    border: 1px solid rgba(0, 0, 0, 0.04);
    overflow: hidden;
    height: 100%;
    display: flex;
    flex-direction: column;
    margin-bottom: 0;
  }

  .review-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
  }

  .review-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #FF6B00, #FF9A4D);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .review-card:hover::before {
    opacity: 1;
  }

  .review-header {
    display: flex;
    align-items: center;
    margin-bottom: 12px;
  }

  .reviewer-avatar {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    margin-right: 12px;
    overflow: hidden;
    flex-shrink: 0;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    border: 2px solid #ffffff;
  }

  .reviewer-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .avatar-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #FF6B00, #FF9A4D);
    color: white;
    font-weight: 600;
    font-size: 18px;
  }

  .reviewer-info {
    flex-grow: 1;
  }

  .reviewer-name {
    font-size: 16px;
    font-weight: 600;
    color: #1d1d1f;
    margin: 0;
  }

  .review-date {
    font-size: 14px;
    color: #86868b;
    margin-top: 2px;
  }

  .review-rating {
    margin-bottom: 12px;
    display: flex;
    align-items: center;
  }

  .star {
    color: #d1d1d6;
    font-size: 18px;
    margin-right: 1px;
    line-height: 1;
  }

  .star.filled {
    color: #FF6B00;
  }

  .review-title {
    font-size: 18px;
    font-weight: 600;
    color: #1d1d1f;
    margin: 0 0 8px;
  }

  .review-content {
    font-size: 15px;
    line-height: 1.5;
    color: #1d1d1f;
    margin-bottom: 16px;
    flex-grow: 1;
  }

  .verified-purchase {
    display: flex;
    align-items: center;
    margin-bottom: 0;
    font-size: 14px;
    color: #FF6B00;
    font-weight: 500;
    margin-top: auto;
  }

  .verified-purchase svg {
    margin-right: 6px;
  }

  .verified-purchase svg path {
    fill: #FF6B00;
  }

  /* Pagination Styles */
  .reviews-pagination {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 40px;
  }

  .pagination-arrow {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: white;
    border: 1px solid #eee;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .pagination-arrow:hover:not([disabled]) {
    background: #f5f5f5;
    transform: translateY(-2px);
  }

  .pagination-arrow[disabled] {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .pagination-numbers {
    display: flex;
    margin: 0 16px;
  }

  .pagination-number {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin: 0 8px;
    background: white;
    border: 1px solid #eee;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
    font-weight: 500;
  }

  .pagination-number:hover:not(.active) {
    background: #f5f5f5;
    transform: translateY(-2px);
  }

  .pagination-number.active {
    background: #FF6B00;
    color: white;
    border-color: #FF6B00;
  }

  @media screen and (min-width: 1024px) and(max-width: 1200px) {
    .reviews-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media screen and (min-width: 768px) and(max-width: 1023px) {
    .reviews-grid {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(5, auto);
    }
  }

  @media screen and (max-width: 767px) {
    .product-reviews-section {
      padding: 40px 0;
    }

    .section-title {
      font-size: 28px;
      margin-bottom: 30px;
    }

    .reviews-grid {
      grid-template-columns: 1fr;
      grid-template-rows: repeat(9, auto);
      gap: 16px;
    }

    .review-card {
      padding: 20px;
    }

    .pagination-numbers {
      margin: 0 8px;
    }

    .pagination-number {
      width: 36px;
      height: 36px;
      margin: 0 4px;
    }
  }
</style>

