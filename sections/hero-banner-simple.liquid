                <div class="hero-simple__custom-text" style="
                font-size: {{ block.settings.custom_text_font_size | default: 14 }}px;
                font-weight: {{ block.settings.custom_text_font_weight | default: 400 }};
                line-height: {{ block.settings.custom_text_line_height | default: 1.5 }};
                margin-bottom: {{ block.settings.custom_text_margin_bottom | default: 24 }}px;
                color: {{ block.settings.custom_text_color | default: '#ffffff' }};
              ">
                  {{ block.settings.custom_text }}</div>
              {% endif %}

              <div class="hero-simple__buttons">
                {% if block.settings.button_1_text != blank and block.settings.button_1_link != blank %}
                  <a
                    href="{{ block.settings.button_1_link }}"
                    class="hero-simple__button"
                    style="
                    color: {{ block.settings.button_1_text_color }};
                    border-color: {{ block.settings.button_1_border_color }};
                    background: {{ block.settings.button_1_bg_color }};
                    position: relative;
                    z-index: 4;
