    }
  }

  /* Mobile - Posicionamento via Site Editor */
  @media screen and (max-width: 1023px) {
    /* Posicionamento Horizontal Mobile - usando align-items (eixo horizontal com column) */
    .hero-simple__content--mobile-left .hero-simple__text-container {
      align-items: flex-start !important;
    }

    .hero-simple__content--mobile-center .hero-simple__text-container {
      align-items: center !important;
    }

    .hero-simple__content--mobile-right .hero-simple__text-container {
      align-items: flex-end !important;
    }

    /* Posicionamento Vertical Mobile - usando justify-content (eixo vertical com column) */
