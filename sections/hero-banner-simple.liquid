<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Sistema de Detecção de Conteúdo e Inicialização
    function initializeHeroBanner() {
      const heroes = document.querySelectorAll('[data-hero-simple]');
      
      heroes.forEach(hero => {
        const slides = hero.querySelectorAll('.hero-simple__slide');
        const dots = hero.querySelectorAll('.hero-simple__dot');
        const prevBtn = hero.querySelector('.hero-simple__nav--prev');
        const nextBtn = hero.querySelector('.hero-simple__nav--next');
        let currentSlide = 0;

        // Detecta se cada slide tem conteúdo e aplica classe apropriada
        slides.forEach(slide => {
          const title = slide.querySelector('.hero-simple__title');
          const subtitle = slide.querySelector('.hero-simple__subtitle');
          const customText = slide.querySelector('.hero-simple__custom-text');
          const buttons = slide.querySelectorAll('.hero-simple__button');
          
          const hasTitle = title && title.textContent.trim() !== '';
          const hasSubtitle = subtitle && subtitle.textContent.trim() !== '';
          const hasCustomText = customText && customText.textContent.trim() !== '';
          const hasButtons = buttons.length > 0 && Array.from(buttons).some(btn => btn.textContent.trim() !== '');
          
          // Se tem qualquer conteúdo, adiciona a classe
          if (hasTitle || hasSubtitle || hasCustomText || hasButtons) {
            slide.classList.add('hero-simple__slide--has-content');
            
            // Log para desenvolvimento (pode ser removido em produção)
            console.log('Banner com conteúdo detectado:', {
              hasTitle,
              hasSubtitle,
              hasCustomText,
              hasButtons: hasButtons
            });
          } else {
            slide.classList.remove('hero-simple__slide--has-content');
          }
        });

        // Função para trocar slides
        function showSlide(index) {
          slides[currentSlide].classList.remove('active');
          dots[currentSlide]?.classList.remove('active');
          
          currentSlide = index;
          
          slides[currentSlide].classList.add('active');
          dots[currentSlide]?.classList.add('active');
        }

        // Inicializa controles do slider se houver múltiplos slides
        if (slides.length > 1) {
          prevBtn?.addEventListener('click', () => {
            showSlide((currentSlide - 1 + slides.length) % slides.length);
          });
          
          nextBtn?.addEventListener('click', () => {
            showSlide((currentSlide + 1) % slides.length);
          });
          
          dots.forEach((dot, index) => {
            dot.addEventListener('click', () => showSlide(index));
          });

          // Auto-play opcional (descomente se necessário)
          // setInterval(() => {
          //   showSlide((currentSlide + 1) % slides.length);
          // }, 5000);
        }
      });
    }

    // Inicializa imediatamente
    initializeHeroBanner();

    // Re-inicializa quando o Shopify editor atualiza
    if (typeof window.Shopify !== 'undefined' && window.Shopify.designMode) {
      document.addEventListener('shopify:section:load', initializeHeroBanner);
      document.addEventListener('shopify:block:select', initializeHeroBanner);
      document.addEventListener('shopify:block:deselect', initializeHeroBanner);
    }
  });
</script>