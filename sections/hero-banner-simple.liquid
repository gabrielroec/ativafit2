<style>
  .hero-simple {
    position: relative;
    width: 100%;
    height: 500px;
    overflow: hidden;
    margin-top: 70px;
  }

  .hero-simple__container {
    position: relative;
    width: 100%;
    height: 100%;
  }


  .hero-simple__slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.6s ease-in-out;
  }

  .hero-simple__slide.active {
    opacity: 1;
    visibility: visible;
  }

  .hero-simple__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-simple__image--mobile {
    display: none;
  }

  .hero-simple__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
  }

  .hero-simple__content {
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    max-width: 1750px;
    margin: 0 auto;
    padding: 0 20px;
    z-index: 2;
  }

  .hero-simple__text {
    max-width: 625px;
    color: white;
  }

  .hero-simple__title {
    font-size: 50px;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 16px;
  }

  .hero-simple__subtitle {
    font-size: 16px;
    font-weight: 400;
    margin-bottom: 24px;
  }

  .hero-simple__buttons {
    display: flex;
    gap: 1rem;
  }

  .hero-simple__button {
    padding: 0.75rem 1.5rem;
    border: 2px solid;
    border-radius: 4px;
    text-decoration: none;
    transition: all 0.3s ease;
    font-weight: 600;
    text-transform: uppercase;
  }

  .hero-simple__button:hover {
    background-color: #EB701F !important;
    color: #fff !important;
    border-color: #EB701F !important;
  }

  /* Navigation */
  .hero-simple__nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.9);
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 18px;
    color: #333;
    z-index: 10;
  }

  .hero-simple__nav:hover {
    background: white;
    transform: translateY(-50%) scale(1.1);
  }

  .hero-simple__nav--prev {
    left: 20px;
  }

  .hero-simple__nav--next {
    right: 20px;
  }

  .hero-simple__dots {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 10;
  }

  .hero-simple__dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .hero-simple__dot.active {
    background: white;
    transform: scale(1.2);
  }
  @media screen and (max-width: 1824px) {
    .hero-simple {
     height: 400px!important;
    }
  }
@media screen and (max-width: 1456px) {
    .hero-simple {
      height: 300px!important;
    }
  }
  @media screen and (max-width: 1093px) {
    .hero-simple {
      height: 270px!important;
    }
  }
  @media screen and (max-width: 983px) {
    .hero-simple {
      height: 250px!important;
    }
  }
  @media screen and (max-width: 910px) {
    .hero-simple {
      height: 200px!important;
    }
  }
  @media screen and (max-width: 768px) {
    .hero-simple {
      height: 700px!important;
    }
    .hero-simple__image--desktop {
      display: none;
    }

    .hero-simple__image--mobile {
      display: block;
    }

    .hero-simple__title {
      font-size: 36px;
    }

    .hero-simple__nav {
      width: 40px;
      height: 40px;
    }

    .hero-simple__nav--prev {
      left: 10px;
    }

    .hero-simple__nav--next {
      right: 10px;
    }
  }
  @media screen and (max-width: 627px) {
    .hero-simple {
      height: 600px!important;
    }
  }
  @media screen and (max-width: 536px) {
    .hero-simple {
      height: 500px!important;
    }
  }
  @media screen and (max-width: 455px) {
    .hero-simple {
      height: 450px!important;
    }
  }
  @media screen and (max-width: 400px) {
    .hero-simple {
      height: 400px!important;
    }
  }
</style>

<section class="hero-simple" data-hero-simple>
  <div class="hero-simple__container">
    {% for block in section.blocks %}
      <div class="hero-simple__slide {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index0 }}">
        {% if block.settings.slide_link != blank %}
          <a
            href="{{ block.settings.slide_link }}"
            class="hero-simple__link"
            style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 1;"></a>
        {% endif %}

        {% if block.settings.background_image != blank %}
          <img
            src="{{ block.settings.background_image | image_url: width: 2000 }}"
            alt="{{ block.settings.background_image.alt | escape }}"
            class="hero-simple__image hero-simple__image--desktop"
            loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
            width="2000"
            height="500">
          <img
            src="{{ block.settings.background_image_mobile | default: block.settings.background_image | image_url: width: 1000 }}"
            alt="{{ block.settings.background_image_mobile.alt | default: block.settings.background_image.alt | escape }}"
            class="hero-simple__image hero-simple__image--mobile"
            loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
            width="1000"
            height="500">
        {% endif %}

        <div class="hero-simple__overlay" style="background-color: {{ block.settings.overlay_color | color_modify: 'alpha', block.settings.overlay_opacity }}"></div>

        <div class="hero-simple__content">
          <div class="hero-simple__text">
            <h1 class="hero-simple__title">{{ block.settings.title }}</h1>
            <p class="hero-simple__subtitle">{{ block.settings.subtitle }}</p>
            <div class="hero-simple__buttons">
              {% if block.settings.button_1_text != blank and block.settings.button_1_link != blank %}
                <a
                  href="{{ block.settings.button_1_link }}"
                  class="hero-simple__button"
                  style="
                    color: {{ block.settings.button_1_text_color }};
                    border-color: {{ block.settings.button_1_border_color }};
                    background: {{ block.settings.button_1_bg_color }};
                  ">
                  {{ block.settings.button_1_text }}
                </a>
              {% endif %}
              {% if block.settings.button_2_text != blank and block.settings.button_2_link != blank %}
                <a
                  href="{{ block.settings.button_2_link }}"
                  class="hero-simple__button"
                  style="
                    color: {{ block.settings.button_2_text_color }};
                    border-color: {{ block.settings.button_2_border_color }};
                    background: {{ block.settings.button_2_bg_color }};
                  ">
                  {{ block.settings.button_2_text }}
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% endfor %}

    {% if section.blocks.size > 1 %}
      <button
        class="hero-simple__nav hero-simple__nav--prev"
        type="button"
        aria-label="Previous slide">&#8249;</button>
      <button
        class="hero-simple__nav hero-simple__nav--next"
        type="button"
        aria-label="Next slide">&#8250;</button>

      <div class="hero-simple__dots">
        {% for block in section.blocks %}
          <button
            class="hero-simple__dot {% if forloop.first %}active{% endif %}"
            type="button"
            data-slide="{{ forloop.index0 }}"
            aria-label="Go to slide {{ forloop.index }}"></button>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

<script>
  (function() {
  'use strict';
  
  function HeroSimple(element) {
    this.hero = element;
    this.slides = this.hero.querySelectorAll('.hero-simple__slide');
    this.dots = this.hero.querySelectorAll('.hero-simple__dot');
    this.prevBtn = this.hero.querySelector('.hero-simple__nav--prev');
    this.nextBtn = this.hero.querySelector('.hero-simple__nav--next');
    this.currentSlide = 0;
    this.slideCount = this.slides.length;
    this.autoplayTimer = null;
    this.autoplayDelay = 5000;
    
    if (this.slideCount > 1) {
      this.init();
    }
  }
  
  HeroSimple.prototype.init = function() {
    this.bindEvents();
    this.startAutoplay();
  };
  
  HeroSimple.prototype.bindEvents = function() {
    var self = this;
    
    if (this.prevBtn) {
      this.prevBtn.addEventListener('click', function(e) {
        e.preventDefault();
        self.goToPrev();
      });
    }
    
    if (this.nextBtn) {
      this.nextBtn.addEventListener('click', function(e) {
        e.preventDefault();
        self.goToNext();
      });
    }
    
    this.dots.forEach(function(dot, index) {
      dot.addEventListener('click', function(e) {
        e.preventDefault();
        self.goToSlide(index);
      });
    });
    
    this.hero.addEventListener('mouseenter', function() {
      self.stopAutoplay();
    });
    
    this.hero.addEventListener('mouseleave', function() {
      self.startAutoplay();
    });
  };
  
  HeroSimple.prototype.goToSlide = function(index) {
    if (index === this.currentSlide) return;
    
    // Remove active from current
    this.slides[this.currentSlide].classList.remove('active');
    if (this.dots[this.currentSlide]) {
      this.dots[this.currentSlide].classList.remove('active');
    }
    
    // Set new slide
    this.currentSlide = index;
    
    // Add active to new
    this.slides[this.currentSlide].classList.add('active');
    if (this.dots[this.currentSlide]) {
      this.dots[this.currentSlide].classList.add('active');
    }
  };
  
  HeroSimple.prototype.goToNext = function() {
    var next = (this.currentSlide + 1) % this.slideCount;
    this.goToSlide(next);
  };
  
  HeroSimple.prototype.goToPrev = function() {
    var prev = (this.currentSlide - 1 + this.slideCount) % this.slideCount;
    this.goToSlide(prev);
  };
  
  HeroSimple.prototype.startAutoplay = function() {
    var self = this;
    this.stopAutoplay();
    this.autoplayTimer = setInterval(function() {
      self.goToNext();
    }, this.autoplayDelay);
  };
  
  HeroSimple.prototype.stopAutoplay = function() {
    if (this.autoplayTimer) {
      clearInterval(this.autoplayTimer);
      this.autoplayTimer = null;
    }
  };
  
  // Initialize when DOM is ready
  function init() {
    var heroes = document.querySelectorAll('[data-hero-simple]');
    heroes.forEach(function(hero) {
      new HeroSimple(hero);
    });
  }
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
  })();
</script>

