  <div class="hero-simple__container">
    {% for block in section.blocks %}
      <div class="hero-simple__slide {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index0 }}">
        {% if block.settings.slide_link != blank %}
          <a
            href="{{ block.settings.slide_link }}"
            class="hero-simple__link"
            style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 3;"></a>
        {% endif %}

        {% if block.settings.background_image != blank %}
          <img
            src="{{ block.settings.background_image | image_url: width: 2000 }}"
            alt="{{ block.settings.background_image.alt | escape }}"
            class="hero-simple__image hero-simple__image--desktop"
            loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
            width="2000"
            height="600">
          <img
            src="{{ block.settings.background_image_mobile | default: block.settings.background_image | image_url: width: 1000 }}"
            alt="{{ block.settings.background_image_mobile.alt | default: block.settings.background_image.alt | escape }}"
            class="hero-simple__image hero-simple__image--mobile"
            loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
            width="1000"
            height="600">
        {% endif %}

        <div class="hero-simple__overlay" style="background-color: {{ block.settings.overlay_color | color_modify: 'alpha', block.settings.overlay_opacity }}"></div>

        <div class="hero-simple__content hero-simple__content--desktop-{{ block.settings.desktop_horizontal_position | default: 'left' }} hero-simple__content--desktop-{{ block.settings.desktop_vertical_position | default: 'middle' }} hero-simple__content--mobile-{{ block.settings.mobile_horizontal_position | default: 'center' }} hero-simple__content--mobile-{{ block.settings.mobile_vertical_position | default: 'middle' }}">
          <div class="hero-simple__text-container">
            <div class="hero-simple__text" style="
              text-align: {{ block.settings.text_alignment | default: 'left' }};
            ">
              {% if block.settings.title != blank %}
                <h1 class="hero-simple__title" style="
                  --title-font-size-desktop: {{ block.settings.title_font_size_desktop | default: '50' }}px;
                  --title-font-size-mobile: {{ block.settings.title_font_size_mobile | default: '32' }}px;
                  font-size: var(--title-font-size-desktop);
                  font-weight: {{ block.settings.title_font_weight | default: 700 }};
                  line-height: {{ block.settings.title_line_height | default: 1.2 }};
                  margin-bottom: {{ block.settings.title_margin_bottom | default: 16 }}px;
                  color: {{ block.settings.title_color | default: '#ffffff' }};
                ">
                  {{ block.settings.title }}</h1>
              {% endif %}

              {% if block.settings.subtitle != blank %}
                <p class="hero-simple__subtitle" style="
                  --subtitle-font-size-desktop: {{ block.settings.subtitle_font_size_desktop | default: '18' }}px;
                  --subtitle-font-size-mobile: {{ block.settings.subtitle_font_size_mobile | default: '16' }}px;
                  font-size: var(--subtitle-font-size-desktop);
                  font-weight: {{ block.settings.subtitle_font_weight | default: 600 }};
                  line-height: {{ block.settings.subtitle_line_height | default: 1.4 }};
                  margin-bottom: {{ block.settings.subtitle_margin_bottom | default: 24 }}px;
                  color: {{ block.settings.subtitle_color | default: '#ffffff' }};
                ">
                  {{ block.settings.subtitle }}</p>
              {% endif %}

