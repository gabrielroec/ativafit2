{%- style -%}
  .hero-simple {
    position: relative;
    width: 100%;
    height: 500px;
    overflow: hidden;
    margin-top: 70px;
  }

  .hero-simple__container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .hero-simple__slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.6s ease-in-out;
  }

  .hero-simple__slide.active {
    opacity: 1;
    visibility: visible;
  }

  .hero-simple__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain !important;
  }

  .hero-simple__image--mobile {
    display: none;
  }

  .hero-simple__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
  }

  .hero-simple__content {
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    max-width: 1750px;
    margin: 0 auto;
    padding: 0 20px;
    z-index: 2;
    pointer-events: none;
  }

  /* Desktop positioning options - APENAS para telas â‰¥1024px */
  @media screen and (min-width: 1024px) {
    .hero-simple__content--left {
      justify-content: flex-start;
    }

    .hero-simple__content--center {
      justify-content: center;
    }

    .hero-simple__content--right {
      justify-content: flex-end;
    }

    /* Reset mobile positioning on desktop */
    .hero-simple__content--top,
    .hero-simple__content--bottom {
      align-items: center;
      padding-top: 0;
      padding-bottom: 0;
    }
  }

  /* Mobile positioning options - APENAS para telas <1024px */
  @media screen and (max-width: 1023px) {
    .hero-simple__content {
      justify-content: center;
      /* Sempre centralizado horizontalmente no mobile */
    }

    .hero-simple__content--top {
      align-items: flex-start;
      padding-top: 20px;
      padding-bottom: 0;
    }

    .hero-simple__content--center {
      align-items: center;
      padding-top: 0;
      padding-bottom: 0;
    }

    .hero-simple__content--bottom {
      align-items: flex-end;
      padding-top: 0;
      padding-bottom: 20px;
    }

    /* Reset desktop positioning on mobile */
    .hero-simple__content--left,
    .hero-simple__content--right {
      justify-content: center;
    }
  }

  .hero-simple__text {
    max-width: 625px;
    color: white;
    pointer-events: auto;
  }

  .hero-simple__title {
    font-size: 50px;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 16px;
  }

  .hero-simple__subtitle {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 24px;
  }

  .hero-simple__buttons {
    display: flex;
    gap: 1rem;
  }

  .hero-simple__button {
    padding: 0.75rem 1.5rem;
    border: 2px solid;
    border-radius: 4px;
    text-decoration: none;
    transition: all 0.3s ease;
    font-weight: 600;
    text-transform: uppercase;
  }

  .hero-simple__button:hover {
    background-color: #EB701F !important;
    color: #fff !important;
    border-color: #EB701F !important;
  }

  /* Navigation */
  .hero-simple__nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.9);
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 18px;
    color: #333;
    z-index: 10;
  }

  .hero-simple__nav:hover {
    background: white;
    transform: translateY(-50%) scale(1.1);
  }

  .hero-simple__nav--prev {
    left: 20px;
  }

  .hero-simple__nav--next {
    right: 20px;
  }

  .hero-simple__dots {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 10;
  }

  .hero-simple__dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .hero-simple__dot.active {
    background: white;
    transform: scale(1.2);
  }

