{%- style -%}
  .hero-simple {
    position: relative;
    width: 100%;
    background: #fff;
    overflow: hidden;
    height: 640px;
    display: flex;
    align-items: center;
  }

  .hero-simple__container {
    position: relative;
    width: 100%;
  }

  .hero-simple__slide {
    position: relative;
    width: 100%;
    display: none;
    min-height: 400px;
  }

  .hero-simple__slide.active {
    display: block;
  }

  /* Slide com conteúdo - adiciona padding para espaçamento adequado */
  .hero-simple__slide--has-content {
    padding: 80px 0;
  }

  .hero-simple__image {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .hero-simple__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
  }

  .hero-simple__content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }


  .hero-simple__text-container {
    width: 100%;
    max-width: 1800px;
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    min-height: 100%;
  }

  /* Mobile - flex-direction column para posicionamento vertical */
  @media screen and (max-width: 1023px) {
    .hero-simple__text-container {
      flex-direction: column;
      justify-content: center;
    }

    /* Aplicar fontes mobile usando CSS custom properties */
    .hero-simple__title {
      font-size: var(--title-font-size-mobile) !important;
    }

    .hero-simple__subtitle {
      font-size: var(--subtitle-font-size-mobile) !important;
    }
  }

  /* Desktop - Posicionamento via Site Editor */
  @media screen and (min-width: 1024px) {
    /* Posicionamento Horizontal Desktop - usando flexbox do container */
    .hero-simple__content--desktop-left .hero-simple__text-container {
      justify-content: flex-start;
    }

    .hero-simple__content--desktop-center .hero-simple__text-container {
      justify-content: center;
    }

    .hero-simple__content--desktop-right .hero-simple__text-container {
      justify-content: flex-end;
    }

    /* Posicionamento Vertical Desktop - CORRIGIDO */
