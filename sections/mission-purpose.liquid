      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }, {
        "type": "header",
        "content": "Background"
      }, {
