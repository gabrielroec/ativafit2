{% comment %} 
            Mission Purpose Section - Estilo Peloton
            Seção com fundo escuro, texto centralizado para missão/propósito 
{% endcomment %}

<section class="mission-purpose" data-section-id="{{ section.id }}">
  <div class="mission-purpose__container">
    <div class="mission-purpose__content">
      {% if section.settings.label != blank %}
        <p class="mission-purpose__label regular">{{ section.settings.label }}</p>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="mission-purpose__heading black">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.text != blank %}
        <div class="mission-purpose__text regular">
          {{ section.settings.text }}
        </div>
      {% endif %}

      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <div class="mission-purpose__button-wrapper">
          <a href="{{ section.settings.button_link }}" class="mission-purpose__button condensed-bold">
            {{ section.settings.button_text }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% style %}
  .mission-purpose {
    background: {{ section.settings.background_color | default: '#2a2a2a' }};
    padding: 120px 0;
    margin: 0;
    position: relative;
    overflow: hidden;
  }

  {% if section.settings.background_image != blank %}
    .mission-purpose {
      background-image: url('{{ section.settings.background_image | img_url: '1920x1080' }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }

    .mission-purpose::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: {{ section.settings.overlay_color | color_modify: 'alpha', section.settings.overlay_opacity }};
    }
  {% endif %}

  .mission-purpose__container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
  }

  .mission-purpose__content {
    text-align: center;
  }

  .mission-purpose__label {
    font-size: 16px;
    color: {{ section.settings.label_color | default: '#cccccc' }};
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 400;
  }

  .mission-purpose__heading {
    font-size: 56px;
    font-weight: 700;
    color: {{ section.settings.heading_color | default: '#ffffff' }};
    margin-bottom: 40px;
    line-height: 1.2;
    letter-spacing: -0.5px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .mission-purpose__text {
    font-size: 20px;
    color: {{ section.settings.text_color | default: '#cccccc' }};
    line-height: 1.6;
    margin-bottom: 50px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .mission-purpose__text p {
    margin-bottom: 20px;
  }

  .mission-purpose__text p:last-child {
    margin-bottom: 0;
  }

  .mission-purpose__button {
    display: inline-block;
    padding: 15px 30px;
    background: {{ section.settings.button_bg_color | default: 'transparent' }};
    color: {{ section.settings.button_text_color | default: '#ffffff' }};
    border: 2px solid{{ section.settings.button_border_color | default: '#ffffff' }};
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .mission-purpose__button:hover {
    background: {{ section.settings.button_bg_hover | default: '#ffffff' }};
    color: {{ section.settings.button_text_hover | default: '#000000' }};
    transform: translateY(-2px);
  }

  /* Responsive */
  @media screen and (max-width: 768px) {
    .mission-purpose {
      padding: 80px 0;
      margin: 0;
    }

    .mission-purpose__container {
      padding: 0 15px;
    }

    .mission-purpose__label {
      font-size: 14px;
      margin-bottom: 15px;
      letter-spacing: 1.5px;
    }

    .mission-purpose__heading {
      font-size: 36px;
      margin-bottom: 25px;
    }

    .mission-purpose__text {
      font-size: 18px;
      margin-bottom: 35px;
    }

    .mission-purpose__button {
      padding: 12px 25px;
      font-size: 13px;
    }
  }

  @media screen and (max-width: 480px) {
    .mission-purpose__heading {
      font-size: 28px;
      margin-bottom: 20px;
    }

    .mission-purpose__text {
      font-size: 16px;
      margin-bottom: 30px;
    }

    .mission-purpose__label {
      font-size: 13px;
      letter-spacing: 1px;
    }
  }
{% endstyle %}

