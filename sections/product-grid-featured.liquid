{% comment %} 
                                                                                                                Product Grid Featured Section 
                                                                                                                - Renders a section with title, subtitle and up to 4 product cards 
                                                                                                                - Each card shows image, title (orange), description, price, and "Add to Cart" button 
                                                                                                                - Fully responsive and editable via Theme Editor 
{% endcomment %}

<section class="product-grid-featured">
  <div class="container">
    <!-- Header -->
    {% if section.settings.section_title != blank %}
      <h2 class="pgf-title">{{ section.settings.section_title | replace: 'Universe', '<span class="pgf-highlight">Universe</span>' }}</h2>
    {% endif %}
    <p class="pgf-subtitle">{{ section.settings.section_subtitle }}</p>

    <!-- Grid -->
    <div class="pgf-grid">
      {% for block in section.blocks %}
        {% assign product = all_products[block.settings.product] %}
        {% if product %}
          <div class="pgf-card">
            <a href="{{ product.url }}" class="pgf-image-link">
              <img
                src="{{ product.featured_image | image_url: width: 500 }}"
                alt="{{ product.title }}"
                loading="lazy"
                width="500"
                height="300"
                class="pgf-image" />
            </a>
            <h3 class="pgf-product-title">{{ product.title }}</h3>
            <p class="pgf-description">{{ block.settings.product_description }}</p>
            <p class="pgf-price bold">{{ product.price | money }}</p>
            <form method="post" action="{{ routes.cart_add_url }}">
              <input
                type="hidden"
                name="id"
                value="{{ product.variants.first.id }}">
              <button type="submit" class="pgf-button">Shop</button>
            </form>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <style>
    .product-grid-featured {
      padding: 60px 20px 0;
      background: #ffffff;
    }

    .product-grid-featured .container {
      max-width: 1200px;
      margin: 0 auto !important;
      padding: 0 !important;
    }

    .pgf-title {
      text-align: center;

      font-weight: 700;
      margin-bottom: 0 !important;
    }

    .pgf-highlight {
      color: #F37021;
    }

    .pgf-subtitle {
      text-align: center;
      font-size: 16px;
      margin-top: 8px !important;
      margin-bottom: 40px !important;
    }

    .pgf-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 24px;
    }

    .pgf-card {
      background: #f8f8f8;
      border-radius: 24px;
      padding: 24px;
      text-align: center;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.4);
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .pgf-image-link {
      display: block;
      text-decoration: none;
      margin-bottom: 16px;
    }

    .pgf-image {
      width: 100%;
      height: auto;
      object-fit: contain;
      transition: transform 0.3s ease;
    }

    .pgf-image-link:hover .pgf-image {
      transform: scale(1.05);
    }

    .pgf-product-title {
      color: #F37021;
      font-size: 22px !important;
      font-weight: 500;
      margin-bottom: 8px;
    }

    .pgf-description {
      font-size: 14px;
      color: #333;
      margin-bottom: 12px;
    }

    .pgf-price {
      font-size: 22px !important;
      font-weight: bold;
      margin-bottom: 12px;
    }

    .pgf-button {
      background: #F37021;
      color: #ffffff;
      font-weight: bold;
      border: none;
      border-radius: 8px;
      padding: 2px 24px;
      font-size: 14px;
      cursor: pointer;
      transition: background 0.2s;
      width: 100%;
    }

    .pgf-button:hover {
      background: #d85c1a;
    }

    @media (max-width: 768px) {
      .pgf-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <script>
    // JS reservado para futuras interações
    document.addEventListener('DOMContentLoaded', function () {
      // Optional JS hook
    });
  </script>
</section>

{% schema %}
  {
    "name": "Product Grid Featured",
    "tag": "section",
    "class": "product-grid-featured",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title",
        "default": "Unlock the Full Workout Universe"
      }, {
        "type": "text",
        "id": "section_subtitle",
        "label": "Section Subtitle",
        "default": "Combine with these accessories to unlock over 50 new exercises."
      }
    ],
    "blocks": [
      {
        "type": "product",
        "name": "Product",
        "settings": [
          {
            "type": "product",
            "id": "product",
            "label": "Select Product"
          }, {
            "type": "textarea",
            "id": "product_description",
            "label": "Product Description",
            "info": "Write a custom description for this product"
          }
        ]
      }
    ],
    "max_blocks": 4,
    "presets": [
      {
        "name": "Product Grid Featured",
        "category": "Products",
        "blocks": [
          {
            "type": "product"
          }, {
            "type": "product"
          }, {
            "type": "product"
          }, {
            "type": "product"
          }
        ]
      }
    ]
  }
{% endschema %}