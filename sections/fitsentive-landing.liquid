<!-- =================== HERO =================== -->
<section class="fit-hero">
  <!-- Desktop hero: 2000x500 -->
  <div class="hero-wrap hero-desktop">
    <div class="hero-ratio" style="--ratio:25%;">
      <div class="hero-inner">
        {% assign desktop_href = section.settings.hero_link_url | default: section.settings.product_url %}
        {% if desktop_href != blank %}
          <a href="{{ desktop_href }}" aria-label="{{ section.settings.hero_image_alt | escape }}" style="position:absolute;inset:0;z-index:3;display:block;"></a>
        {% endif %}
        {% if section.settings.hero_image %}
          <img class="hero-img" src="{{ section.settings.hero_image | image_url: width: 2000 }}"
               alt="{{ section.settings.hero_image_alt | escape }}"
               style="object-position: {{ section.settings.hero_object_position }};">
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Mobile hero: 500x450, whole <a> -->
  {% assign ig_url = section.settings.mobile_ig_url | replace:'http://','https://' %}
  {% if section.settings.mobile_ig_on and ig_url != blank %}
    <a href="{{ ig_url }}" target="_blank" rel="noopener" class="hero-wrap hero-mobile" style="text-decoration:none;">
      <div class="hero-ratio" style="--ratio:111%;">
        <div class="hero-inner">
          {% if section.settings.hero_image_mobile %}
            <img class="hero-img" src="{{ section.settings.hero_image_mobile | image_url: width: 1080 }}"
                 alt="{{ section.settings.hero_image_alt | escape }}">
          {% elsif section.settings.mobile_ig_cover %}
            <img class="hero-img" src="{{ section.settings.mobile_ig_cover | image_url: width: 1080 }}"
                 alt="{{ section.settings.hero_image_alt | escape }}">
          {% else %}
            <img class="hero-img" src="{{ section.settings.hero_image | image_url: width: 1080 }}"
                 alt="{{ section.settings.hero_image_alt | escape }}">
          {% endif %}
        </div>
      </div>
    </a>
  {% else %}
    <div class="hero-wrap hero-mobile">
      <div class="hero-ratio" style="--ratio:111%;">
        <div class="hero-inner">
          {% if section.settings.hero_image_mobile %}
            <img class="hero-img" src="{{ section.settings.hero_image_mobile | image_url: width: 1000 }}"
                 alt="{{ section.settings.hero_image_alt | escape }}">
          {% else %}
            <img class="hero-img" src="{{ section.settings.hero_image | image_url: width: 1000 }}"
                 alt="{{ section.settings.hero_image_alt | escape }}">
          {% endif %}
        </div>
      </div>
    </div>
  {% endif %}
</section>

<!-- ============== Partnership + Challenge ============== -->
<section class="fit-section fit-section--alt">
  <div class="fit-container fit-grid fit-grid--2" style="align-items:center;">
    <div>
      <h2 class="fit-title">{{ section.settings.partner_heading }}</h2>
      <p class="fit-copy">{{ section.settings.partner_copy }}</p>
      <div class="fit-logos" style="margin-top:1rem;">
        <img src="{{ section.settings.logo_left | image_url }}" alt="Left logo" />
        <span>&times;</span>
        <img src="{{ section.settings.logo_right | image_url }}" alt="Right logo" />
      </div>
    </div>
    <div>
      <h3 class="fit-title" style="text-align:center;">{{ section.settings.challenge_title }}</h3>
      {% assign thumb_count = 0 %}
      {% for block in section.blocks %}
        {% if block.type == 'thumb' and block.settings.thumb != blank %}
          {% assign thumb_count = thumb_count | plus: 1 %}
        {% endif %}
      {% endfor %}
      <div class="fit-grid" style="grid-template-columns:1fr 1fr;gap:.6rem;">
        {% if thumb_count > 0 %}
          {% for block in section.blocks %}
            {% if block.type == 'thumb' and block.settings.thumb != blank %}
              <div class="fit-thumb fit-card"><img src="{{ block.settings.thumb | image_url }}" alt="{{ block.settings.alt }}"></div>
            {% endif %}
          {% endfor %}
        {% else %}
          {% if section.settings.challenge1 != blank %}
            <div class="fit-thumb fit-card"><img src="{{ section.settings.challenge1 | image_url }}" alt="{{ section.settings.challenge1_alt }}"></div>
          {% endif %}
          {% if section.settings.challenge2 != blank %}
            <div class="fit-thumb fit-card"><img src="{{ section.settings.challenge2 | image_url }}" alt="{{ section.settings.challenge2_alt }}"></div>
          {% endif %}
          {% if section.settings.challenge3 != blank %}
            <div class="fit-thumb fit-card"><img src="{{ section.settings.challenge3 | image_url }}" alt="{{ section.settings.challenge3_alt }}"></div>
          {% endif %}
          {% if section.settings.challenge4 != blank %}
            <div class="fit-thumb fit-card"><img src="{{ section.settings.challenge4 | image_url }}" alt="{{ section.settings.challenge4_alt }}"></div>
          {% endif %}
        {% endif %}
      </div>
    </div>
  </div>
</section>

