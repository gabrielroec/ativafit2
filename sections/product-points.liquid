<style>
  .product-points-section {
    width: 100%;
    max-width: 1370px;
    margin: 60px auto;
    padding: 0 20px;
  }
  .points-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }
  .point-item {
    flex: 1;
    min-width: 180px;
    max-width: 220px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    transition: transform 0.3s ease
    , box-shadow 0.3s ease;
  }
  .point-item:hover {
    transform: translateY(-5px);
  }
  .point-icon {
    width: 70px;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ section.settings.icon_circle_color }};
    color: white;
    border-radius: 50%;
    margin-bottom: 18px;
    box-shadow: 0 8px 20px rgba({{ section.settings.icon_circle_color_rgb }}, 0.25);
  }
  .point-icon svg {
    color: white;
    stroke: white;
  }
  .point-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
    justify-content: center;
  }
  .point-title {
    font-size: 16px;
    font-weight: bold;
    margin: 0;
    color: {{ section.settings.title_color }};
    line-height: 1.4;
    min-height: 2.8em;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  @media screen and (max-width: 1024px) {
    .product-points-section {
      margin: 40px auto;
    }
    .points-container {
      gap: 20px;
    }
    .point-item {
      min-width: 160px;
      padding: 20px 10px;
    }
    .point-icon {
      width: 60px;
      height: 60px;
      margin-bottom: 15px;
    }
    .point-title {
      font-size: 15px;
    }
  }
  @media screen and (max-width: 767px) {
    .points-container {
      flex-direction: row;
      flex-wrap: wrap;
      align-items: stretch;
      gap: 15px;
    }
    .point-item {
      min-width: calc(50% - 15px);
      max-width: calc(50% - 15px);
      padding: 15px 10px;
    }
    .point-icon {
      width: 50px;
      height: 50px;
      margin-bottom: 10px;
    }

  }
  @media screen and (max-width: 480px) {
    .point-item {
      min-width: 100%;
      max-width: 100%;
      flex-direction: row;
      text-align: left;
      padding: 12px 15px;
      align-items: center;
    }
    .point-icon {
      margin-bottom: 0;
      margin-right: 15px;
      flex-shrink: 0;
    }
    .point-content {
      align-items: flex-start;
    }
    .point-title {
      min-height: auto;
      justify-content: flex-start;
    }
  }
</style>

