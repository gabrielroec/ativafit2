{%- liquid
  assign section_id = 'CollectionGridSimple-' | append: section.id
-%}

{%- if collection != blank -%}
  <section id="{{ section_id }}" class="collection-grid-simple">
    {%- paginate collection.products by section.settings.products_per_page -%}
      <div class="collection-grid-simple__container">
        <div class="collection-grid-simple__grid">
          {%- for product in collection.products -%}
            <div class="collection-grid-simple__item">
              {%- render 'product-card-simple', product: product -%}
            </div>
          {%- endfor -%}
        </div>
      </div>

      {%- if section.settings.show_pagination and paginate.pages > 1 -%}
        <div class="collection-grid-simple__pagination">
          {%- render 'pagination', paginate: paginate -%}
        </div>
      {%- endif -%}
    {%- endpaginate -%}
  </section>
{%- endif -%}

<style>
  #{{ section_id }} {
    padding-top: {{ section.settings.padding_top | default: 24 }}px;
    padding-bottom: {{ section.settings.padding_bottom | default: 24 }}px;
  }
  #{{ section_id }} .collection-grid-simple__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 16px;
  }
  #{{ section_id }} .collection-grid-simple__grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 20px;
  }
  #{{ section_id }} .collection-grid-simple__item {
    width: 100%;
    display: flex;
  }
  #{{ section_id }} .product-card-simple__link {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    border: 1px solid #e5e5e5;
    background: #ffffff;
    border-radius: 10px;
    height: 100%;
  }
  #{{ section_id }} .product-card-simple__image {
    position: relative;
    background: #f2f2f2;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    flex-shrink: 0;
  }
  #{{ section_id }} .product-card-simple__image img,
  #{{ section_id }} .product-card-simple__image svg {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }
  #{{ section_id }} .product-card-simple__content {
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex: 1;
  }
  #{{ section_id }} .product-card-simple__title {
    font-size: 16px!important;
    line-height: 1.3!important;
    margin: 0!important;
    font-weight: 700!important;
  }
  #{{ section_id }} .product-card-simple__price {
    display: flex;
    align-items: baseline;
    gap: 8px;
    line-height: 1!important;
  }
  #{{ section_id }} .product-card-simple__price-current {
    color: #eb701f;
    font-weight: 600;
    line-height: 1!important;
  }
  #{{ section_id }} .product-card-simple__price-compare {
    color: #555555;
    text-decoration: line-through;
    font-size: 0.9em;
  }
  #{{ section_id }} .product-card-simple__rating {
    display: flex!important;
    align-items: center!important;
    gap: 6px!important;
    font-size: 16px!important;
    color: #000000!important;
    line-height: 1!important;
  }
  #{{ section_id }} .product-card-simple__stars {
    display: inline-flex;
    gap: 2px;
    line-height: 1;
  }
  #{{ section_id }} .product-card-simple__star {
    font-size: 20px!important;
    line-height: 1;
    color: #b5b5b5;
  }
  #{{ section_id }} .product-card-simple__star--active {
    color: #000000;
  }
 
  @media (max-width: 749px) {
    #{{ section_id }} .collection-grid-simple__grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 12px;
    }
  }

   @media (max-width: 425px) {
     #{{ section_id }} .product-card-simple__stars {
    display: inline-flex;
    gap: 1px;
    line-height: 1;
  }
  #{{ section_id }} .product-card-simple__star, #{{ section_id }} .product-card-simple__rating-value, #{{ section_id }} .product-card-simple__rating-count {
    font-size: 14px!important;
  }
 
  }

   @media (max-width: 340px) {
     #{{ section_id }} .product-card-simple__stars {
    display: inline-flex;
    gap: 1px;
    line-height: 1;
  }
  #{{ section_id }} .product-card-simple__star, #{{ section_id }} .product-card-simple__rating-value, #{{ section_id }} .product-card-simple__rating-count {
    font-size: 12px!important;
  }
 
  }
</style>

{% schema %}
{
  "name": "Collection Grid Simple",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products per page",
      "min": 3,
      "max": 48,
      "step": 3,
      "default": 12
    },
    {
      "type": "checkbox",
      "id": "show_pagination",
      "label": "Show pagination",
      "default": true
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top (px)",
      "min": 0,
      "max": 120,
      "step": 4,
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom (px)",
      "min": 0,
      "max": 120,
      "step": 4,
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Collection Grid Simple"
    }
  ]
}
{% endschema %}
