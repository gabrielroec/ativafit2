<style>
  .grid-reviews {
    padding: 80px 20px 40px;
    max-width: 1750px;
    margin: 0 auto;
  }

  .grid-reviews__header {
    text-align: center;
    margin-bottom: 0;
  }

  .grid-reviews__title {
    font-size: 50px;
    text-transform: uppercase;
    line-height: 1.2;
    margin: 0 !important;
    text-align: left;
  }

  .grid-reviews__subtitle {
    font-size: 18px;
    color: #666;
    text-align: left;
  }

  .grid-reviews__container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
    align-items: start;
    margin-top: 40px;
  }

  .grid-reviews__column {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .grid-reviews__item {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    width: 100%;
  }

  .grid-reviews__text {
    padding: 30px;
    display: flex;
    flex-direction: column;
  }

  .grid-reviews__avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    font-weight: 600;
    color: #333;
    margin-bottom: 20px;
  }

  .grid-reviews__stars {
    display: flex;
    gap: 4px;
    margin-bottom: 16px;
    color: #FFD700;
  }

  .grid-reviews__quote {
    font-size: 18px;
    line-height: 1;
    margin-bottom: 0;
    font-family: "Barlow";
  }

  .grid-reviews__author {
    font-weight: 600;
    color: #666;
  }

  .grid-reviews__video {
    position: relative;
    padding-bottom: 177.77%;
    height: 0;
    background: #000;
  }

  .grid-reviews__video iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .grid-reviews__avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    font-weight: 600;
    color: #333;
    flex-shrink: 0;
  }

  .grid-reviews__user-info {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .grid-reviews__author {
    font-weight: 600;
    color: #333;
    font-size: 16px;
    line-height: 1.2;
  }

  .grid-reviews__stars {
    display: flex;
    gap: 4px;
    color: #FFD700;
    font-size: 14px;
  }

  .grid-reviews__avatar-wrapper {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  {%- if request.page_type == 'collection' -%}
    .grid-reviews {
      max-width: 1350px;
      margin: 0 auto !important;
      padding: 0 !important;
    }

    .grid-reviews__title {
      font-size: 36px !important;
    }
  {%- endif -%}

  @media screen and (max-width: 1200px) {
    .grid-reviews__container {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 767px) {
    .grid-reviews__container {
      grid-template-columns: repeat(2, 1fr);
      gap: 10px;
    }
    .grid-reviews__column {
      gap: 10px;
    }
    .grid-reviews__title {
      font-size: 36px;
    }
    .grid-reviews__quote {
      line-height: 1.4;
      font-size: 12px;
    }
    .grid-reviews__author {
      font-size: 12px;
      text-align: left;
    }
    .grid-reviews__text {
      padding: 10px;
    }


  }
  #shopify-section-template--17360526147667__grid_reviews .grid-reviews,
  #shopify-section-template--17362082562131__grid_reviews .grid-reviews {
    padding: 40px 16px 60px !important;
  }
</style>

<div class="grid-reviews">
  <div class="grid-reviews__header">
    {% if section.settings.title != blank %}
      <h2 class="grid-reviews__title black">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.subtitle != blank %}
      <p class="grid-reviews__subtitle regular">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="grid-reviews__container">
    <!-- Simplificando a lÃ³gica das colunas -->
    <div class="grid-reviews__column">
      {% for block in section.blocks %}
        {% if block.settings.column == '1' %}
          {% render 'grid-review-block'
            , block: block %}
        {% endif %}
      {% endfor %}
    </div>

    <div class="grid-reviews__column">
      {% for block in section.blocks %}
        {% if block.settings.column == '2' %}
          {% render 'grid-review-block'
            , block: block %}
        {% endif %}
      {% endfor %}
    </div>

    <div class="grid-reviews__column">
      {% for block in section.blocks %}
        {% if block.settings.column == '3' %}
          {% render 'grid-review-block'
            , block: block %}
        {% endif %}
      {% endfor %}
    </div>

    <div class="grid-reviews__column">
      {% for block in section.blocks %}
        {% if block.settings.column == '4' %}
          {% render 'grid-review-block'
            , block: block %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Grid Reviews",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Thousands of Trusted Reviews"
      }, {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "From Extraordinary People Like You"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Text Review",
        "settings": [
          {
            "type": "select",
            "id": "column",
            "label": "Column",
            "options": [
              {
                "value": "1",
                "label": "Column 1"
              }, {
                "value": "2",
                "label": "Column 2"
              }, {
                "value": "3",
                "label": "Column 3"
              }, {
                "value": "4",
                "label": "Column 4"
              }
            ],
            "default": "1"
          }, {
            "type": "range",
            "id": "rating",
            "min": 1,
            "max": 5,
            "step": 1,
            "label": "Rating",
            "default": 5
          }, {
            "type": "textarea",
            "id": "text",
            "label": "Review text"
          }, {
            "type": "text",
            "id": "author",
            "label": "Author name"
          }
        ]
      }, {
        "type": "video",
        "name": "YouTube Video",
        "settings": [
          {
            "type": "select",
            "id": "column",
            "label": "Column",
            "options": [
              {
                "value": "1",
                "label": "Column 1"
              }, {
                "value": "2",
                "label": "Column 2"
              }, {
                "value": "3",
                "label": "Column 3"
              }, {
                "value": "4",
                "label": "Column 4"
              }
            ],
            "default": "1"
          }, {
            "type": "url",
            "id": "youtube_url",
            "label": "YouTube URL",
            "info": "Paste your YouTube video link here"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Grid Reviews",
        "blocks": [
          {
            "type": "text"
          }, {
            "type": "video"
          }
        ]
      }
    ]
  }
{% endschema %}