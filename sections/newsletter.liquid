<style>
  .section-wrapper {
    background: #111;
    width: 100%;
  }
  .newsletter {
    color: #fff;
    padding: 100px 20px;
  }

  .newsletter__container {
    display: flex;
    align-items: start;
    justify-content: space-between;
    max-width: 1750px;
    margin: 0 auto;
  }

  .newsletter__title {
    font-size: 50px;
    font-weight: 900;
    letter-spacing: -3px;
    line-height: 1;
    text-align: left;
    word-spacing: 10px;
    margin: 0;
    max-width: 650px;
  }

  .newsletter__subtitle {
    font-size: 16px;
    line-height: 1.5;
    margin: 0;
    color: #fff;
    text-transform: uppercase;
    max-width: 600px;

  }

  .newsletter__form {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .newsletter__form-wrapper {
    display: flex;
    width: 100%;
    border: 1px solid #fff;
  }

  .newsletter__input {
    flex: 1;
    height: 60px;
    padding: 0 20px;
    border: none;
    background: #fff;
    color: #212121;
    font-size: 16px;
  }


  .newsletter__input::placeholder {
    color: #212121;
    text-transform: uppercase;
  }

  .newsletter__button {
    width: 200px;
    height: 60px;
    background: #000;
    border: none;
    color: #fff;
    font-weight: 600;
    font-size: 16px;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .newsletter__button:hover {
    background: #333;
  }

  .newsletter__privacy {
    font-size: 14px;
    color: #fff;
    text-transform: uppercase;
  }

  .newsletter__privacy a {
    color: #fff;
    text-decoration: none;
    font-weight: 600;
  }

  .newsletter__privacy a:hover {
    text-decoration: underline;
  }

  @media screen and (max-width: 990px) {
    .newsletter__title {
      font-size: 50px;
    }
  }

  @media screen and (max-width: 768px) {
    .newsletter {
      padding: 60px 20px;
    }

    .newsletter__title {
      font-size: 40px;
    }

    .newsletter__form-wrapper {
      flex-direction: column;
    }

    .newsletter__input {
      width: 100%;
      border-bottom: 1px solid #fff;
    }

    .newsletter__button {
      width: 100%;
    }
  }
  @media screen and (max-width: 768px) {
    .newsletter__container {
      flex-direction: column;
      align-items: center;
      gap: 20px;
    }
  }
  @media screen and (max-width: 480px) {
    .newsletter__title {
      font-size: 36px;
      letter-spacing: -1px;
    }
  }
</style>

<section class="section-wrapper">
  <div class="container">

    {%- if section.settings.content != blank -%}
      <div class="rte">
        {{ section.settings.content }}
      </div>
    {%- endif -%}

    {%- assign newsletter_id = 'newsletter-' | append: section.id -%}

    <div class="newsletter">
      <div class="newsletter__container">
        <div class="newsletter__content">
          <h2 class="newsletter__title black">{{ section.settings.title }}</h2>
          <p class="newsletter__subtitle regular">{{ section.settings.subtitle }}</p>
        </div>

        <div class="newsletter__form">
          {%- form 'customer'
            , id: 'newsletter-form'
            , class: 'newsletter__form' -%}
            <input
              type="hidden"
              name="contact[tags]"
              value="newsletter">

            <div class="newsletter__form-wrapper">
              <input
                type="email"
                name="contact[email]"
                id="newsletter-email"
                class="newsletter__input regular"
                placeholder="{{ section.settings.placeholder }}"
                required>

              <button type="submit" class="newsletter__button condensed-bold">
                {{ section.settings.button_text }}
              </button>
            </div>

            <p class="newsletter__privacy regular">
              {{ section.settings.privacy_text }}
              <a href="{{ section.settings.privacy_link }}">{{ section.settings.privacy_link_text }}</a>
              {{ section.settings.privacy_text_after }}
            </p>
          {%- endform -%}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Newsletter",
    "settings": [
      {
        "type": "paragraph",
        "content": "Customers who subscribe will have their email address added to the \"accepts marketing\" [customer list](/admin/customers?query=&accepts_marketing=1)."
      },
      {
        "type": "text",
        "id": "title",
        "label": "Título",
        "default": "GET THE LATEST\nWORKOUT DROPS FIRST"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtítulo",
        "default": "GET EXCLUSIVE EARLY ACCESS TO NOW DROPS, LIMITED-TIME DEALS, AND PROMOTIONS STRAIGHT TO YOUR INBOX."
      },
      {
        "type": "text",
        "id": "placeholder",
        "label": "Placeholder do Email",
        "default": "ENTER YOUR EMAIL ADDRESS"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Texto do Botão",
        "default": "SUBSCRIBE"
      }, {
        "type": "text",
        "id": "privacy_text",
        "label": "Texto de Privacidade (Antes do Link)",
        "default": "WE RESPECT YOUR PRIVACY AND WON'T SPAM YOU. UNSUBSCRIBE ANYTIME. SEE OUR"
      }, {
        "type": "text",
        "id": "privacy_link_text",
        "label": "Texto do Link de Privacidade",
        "default": "PRIVACY POLICY"
      }, {
        "type": "text",
        "id": "privacy_text_after",
        "label": "Texto de Privacidade (Depois do Link)",
        "default": "FOR DETAILS."
      }, {
        "type": "url",
        "id": "privacy_link",
        "label": "Link da Política de Privacidade"
      }, {
        "type": "color",
        "id": "text",
        "label": "Text",
        "default": "#ffffff"
      }
    ],
    "presets": [
      {
        "category": "Promotional",
        "name": "Newsletter",
        "settings": {}
      }
    ]
  }
{% endschema %}