{% comment %} 
                                                                                Values Grid Section - Estilo Peloton
                                                                                Seção com missão centralizada + grid de 3 valores/pilares 
{% endcomment %}

<section class="values-grid" data-section-id="{{ section.id }}">
  <div class="values-grid__container">
    <!-- Mission Statement -->
    {% if section.settings.mission_heading != blank %}
      <div class="values-grid__mission">
        {% if section.settings.mission_label != blank %}
          <p class="values-grid__mission-label condensed-bold">{{ section.settings.mission_label }}</p>
        {% endif %}
        <h2 class="values-grid__mission-heading black">{{ section.settings.mission_heading }}</h2>
      </div>
    {% endif %}

    <!-- Values Title -->
    {% if section.settings.values_heading != blank %}
      <div class="values-grid__values-header">
        <h3 class="values-grid__values-heading bold">{{ section.settings.values_heading }}</h3>
      </div>
    {% endif %}

    <!-- Values Grid -->
    {% if section.blocks.size > 0 %}
      <div class="values-grid__grid">
        {% for block in section.blocks %}
          <div class="values-grid__item" {{ block.shopify_attributes }}>
            {% if block.settings.number != blank %}
              <div class="values-grid__number">
                <span class="black">{{ block.settings.number }}</span>
              </div>
            {% endif %}

            {% if block.settings.title != blank %}
              <h4 class="values-grid__item-title bold">{{ block.settings.title }}</h4>
            {% endif %}

            {% if block.settings.text != blank %}
              <p class="values-grid__item-text regular">{{ block.settings.text }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% style %}
  .values-grid {
    background: #ffffff;
    padding: 40px 0;
  }

  .values-grid__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .values-grid__mission {
    text-align: center;
    margin-bottom: 40px;
  }

  .values-grid__mission-label {
    font-size: 16px;
    color: #EB701F;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .values-grid__mission-heading {
    font-size: 56px;
    font-weight: 700;
    color: #000000;
    line-height: 1.2;
    letter-spacing: -0.5px;
    margin: 0;
  }

  .values-grid__values-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .values-grid__values-heading {
    font-size: 36px;
    font-weight: 600;
    color: #000000;
    margin: 0;
  }

  .values-grid__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 60px;
  }

  .values-grid__item {
    text-align: center;
    padding: 40px 20px;
    background: #f8f8f8;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .values-grid__item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .values-grid__number {
    font-size: 48px;
    margin-bottom: 20px;
    line-height: 1;
  }

  .values-grid__item-title {
    font-size: 24px;
    font-weight: 600;
    color: #000000;
    margin-bottom: 16px;
    line-height: 1.3;
  }

  .values-grid__item-text {
    font-size: 16px;
    color: #666666;
    line-height: 1.6;
    margin: 0;
  }

  /* Responsive */
  @media screen and (max-width: 1024px) {
    .values-grid {
      padding: 60px 0;
      margin: 0 0 80px;
    }

    .values-grid__mission {
      margin-bottom: 60px;
    }

    .values-grid__mission-heading {
      font-size: 48px;
    }

    .values-grid__grid {
      gap: 40px;
    }
  }

  @media screen and (max-width: 768px) {
    .values-grid {
      padding: 50px 0;
      margin: 0 0 60px;
    }

    .values-grid__container {
      padding: 0 15px;
    }

    .values-grid__mission {
      margin-bottom: 50px;
    }

    .values-grid__mission-heading {
      font-size: 36px;
    }

    .values-grid__values-heading {
      font-size: 28px;
    }

    .values-grid__grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .values-grid__item {
      padding: 30px 20px;
    }

    .values-grid__number {
      font-size: 36px;
      margin-bottom: 16px;
    }

    .values-grid__item-title {
      font-size: 20px;
      margin-bottom: 12px;
    }

    .values-grid__item-text {
      font-size: 15px;
    }
  }

  @media screen and (max-width: 480px) {
    .values-grid__mission-heading {
      font-size: 28px;
    }

    .values-grid__values-heading {
      font-size: 24px;
    }

    .values-grid__item {
      padding: 25px 15px;
    }
  }
{% endstyle %}

