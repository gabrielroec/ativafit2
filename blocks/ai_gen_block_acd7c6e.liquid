{
  "name": "Home gym headlines",
  "settings": [
    {
      "type": "header",
      "content": "Main headline (H2)"
    },
    {
      "type": "text",
      "id": "h2_text_before",
      "label": "Text before highlight",
      "default": "Your"
    },
    {
      "type": "text",
      "id": "h2_highlight_text",
      "label": "Highlighted text",
      "default": "Home"
    },
    {
      "type": "text",
      "id": "h2_text_after",
      "label": "Text after highlight",
      "default": ", Your Gym"
    },
    {
      "type": "range",
      "id": "h2_font_size",
      "label": "Font size",
      "min": 16,
      "max": 72,
      "step": 2,
      "unit": "px",
      "default": 36
    },
    {
      "type": "color",
      "id": "h2_color",
      "label": "Text color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "h2_highlight_color",
      "label": "Highlight color",
      "default": "#eb701f"
    },
    {
      "type": "header",
      "content": "Subheadline (H4)"
    },
    {
      "type": "text",
      "id": "h4_text",
      "label": "Subheadline text",
      "default": "An exclusive discount will be applied at checkout."
    },
    {
      "type": "range",
      "id": "h4_font_size",
      "label": "Font size",
      "min": 12,
      "max": 36,
      "step": 1,
      "unit": "px",
      "default": 18
    },
    {
      "type": "color",
      "id": "h4_color",
      "label": "Text color",
      "default": "#eb701f"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "spacing_between_headlines",
      "label": "Space between headlines",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "label": "Left and right padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Top margin",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Bottom margin",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Home gym headlines"
    }
  ]
}
{% endschema %}