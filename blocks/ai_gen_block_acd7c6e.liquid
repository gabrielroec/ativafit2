{% doc %}
  @prompt
    Set a H2 headling, reading " Your Home, Your Gym". The words "Home" should be highlighted in a contrasting color (hex #eb701f).
    Below that, set a H4 headline, reading "An exclusive discount will be apllied at checkout.", and highlight it in a contrasting color (hex #eb701f).
    The headlines should be middle-centered.
    Please also enable us to edit the font size, paddings or margins,, Please also set the text editable., Please set the font weight of the subheadline 500, I need ensure a space between "Your" and "Home"

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-headline-block-{{ ai_gen_id }} {
    text-align: center;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    margin: {{ block.settings.margin_top }}px 0 {{ block.settings.margin_bottom }}px;
  }

  .ai-headline-block__h2-{{ ai_gen_id }} {
    font-size: {{ block.settings.h2_font_size }}px;
    color: {{ block.settings.h2_color }};
    margin: 0 0 {{ block.settings.spacing_between_headlines }}px;
    line-height: 1.2;
  }

  .ai-headline-block__h2-highlight-{{ ai_gen_id }} {
    color: {{ block.settings.h2_highlight_color }};
  }

  .ai-headline-block__h4-{{ ai_gen_id }} {
    font-size: {{ block.settings.h4_font_size }}px;
    color: {{ block.settings.h4_color }};
    font-weight: 500;
    margin: 0;line-height: 1.3;
  }

  @media screen and (max-width: 749px) {
    .ai-headline-block__h2-{{ ai_gen_id }} {
      font-size: {{ block.settings.h2_font_size | times: 0.8 }}px;
    }

    .ai-headline-block__h4-{{ ai_gen_id }} {
      font-size: {{ block.settings.h4_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}<div class="ai-headline-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <h2 class="ai-headline-block__h2-{{ ai_gen_id }}">
    {{ block.settings.h2_text_before }} <span class="ai-headline-block__h2-highlight-{{ ai_gen_id }}">{{ block.settings.h2_highlight_text }}</span>{{ block.settings.h2_text_after }}
  </h2>
  <h4 class="ai-headline-block__h4-{{ ai_gen_id }}">
    {{ block.settings.h4_text }}
  </h4>
</div>

