{% doc %}
  @prompt
    a section that can show to clients they can get a free massgae gun gift if they buy above 400 dollars
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-gift-promo-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
  }

  .ai-gift-promo-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: {{ block.settings.content_gap }}px;
    flex-wrap: wrap;
  }

  .ai-gift-promo-image-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_width }}px;
  }

  .ai-gift-promo-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-gift-promo-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-gift-promo-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
  }

  .ai-gift-promo-content-{{ ai_gen_id }} {
    flex: 1;
    min-width: 200px;
  }

  .ai-gift-promo-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-gift-promo-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0;
    line-height: 1.5;
  }

  .ai-gift-promo-amount-{{ ai_gen_id }} {
    color: {{ block.settings.amount_color }};
    font-weight: 700;
  }

  .ai-gift-promo-cta-{{ ai_gen_id }} {
    flex-shrink: 0;
  }

  .ai-gift-promo-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-gift-promo-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_text_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-gift-promo-container-{{ ai_gen_id }} {
      justify-content: center;
      text-align: center;
    }

    .ai-gift-promo-image-{{ ai_gen_id }} {
      width: {{ block.settings.image_width | times: 0.8 }}px;
      height: {{ block.settings.image_width | times: 0.8 }}px;
    }

    .ai-gift-promo-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.9 }}px;
    }

    .ai-gift-promo-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-gift-promo-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-gift-promo-container-{{ ai_gen_id }}">
    {% if block.settings.show_image %}
      <div class="ai-gift-promo-image-{{ ai_gen_id }}">
        {% if block.settings.gift_image %}
          <img
            src="{{ block.settings.gift_image | image_url: width: 400 }}"
            alt="{{ block.settings.gift_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image_width }}"
            height="{{ block.settings.image_width }}"
          >
        {% else %}
          <div class="ai-gift-promo-image-placeholder-{{ ai_gen_id }}">
            {{ 'product-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-gift-promo-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-gift-promo-heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-gift-promo-text-{{ ai_gen_id }}">
          {{ block.settings.description }}
          {% if block.settings.show_amount %}
            <span class="ai-gift-promo-amount-{{ ai_gen_id }}">
              {{ block.settings.minimum_amount | money }}
            </span>
          {% endif %}
        </div>
      {% endif %}
    </div>

    {% if block.settings.show_button and block.settings.button_text != blank %}
      <div class="ai-gift-promo-cta-{{ ai_gen_id }}">
        <a
          href="{{ block.settings.button_link }}"
          class="ai-gift-promo-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

