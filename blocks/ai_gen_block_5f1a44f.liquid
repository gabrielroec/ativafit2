{% doc %}
  @prompt
    generate a new arrival section, The new arrival is a single product not a collection, don't fetch product image, i want to use a specific image. i also want to customize description of this section. keep the CTA button, 就是我要这个板块横向撑满屏幕，左边图片占一半，右边文字占一半。但文字背景为#363434 这颜色
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-new-arrival-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-new-arrival__content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: {{ block.settings.min_height }}px;
  }

  .ai-new-arrival__content-{{ ai_gen_id }}.reverse {
    direction: rtl;
  }

  .ai-new-arrival__content-{{ ai_gen_id }}.reverse > * {
    direction: ltr;
  }

  .ai-new-arrival__image-column-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-new-arrival__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-new-arrival__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    position: relative;
  }

  .ai-new-arrival__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-new-arrival__badge-{{ ai_gen_id }} {
    position: absolute;
    top: 30px;
    left: 30px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 10px 20px;
    font-size: 14px;
    font-weight: 600;
    border-radius: 4px;
    text-transform: uppercase;
    z-index: 1;
  }

  .ai-new-arrival__text-column-{{ ai_gen_id }} {
    background-color: {{ block.settings.text_background_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 60px 80px;
  }

  .ai-new-arrival__text-content-{{ ai_gen_id }} {
    max-width: 600px;
    width: 100%;
  }

  .ai-new-arrival__label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_size }}px;
    color: {{ block.settings.accent_color }};
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 0 0 12px;
  }

  .ai-new-arrival__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 20px;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-new-arrival__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 30px;
    line-height: 1.6;
  }

  .ai-new-arrival__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 16px 40px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    text-align: center;
  }

  .ai-new-arrival__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-new-arrival__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 989px) {
    .ai-new-arrival__content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-new-arrival__content-{{ ai_gen_id }}.reverse {
      direction: ltr;
    }

    .ai-new-arrival__text-column-{{ ai_gen_id }} {
      padding: 50px 40px;
    }

    .ai-new-arrival__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-new-arrival__text-column-{{ ai_gen_id }} {
      padding: 40px 20px;
    }

    .ai-new-arrival__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
    }

    .ai-new-arrival__button-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-new-arrival__badge-{{ ai_gen_id }} {
      top: 20px;
      left: 20px;
      padding: 8px 16px;
      font-size: 12px;
    }
  }
{% endstyle %}

<new-arrival-{{ ai_gen_id }} class="ai-new-arrival-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-new-arrival__content-{{ ai_gen_id }} {% if block.settings.image_position == 'right' %}reverse{% endif %}">
    <div class="ai-new-arrival__image-column-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 1500 }}"
          alt="{{ block.settings.image.alt | escape }}"
          class="ai-new-arrival__image-{{ ai_gen_id }}"
          loading="lazy"
          width="1500"
          height="1000"
        >
      {% else %}
        <div class="ai-new-arrival__image-placeholder-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}
          <div class="ai-new-arrival__empty-state-{{ ai_gen_id }}">
            Next, add an image
          </div>
        </div>
      {% endif %}
      
      {% if block.settings.show_badge %}
        <span class="ai-new-arrival__badge-{{ ai_gen_id }}">{{ block.settings.badge_text }}</span>
      {% endif %}
    </div>

    <div class="ai-new-arrival__text-column-{{ ai_gen_id }}">
      <div class="ai-new-arrival__text-content-{{ ai_gen_id }}">
        {% if block.settings.label != blank %}
          <p class="ai-new-arrival__label-{{ ai_gen_id }}">{{ block.settings.label }}</p>
        {% endif %}

        {% if block.settings.heading != blank %}
          <h2 class="ai-new-arrival__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}

        {% if block.settings.description != blank %}
          <div class="ai-new-arrival__description-{{ ai_gen_id }}">
            {{ block.settings.description }}
          </div>
        {% endif %}

        {% if block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-new-arrival__button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</new-arrival-{{ ai_gen_id }}>

<script>
  (function() {
    class NewArrival{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupAccessibility();
      }

      setupAccessibility() {
        const button = this.querySelector('.ai-new-arrival__button-{{ ai_gen_id }}');
        if (button) {
          button.setAttribute('role', 'link');
        }
      }
    }

    customElements.define('new-arrival-{{ ai_gen_id }}', NewArrival{{ ai_gen_id }});
  })();
</script>

