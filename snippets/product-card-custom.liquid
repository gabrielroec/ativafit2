        .desktop-form {
          display: none !important;
          opacity: 0 !important;
          visibility: hidden !important;
        }

        .product-card:hover .controls,
        .product-card:hover .desktop-form {
          display: none !important;
          opacity: 0 !important;
          visibility: hidden !important;
