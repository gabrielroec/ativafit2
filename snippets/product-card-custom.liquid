        }

        .pcard-badges {
          gap: 4px;
          margin: 0 0 8px 0;
        }

        .pcard-badge {
          font-size: 10px;
          padding: 4px 8px;
          border-radius: 10px;
        }

        .price {
          font-size: 14px;
          margin-bottom: 10px;
          flex-shrink: 0;
          min-height: fit-content !important;
          display: flex;
          flex-direction: row;
          justify-content: flex-start;
          gap: 10px;
        }

        /* Esconder completamente controles desktop */
