{% comment %}
  Product Benefit Popups Component
  
  Renders popup modals for benefit information.
  
  Accepts:
  - section: {Object} Section object for settings
  
  Usage:
  {% render 'product-benefit-popups', section: section %}
{% endcomment %}

<!-- Benefit Info Popups -->
{%- if section.settings.benefit_1_enabled and section.settings.benefit_1_popup_content != blank -%}
<div class="halo-popup" id="benefit-popup-1">
  <div class="halo-popup-wrapper">
    <div class="halo-popup-header">
      <h5 class="halo-popup-title">{{ section.settings.benefit_1_popup_title | default: section.settings.benefit_1_title }}</h5>
      <button type="button" class="halo-popup-close" data-close-benefit="1" aria-label="Close">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" width="20" height="20">
          <path d="M 38.982422 6.9707031 A 2.0002 2.0002 0 0 0 37.585938 7.5859375 L 24 21.171875 L 10.414062 7.5859375 A 2.0002 2.0002 0 0 0 8.9785156 6.9804688 A 2.0002 2.0002 0 0 0 7.5859375 10.414062 L 21.171875 24 L 7.5859375 37.585938 A 2.0002 2.0002 0 1 0 10.414062 40.414062 L 24 26.828125 L 37.585938 40.414062 A 2.0002 2.0002 0 1 0 40.414062 37.585938 L 26.828125 24 L 40.414062 10.414062 A 2.0002 2.0002 0 0 0 38.982422 6.9707031 z"></path>
        </svg>
        Close
      </button>
    </div>
    <div class="halo-popup-content">
      {{ section.settings.benefit_1_popup_content }}
    </div>
  </div>
</div>
{%- endif -%}

